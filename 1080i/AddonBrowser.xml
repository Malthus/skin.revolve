<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">200</defaultcontrol>
    <menucontrol>9001</menucontrol>
	<views>52,51,55,54,56,58</views>

	<controls>
		<include name="FullscreenDimensions" />
		<include name="GlobalBackground" />

		<control type="button" id="200">
            <description>Skin Settings Initialisation</description>
			<visible>!Skin.HasSetting(RevolveConfiguration) + IsEmpty(Skin.String(Revolve.Configuration))</visible>
			<texturenofocus>-</texturenofocus>
            <texturefocus>-</texturefocus>
			<include name="DefaultSettingsForSkinSettings" />
			<onfocus>SetFocus(52)</onfocus>
		</control>

		<control type="button" id="200">
            <description>Skin Settings Migration</description>
			<visible>[Skin.HasSetting(RevolveConfiguration) | StringCompare(Skin.String(Revolve.Configuration),3.0.2)] + !StringCompare(Skin.String(Revolve.Configuration),4.1.1)</visible>
			<texturenofocus>-</texturenofocus>
            <texturefocus>-</texturefocus>
			<include name="MigratedValues" />
			<onfocus>SetFocus(52)</onfocus>
		</control>

		<control type="button" id="200">
            <description>Skin Settings Evasion</description>
			<visible>StringCompare(Skin.String(Revolve.Configuration),4.1.1)</visible>
			<texturenofocus>-</texturenofocus>
            <texturefocus>-</texturefocus>
			<onfocus>SetFocus(52)</onfocus>
		</control>

		<include name="CircleListView" />
		<include name="DropListView" />
		<include name="ThumbnailsView" />
		<include name="RevolveListView" />
		<include name="PanelsView" />
		<include name="RotateListView" />

		<control type="group" id="9000">
			<include name="SideMenu" />

			<control type="grouplist" id="9001">
                <include name="BeginOfButtonListForSideMenu" />

                <include name="ViewGroupLabelForSideMenu" />
				<include name="ViewTypeButtonForSideMenu" />
				<include name="SortCriteriumButtonForSideMenu" />
				<include name="SortOrderButtonForSideMenu" />
                <include name="NameForThumbnailsButtonForSideMenu" />
                <include name="DescriptionForLandscapeButtonForSideMenu" />
				<include name="LanguageFilterButtonForSideMenu" />
				<include name="HideBrokenButtonForSideMenu" />

                <include name="SettingsGroupLabelForSideMenu" />
                <include name="AddonUpdateButtonForSideMenu" />
				<include name="AutoUpdatesButtonForSideMenu" />
				<include name="NotificationsButtonForSideMenu" />

                <include name="EndOfButtonListForSideMenu" />
			</control>

            <include name="PlayerControlsForSideMenu" />
		</control>
        
		<include name="Overlay" />
        <include name="BackButton" />
		<include name="BusyDialogForSkinSettings" />
	</controls>
</window>
