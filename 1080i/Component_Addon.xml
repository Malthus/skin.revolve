<?xml version="1.0" encoding="UTF-8"?>
<includes>
    <include name="ElementLabelForGlobalSearchAddon">
        <param name="listid" default="0" />
        <param name="label" default="-" />
    
        <definition>
            <control type="group">
                <visible>Control.HasFocus($PARAM[listid])</visible>
        
                <control type="image">
                    <width>1240</width>
                    <height>35</height>
                    <aspectratio>stretch</aspectratio>
                    <texture colordiffuse="MainColor" border="20">controls/rectangle-fill.png</texture>
                </control>
                <control type="label">
                    <posx>20</posx>
                    <width>1240</width>
                    <height>30</height>
                    <font>DialogTextFont</font>
                    <textcolor>BackgroundColor</textcolor>
                    <align>left</align>
                    <label>$PARAM[label]</label>
                </control>
            </control>
            
            <control type="group">
                <visible>!Control.HasFocus($PARAM[listid])</visible>
        
                <control type="label">
                    <posx>20</posx>
                    <width>1240</width>
                    <height>30</height>
                    <font>DialogTextFont</font>
                    <textcolor>MainColor</textcolor>
                    <align>left</align>
                    <label>$PARAM[label]</label>
                </control>
            </control>
        </definition>
    </include>
</includes>
