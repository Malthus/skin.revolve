<?xml version="1.0" encoding="UTF-8"?>
<includes>
    <constant name="PosXForBigClock">1900</constant>
    <constant name="PosYForBigClock">10</constant>
    <include name="BigClock">
        <param name="posx" default="PosXForBigClock" />
        <param name="posy" default="PosYForBigClock" />
    
        <definition>
            <control type="group">
                <posx>$PARAM[posx]</posx>
                <posy>$PARAM[posy]</posy>

                <control type="group">
                    <visible>!SubString(System.Time(xx),M)</visible> 
                    <posx>0</posx>
                    <posy>0</posy>
                    <include content="TimeForBigClock" />
                </control>

                <control type="group">
                    <visible>SubString(System.Time(xx),M)</visible> 
                    <posx>-70</posx>
                    <posy>0</posy>
                    <include content="TimeForBigClock" />
                </control>
                    
                <control type="group">
                    <visible>SubString(System.Time(xx),M)</visible> 
                    <posx>-60</posx>
                    <posy>0</posy>
                    <include content="AmPmForBigClock" />
                </control>

                <control type="group">
                    <posx>0</posx>
                    <posy>120</posy>
                    <include content="DateForBigClock" />
                </control>
            </control>
        </definition>
    </include>
    
    <constant name="PosXForDefaultClock">1900</constant>
    <constant name="PosYForDefaultClock">20</constant>
    <include name="DefaultClock">
        <param name="posx" default="PosXForDefaultClock" />
        <param name="posy" default="PosYForDefaultClock" />

        <definition>
            <control type="group">
                <include content="OutlineLabel">
                    <param name="posx" value="$PARAM[posx]" />
                    <param name="posy" value="$PARAM[posy]" />
                    <param name="width" value="200" />
                    <param name="height" value="40" />
                    <param name="font" value="DefaultClockTimeFont" />
                    <param name="textcolor" value="$VAR[MainColor]" />
                    <param name="outlinesize" value="2" />
                    <param name="align" value="right" />
                    <param name="aligny" value="center" />
                    <param name="label" value="$INFO[System.Time(hh:mm)]" />
                </include>
            </control>
        </definition>
    </include>
    
    <include name="TimeForBigClock">
        <definition>
            <control type="group">
                <include content="OutlineLabel">
                    <param name="width" value="600" />
                    <param name="height" value="100" />
                    <param name="font" value="HugeClockTimeFont" />
                    <param name="textcolor" value="$VAR[MainColor]" />
                    <param name="outlinesize" value="2" />
                    <param name="align" value="right" />
                    <param name="aligny" value="center" />
                    <param name="label" value="$INFO[System.Time(hh:mm)]" />
                </include>
            </control>
        </definition>
    </include>
    
    <include name="DateForBigClock">
        <definition>
            <control type="group">
                <include content="OutlineLabel">
                    <param name="width" value="600" />
                    <param name="height" value="40" />
                    <param name="font" value="HugeClockDateFont" />
                    <param name="textcolor" value="$VAR[MainColor]" />
                    <param name="outlinesize" value="2" />
                    <param name="align" value="right" />
                    <param name="aligny" value="center" />
                    <param name="label" value="[UPPERCASE]$INFO[System.Date(DDD)][/UPPERCASE]" />
                </include>
            </control>

            <control type="group">
                <posy>40</posy>
                <include content="OutlineLabel">
                    <param name="width" value="600" />
                    <param name="height" value="40" />
                    <param name="font" value="HugeClockDateFont" />
                    <param name="textcolor" value="$VAR[MainColor]" />
                    <param name="outlinesize" value="2" />
                    <param name="align" value="right" />
                    <param name="aligny" value="center" />
                    <param name="label" value="[UPPERCASE]$INFO[System.Date(d mmm yyyy)][/UPPERCASE]" />
                </include>
            </control>
        </definition>
    </include>

    <include name="AmPmForBigClock">
        <definition>
            <control type="group">
                <visible>SubString(System.Time(xx),M)</visible> 
                        
                <control type="group">
                    <visible>SubString(System.Time(xx),A)</visible> 
                    <posy>0</posy>
                    <include content="OutlineLabel">
                        <param name="width" value="70" />
                        <param name="height" value="50" />
                        <param name="font" value="HugeClockAMPMFont" />
                        <param name="textcolor" value="$VAR[MainColor]" />
                        <param name="outlinesize" value="2" />
                        <param name="align" value="center" />
                        <param name="aligny" value="center" />
                        <param name="label" value="$LOCALIZE[31948]" />
                    </include>
                </control>
                
                <control type="group">
                    <visible>SubString(System.Time(xx),P)</visible> 
                    <posy>0</posy>
                    <include content="OutlineLabel">
                        <param name="width" value="70" />
                        <param name="height" value="50" />
                        <param name="font" value="HugeClockAMPMFont" />
                        <param name="textcolor" value="$VAR[MainColor]" />
                        <param name="outlinesize" value="2" />
                        <param name="align" value="center" />
                        <param name="aligny" value="center" />
                        <param name="label" value="$LOCALIZE[31949]" />
                    </include>
                </control>
                
                <control type="group">
                    <posy>58</posy>
                    <include content="OutlineLabel">
                        <param name="width" value="70" />
                        <param name="height" value="50" />
                        <param name="font" value="HugeClockAMPMFont" />
                        <param name="textcolor" value="$VAR[MainColor]" />
                        <param name="outlinesize" value="2" />
                        <param name="align" value="center" />
                        <param name="aligny" value="center" />
                        <param name="label" value="$LOCALIZE[31950]" />
                    </include>
                </control>
            </control>
        </definition>
    </include>
</includes>
