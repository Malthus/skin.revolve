	<include name="BasicDialog">
        <param name="height" default="220" />
    
        <definition>
            <control type="group">
                <control type="image">
                    <posx>0</posx>
                    <posy>-40</posy>
                    <include>UpperShadowForDialog</include>
                </control>
                <control type="image">
                    <posx>0</posx>
                    <posy>$PARAM[height]</posy>
                    <include>LowerShadowForDialog</include>
                </control>

                <control type="image">
                    <width>1920</width>
                    <height>$PARAM[height]</height>
                    <fadetime>100</fadetime>
                    <aspectratio>stretch</aspectratio>
                    <texture colordiffuse="BackgroundColor">white.png</texture>
                </control>
            </control>
        </definition>
	</include>

