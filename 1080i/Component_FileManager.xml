<includes>
	<include name="LeftListFrameForFileManager" description="Frame For File Manager">
		<animation effect="slide" tween="quadratic" easing="out" start="-1000,0" end="0,0" time="400" reversible="false">WindowOpen</animation>
		<animation effect="slide" delay="400" tween="quadratic" easing="in" start="0,0" end="-1000,0" time="400" reversible="false">WindowClose</animation>
        
		<control type="group">
			<control type="image">
				<posx>0</posx>
				<posy>0</posy>
				<width>900</width>
				<height>900</height>
				<fadetime>100</fadetime>
				<texture colordiffuse="MainColor" border="30" fallback="white.png">elements/poster-mask.png</texture>
				<aspectratio>stretch</aspectratio>
			</control>
			<control type="image">
				<posx>29</posx>
				<posy>58</posy>
				<width>866</width>
				<height>804</height>
				<fadetime>100</fadetime>
				<texture colordiffuse="BackgroundColor" border="20" fallback="white.png">controls/rectangle-fill.png</texture>
				<aspectratio>stretch</aspectratio>
			</control>
		</control>
	</include>
	
