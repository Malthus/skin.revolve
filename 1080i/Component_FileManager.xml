		</control>
		<control type="label">
			<posx>130</posx>
			<posy>50</posy>
			<width>730</width>
			<height>40</height>
			<font>DetailListItemFont</font>
			<textcolor>BackgroundColor</textcolor>
			<info>ListItem.Label2</info>
		</control>
	</include>
	
	<include name="SelectedListItemForFileManager" description="Selected Items For File Manager">
		<control type="image">
			<width>888</width>
			<height>100</height>
			<aspectratio>stretch</aspectratio>
			<texture colordiffuse="SelectColor" border="20">controls/rectangle-fill.png</texture>
