<?xml version="1.0" encoding="UTF-8"?>
<includes>
    <include name="FrameForFileManager">
        <param name="posx" default="0" />
        <param name="posy" default="0" />
        <param name="bordercolor" default="MainColor" />
        <param name="outlinecolor" default="BackgroundColor" />
        <param name="outlinesize" default="2" />
    
        <definition>
			<control type="group">
                <posx>$PARAM[posx]</posx>
                <posy>$PARAM[posy]</posy>
                
                <control type="image">
                    <posx>-$PARAM[outlinesize]</posx>
                    <posy>-$PARAM[outlinesize]</posy>
                    <width>880</width>
                    <height>840</height>
                    <texture colordiffuse="$PARAM[outlinecolor]" border="20" >controls/rectangle-clear.png</texture>
                    <aspectratio>stretch</aspectratio>
                </control>
                <control type="image">
                    <posx>$PARAM[outlinesize]</posx>
                    <posy>-$PARAM[outlinesize]</posy>
                    <width>880</width>
                    <height>840</height>
                    <texture colordiffuse="$PARAM[outlinecolor]" border="20" >controls/rectangle-clear.png</texture>
                    <aspectratio>stretch</aspectratio>
                </control>
                <control type="image">
                    <posx>$PARAM[outlinesize]</posx>
                    <posy>-$PARAM[outlinesize]</posy>
                    <width>880</width>
                    <height>840</height>
                    <texture colordiffuse="$PARAM[outlinecolor]" border="20" >controls/rectangle-clear.png</texture>
                    <aspectratio>stretch</aspectratio>
                </control>
                <control type="image">
                    <posx>$PARAM[outlinesize]</posx>
                    <posy>$PARAM[outlinesize]</posy>
                    <width>880</width>
                    <height>840</height>
                    <texture colordiffuse="$PARAM[outlinecolor]" border="20" >controls/rectangle-clear.png</texture>
                    <aspectratio>stretch</aspectratio>
                </control>
                <control type="image">
                    <width>880</width>
                    <height>840</height>
                    <texture colordiffuse="$PARAM[bordercolor]" border="20" >controls/rectangle-clear.png</texture>
                    <aspectratio>stretch</aspectratio>
                </control>
			</control>
        </definition>
	</include>    
    
	<include name="LabelsForFileManager">
        <param name="titleid" default="0" />
        <param name="infoid" default="0" />
        <param name="titlelabel" default="-" />
        <param name="posx" default="0" />
        <param name="posy" default="0" />
        <param name="textcolor" default="MainColor" />
        <param name="outlinecolor" default="BackgroundColor" />
    
        <definition>
			<control type="group">
                <posx>$PARAM[posx]</posx>
                <posy>$PARAM[posy]</posy>
                
                <include name="BackgroundForOutlineLabel">
                    <param name="posx" value="20" />
                    <param name="posy" value="0" />
                    <param name="width" value="840" />
                    <param name="height" value="40" />
                    <param name="font" value="DialogTextFont" />
                    <param name="outlinecolor" value="$PARAM[outlinecolor]" />
                    <param name="outlinesize" value="2" />
                    <param name="align" value="left" />
                    <param name="aligny" value="center" />
                    <param name="label" value="$INFO[Control.GetLabel($PARAM[titleid])]" />
                </include>
                
				<control type="label" id="$PARAM[titleid]">
					<posx>20</posx>
					<posy>0</posy>
					<width>840</width>
					<height>40</height>
					<textcolor>$PARAM[textcolor]</textcolor>
					<font>DialogTextFont</font>
					<align>left</align>
					<aligny>center</aligny>
                    <label>$PARAM[titlelabel]</label>
				</control>
				
                <include name="BackgroundForOutlineLabel">
                    <param name="posx" value="20" />
                    <param name="posy" value="840" />
                    <param name="width" value="840" />
                    <param name="height" value="30" />
                    <param name="font" value="DetailListItemFont" />
                    <param name="outlinecolor" value="$PARAM[outlinecolor]" />
                    <param name="outlinesize" value="2" />
                    <param name="align" value="left" />
                    <param name="aligny" value="center" />
                    <param name="label" value="$INFO[Control.GetLabel($PARAM[infoid])]" />
                </include>
                
				<control type="label" id="$PARAM[infoid]">
					<posx>20</posx>
					<posy>840</posy>
					<width>840</width>
					<height>30</height>
					<textcolor>$PARAM[textcolor]</textcolor>
                    <font>DetailListItemFont</font>
					<align>left</align>
					<aligny>center</aligny>
					<label>-</label>
				</control>
			</control>
        </definition>
	</include>    
    
	<include name="ListForFileManager">
        <param name="listid" default="0" />
        <param name="posx" default="0" />
        <param name="posy" default="0" />
        <param name="scrollid" default="0" />
        <param name="onleft" default="Noop" />
        <param name="onright" default="Noop" />
    
        <definition>
            <control type="list" id="$PARAM[listid]">
                <posx>$PARAM[posx]</posx>
                <posy>$PARAM[posy]</posy>
                <width>856</width>
                <height>800</height>
                <pagecontrol>$PARAM[scrollid]</pagecontrol>
                <onup>$PARAM[listid]</onup>
                <ondown>$PARAM[listid]</ondown>
                <onleft>$PARAM[onleft]</onleft>
                <onright>$PARAM[onright]</onright>

                <include name="ItemLayoutForFileManager">
                    <param name="id" value="$PARAM[listid]" />
                </include>
            </control>
        </definition>
	</include>    
    
	<include name="ScrollbarForFileManager">
        <param name="id" default="0" />
        <param name="posx" default="0" />
        <param name="posy" default="0" />
        <param name="onleft" default="0" />
        <param name="onright" default="0" />

        <definition>
            <control type="scrollbar" id="$PARAM[id]">
                <posx>$PARAM[posx]</posx>
                <posy>$PARAM[posy]</posy>
                <width>20</width>
                <height>760</height>
                <ondown>$PARAM[id]</ondown>
                <onup>$PARAM[id]</onup>
                <onleft>$PARAM[onleft]</onleft>
                <onright>$PARAM[onright]</onright>
            </control>
        </definition>
	</include>    
    
	<include name="ItemLayoutForFileManager">
        <param name="id" default="0" />
    
        <definition>
			<itemlayout height="100">
				<include name="NormalListItemForFileManager" />
			</itemlayout>
					
			<focusedlayout height="100">
				<control type="group">
					<visible>Control.HasFocus($PARAM[id])</visible>
					<include name="FocusedListItemForFileManager" />
                </control>
				<control type="group">
					<visible>!Control.HasFocus($PARAM[id])</visible>
					<include name="SelectedListItemForFileManager" />
				</control>
            </focusedlayout>
        </definition>
	</include>
    
	<include name="NormalListItemForFileManager">
        <definition>
            <include name="ListItemForFileManager">
                <param name="textcolor" value="MainColor" />
                <param name="backgroundcolor" value="BackgroundColor" />
            </include>
        </definition>
	</include>
	
	<include name="FocusedListItemForFileManager">
        <definition>
            <control type="image">
                <width>856</width>
                <height>100</height>
                <aspectratio>stretch</aspectratio>
                <texture colordiffuse="MainColor" border="20">controls/rectangle-fill.png</texture>
            </control>
            <include name="ListItemForFileManager">
                <param name="textcolor" value="BackgroundColor" />
                <param name="backgroundcolor" value="MainColor" />
            </include>
        </definition>
	</include>
	
	<include name="SelectedListItemForFileManager">
        <definition>
            <control type="image">
                <width>856</width>
                <height>100</height>
                <aspectratio>stretch</aspectratio>
                <texture colordiffuse="SelectColor" border="20">controls/rectangle-fill.png</texture>
            </control>
            <include name="ListItemForFileManager">
                <param name="textcolor" value="BackgroundColor" />
                <param name="backgroundcolor" value="SelectColor" />
            </include>
        </definition>
	</include>
	
	<include name="ListItemForFileManager">
        <param name="textcolor" default="MainColor" />
        <param name="backgroundcolor" default="BackgroundColor" />
    
        <definition>
            <control type="group">
                <posx>20</posx>
                <posy>5</posy>
                <include name="SmallCircleThumbnailIcon" />
            </control>
            <include name="OutlineLabel">
                <param name="posx" value="130" />
                <param name="posy" value="10" />
                <param name="width" value="710" />
                <param name="height" value="40" />
                <param name="font" value="SmallListItemFont" />
                <param name="textcolor" value="$PARAM[textcolor]" />
                <param name="outlinecolor" value="$PARAM[backgroundcolor]" />
                <param name="outlinesize" value="2" />
                <param name="label" value="$INFO[ListItem.Label]" />
            </include>
            <include name="OutlineLabel">
                <param name="posx" value="130" />
                <param name="posy" value="50" />
                <param name="width" value="710" />
                <param name="height" value="40" />
                <param name="font" value="DetailListItemFont" />
                <param name="textcolor" value="$PARAM[textcolor]" />
                <param name="outlinecolor" value="$PARAM[backgroundcolor]" />
                <param name="outlinesize" value="2" />
                <param name="label" value="$INFO[ListItem.Label2]" />
            </include>
        </definition>
	</include>
</includes>
