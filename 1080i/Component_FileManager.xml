<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="LeftListFrameForFileManager">
        <definition>
            <animation effect="slide" tween="quadratic" easing="out" start="-1000,0" end="0,0" time="500" reversible="false">WindowOpen</animation>
            <animation effect="slide" delay="500" tween="quadratic" easing="in" start="0,0" end="-1000,0" time="500" reversible="false">WindowClose</animation>
        
            <control type="group">
                <control type="image">
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>900</width>
                    <height>900</height>
                    <fadetime>200</fadetime>
                    <texture colordiffuse="MainColor" border="30" fallback="white.png">elements/poster-mask.png</texture>
                    <aspectratio>stretch</aspectratio>
                </control>
                <control type="image">
                    <posx>29</posx>
                    <posy>58</posy>
                    <width>866</width>
                    <height>804</height>
                    <fadetime>200</fadetime>
                    <texture colordiffuse="BackgroundColor" border="20" fallback="white.png">controls/rectangle-fill.png</texture>
                    <aspectratio>stretch</aspectratio>
                </control>
            </control>
        </definition>
	</include>
	
	<include name="RightListFrameForFileManager">
        <definition>
            <animation effect="slide" tween="quadratic" easing="out" start="1000,0" end="0,0" time="500" reversible="false">WindowOpen</animation>
            <animation effect="slide" delay="500" tween="quadratic" easing="in" start="0,0" end="1000,0" time="500" reversible="false">WindowClose</animation>
        
            <control type="group">
                <control type="image">
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>900</width>
                    <height>900</height>
                    <fadetime>200</fadetime>
                    <texture colordiffuse="MainColor" border="30" fallback="white.png">elements/poster-mask.png</texture>
                    <aspectratio>stretch</aspectratio>
                </control>
                <control type="image">
                    <posx>5</posx>
                    <posy>58</posy>
                    <width>866</width>
                    <height>804</height>
                    <fadetime>200</fadetime>
                    <texture colordiffuse="BackgroundColor" border="20" fallback="white.png">controls/rectangle-fill.png</texture>
                    <aspectratio>stretch</aspectratio>
                </control>
            </control>
        </definition>
	</include>
	
	<include name="ItemLayoutForFileManager">
        <param name="id" default="0" />
    
        <definition>
			<itemlayout height="100">
				<include name="NormalListItemForFileManager" />
			</itemlayout>
					
			<focusedlayout height="100">
				<control type="group">
					<visible>Control.HasFocus($PARAM[id])</visible>
					<include name="FocusedListItemForFileManager" />
                </control>
				<control type="group">
					<visible>!Control.HasFocus($PARAM[id])</visible>
					<include name="SelectedListItemForFileManager" />
				</control>
            </focusedlayout>
        </definition>
	</include>
    
	<include name="NormalListItemForFileManager">
        <definition>
            <include name="ListItemForFileManager">
                <param name="textcolor" value="MainColor" />
                <param name="backgroundcolor" value="BackgroundColor" />
            </include>
        </definition>
	</include>
	
	<include name="FocusedListItemForFileManager">
        <definition>
            <include name="ListItemForFileManager">
                <param name="textcolor" value="BackgroundColor" />
                <param name="backgroundcolor" value="MainColor" />
            </include>
        </definition>
	</include>
	
	<include name="SelectedListItemForFileManager">
        <definition>
            <include name="ListItemForFileManager">
                <param name="textcolor" value="BackgroundColor" />
                <param name="backgroundcolor" value="SelectColor" />
            </include>
        </definition>
	</include>
	
	<include name="ListItemForFileManager">
        <param name="textcolor" default="MainColor" />
        <param name="backgroundcolor" default="BackgroundColor" />
    
        <definition>
            <control type="image">
                <width>862</width>
                <height>100</height>
                <aspectratio>stretch</aspectratio>
                <texture colordiffuse="$PARAM[backgroundcolor]" border="20">controls/rectangle-fill.png</texture>
            </control>
            <control type="group">
                <posx>20</posx>
                <posy>5</posy>
                <include name="SmallCircleThumbnailIcon" />
            </control>
            <control type="label">
                <posx>130</posx>
                <posy>10</posy>
                <width>710</width>
                <height>40</height>
                <textcolor>$PARAM[textcolor]</textcolor>
                <label>$INFO[ListItem.Label]</label>
            </control>
            <control type="label">
                <posx>130</posx>
                <posy>50</posy>
                <width>710</width>
                <height>40</height>
                <font>DetailListItemFont</font>
                <textcolor>$PARAM[textcolor]</textcolor>
                <label>$INFO[ListItem.Label2]</label>
            </control>
        </definition>
	</include>
</includes>
