	<include name="ListItemForFileManager" description="List For File Manager">
		<itemlayout height="100">
			<include>NormalListItemForFileManager</include>
		</itemlayout>
					
		<focusedlayout height="100">
			<include>FocusedListItemForFileManager</include>
		</focusedlayout>
	</include>
