<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="NormalItemsForLargeThumbnailList">
        <definition>
            <control type="image">
                <width>1240</width>
                <height>100</height>
                <aspectratio>stretch</aspectratio>
                <texture colordiffuse="$VAR[BackgroundColor]" border="20">controls/rectangle-fill.png</texture>
            </control>
            <control type="group">
                <posx>20</posx>
                <posy>5</posy>
                <include>SmallCircleThumbnailIcon</include>
            </control>
            <control type="label">
                <posx>160</posx>
                <posy>20</posy>
                <width>1060</width>
                <height>30</height>
                <font>DialogTextFont</font>
                <info>ListItem.Label</info>
            </control>
            <control type="label">
                <posx>160</posx>
                <posy>50</posy>
                <width>1060</width>
                <height>30</height>
                <font>DialogTextFont</font>
                <info>ListItem.Label2</info>
            </control>
        </definition>
	</include>
	
	<include name="FocusedItemsForLargeThumbnailList">
        <definition>
            <control type="image">
                <width>1240</width>
                <height>100</height>
                <aspectratio>stretch</aspectratio>
                <texture colordiffuse="$VAR[MainColor]" border="20">controls/rectangle-fill.png</texture>
            </control>
            <control type="group">
                <posx>20</posx>
                <posy>5</posy>
                <include>SmallCircleThumbnailIcon</include>
            </control>
            <control type="label">
                <posx>160</posx>
                <posy>20</posy>
                <width>1060</width>
                <height>30</height>
                <font>DialogTextFont</font>
                <textcolor>$VAR[BackgroundColor]</textcolor>
                <info>ListItem.Label</info>
            </control>
            <control type="label">
                <posx>160</posx>
                <posy>50</posy>
                <width>1060</width>
                <height>30</height>
                <font>DialogTextFont</font>
                <textcolor>$VAR[BackgroundColor]</textcolor>
                <info>ListItem.Label2</info>
            </control>
        </definition>
	</include>
	
	<include name="SelectedItemsForLargeThumbnailList">
        <definition>
            <control type="image">
                <width>1240</width>
                <height>100</height>
                <aspectratio>stretch</aspectratio>
                <texture colordiffuse="$VAR[SelectColor]" border="20">controls/rectangle-fill.png</texture>
            </control>
            <control type="group">
                <posx>20</posx>
                <posy>5</posy>
                <include>SmallCircleThumbnailIcon</include>
            </control>
            <control type="label">
                <posx>160</posx>
                <posy>20</posy>
                <width>1060</width>
                <height>30</height>
                <font>DialogTextFont</font>
                <textcolor>$VAR[MainColor]</textcolor>
                <info>ListItem.Label</info>
            </control>
            <control type="label">
                <posx>160</posx>
                <posy>50</posy>
                <width>1060</width>
                <height>30</height>
                <font>DialogTextFont</font>
                <textcolor>$VAR[MainColor]</textcolor>
                <info>ListItem.Label2</info>
            </control>
        </definition>
	</include>
	
	<include name="ItemsForLargeThumbnailList">
        <definition>
            <itemlayout height="100">
                <include>NormalItemsForLargeThumbnailList</include>
            </itemlayout>
                        
            <focusedlayout height="100">
                <include>FocusedItemsForLargeThumbnailList</include>
            </focusedlayout>
        </definition>
	</include>
</includes>
