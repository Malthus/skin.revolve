<?xml version="1.0" encoding="UTF-8"?>
<includes>
    <include name="SmallOverlayMediaFlag">
        <definition>
            <control type="image">
                <width>90</width>
                <height>90</height>
                <texture colordiffuse="$VAR[FademaskColor]" background="true">$VAR[ContentOverlay]</texture>
                <aspectratio scalediffuse="false">keep</aspectratio>
            </control>
        </definition>
    </include>

    <include name="DefaultOverlayMediaFlag">
        <definition>
            <control type="image">
                <width>200</width>
                <height>200</height>
                <texture colordiffuse="$VAR[FademaskColor]" background="true">$VAR[ContentOverlay]</texture>
                <aspectratio scalediffuse="false">keep</aspectratio>
            </control>
        </definition>
    </include>

    <include name="DefaultUnderlayMediaFlag">
        <definition>
            <control type="image">
                <width>200</width>
                <height>200</height>
                <texture colordiffuse="$VAR[SelectColor]" background="true">$VAR[ContentUnderlay]</texture>
                <aspectratio scalediffuse="false">keep</aspectratio>
            </control>
        </definition>
    </include>
</includes>
