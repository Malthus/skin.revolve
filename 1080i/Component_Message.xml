<?xml version="1.0" encoding="UTF-8"?>
<includes>
    <constant name="PosXForContentForMessage">400</constant>
    <constant name="PosYForContentForMessage">4</constant>
    <constant name="WidthForContentForMessage">1400</constant>

    <constant name="PosXForIconForMessage">280</constant>
    <constant name="PosYForIconForMessage">0</constant>

    <include name="IconForMessage">
        <param name="id" default="0" />
        <param name="posx" default="PosXForIconForMessage" />
        <param name="posy" default="PosYForIconForMessage" />
        <param name="icontexture" default="" />

        <definition>
            <control type="group" id="$PARAM[id]">
                <posx>$PARAM[posx]</posx>
                <posy>$PARAM[posy]</posy>

                <control type="image" id="$PARAM[id]">
                    <posx>-5</posx>
                    <posy>-5</posy>
                    <width>100</width>
                    <height>100</height>
                    <texture colordiffuse="$VAR[MainColor]">elements/circle-mask.png</texture>
                    <aspectratio scalediffuse="false">keep</aspectratio>
                </control>

                <control type="image" id="$PARAM[id]">
                    <posx>-2</posx>
                    <posy>-2</posy>
                    <width>94</width>
                    <height>94</height>
                    <texture colordiffuse="$VAR[BackgroundColor]">elements/circle-mask.png</texture>
                    <aspectratio scalediffuse="false">keep</aspectratio>
                </control>

                <control type="image" id="$PARAM[id]">
                    <posx>-2</posx>
                    <posy>-2</posy>
                    <width>94</width>
                    <height>94</height>
                    <texture colordiffuse="$VAR[MainColor]">$PARAM[icontexture]</texture>
                    <aspectratio>keep</aspectratio>
                </control>
            </control>
        </definition>
    </include>

    <constant name="PosYForPauseWindowForMessage">690</constant>
    <constant name="PosYForBusyWindowForMessage">490</constant>

    <include name="WindowForMessage">
        <param name="headerid" default="0" />
        <param name="headerlabel" default="" />
        <param name="backgroundvisible" default="true" />

        <definition>
            <control type="group">
                <include content="FadeAnimationForDialogWindow" />

                <control type="group">
                    <visible>$PARAM[backgroundvisible]</visible>
                    <include content="DialogWindow">
                        <param name="height" value="100" />
                    </include>
                </control>

                <control type="label" id="$PARAM[headerid]">
                    <posx>560</posx>
                    <posy>20</posy>
                    <width>1240</width>
                    <height>40</height>
                    <font>MessageTitleFont</font>
                    <textcolor>$VAR[SecondaryColor]</textcolor>
                    <align>left</align>
                    <label>$PARAM[headerlabel]</label>
                </control>

                <control type="group">
                    <posx>140</posx>
                    <posy>-85</posy>
                    <include content="BackgroundForDefaultCircleThumbnailIcon" />
                </control>
            </control>
        </definition>
    </include>

    <include name="ChannelInputForMessage">
        <param name="posx" default="0" />
        <param name="posy" default="100" />
        <param name="value" default="PVR.ChannelNumberInput" />

        <definition>
            <control type="group" id="1">
                <visible>!String.IsEmpty($PARAM[value])</visible>
                <posx>$PARAM[posx]</posx>
                <posy>$PARAM[posy]</posy>

                <include content="IconForMessage">
                    <param name="id" value="1" />
                    <param name="posx" value="PosXForIconForMessage" />
                    <param name="posy" value="PosYForIconForMessage" />
                    <param name="icontexture" value="icons/icon-television.png" />
                </include>

                <control type="group" id="1">
                    <posx>PosXForContentForMessage</posx>
                    <posy>PosYForContentForMessage</posy>

                    <include content="BackgroundForOutlineLabel">
                        <param name="id" value="1" />
                        <param name="width" value="WidthForContentForMessage" />
                        <param name="height" value="90" />
                        <param name="font" value="HugeClockTimeFont" />
                        <param name="outlinecolor" value="$VAR[MainColor]" />
                        <param name="outlinesize" value="2" />
                        <param name="label" value="$INFO[$PARAM[value]]" />
                    </include>

                    <control type="label" id="1">
                        <width>WidthForContentForMessage</width>
                        <height>90</height>
                        <font>HugeClockTimeFont</font>
                        <textcolor>$VAR[BackgroundColor]</textcolor>
                        <label>$INFO[$PARAM[value]]</label>
                    </control>
                </control>
            </control>
        </definition>
    </include>
</includes>
