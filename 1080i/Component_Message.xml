<?xml version="1.0" encoding="UTF-8"?>
<includes>
    <constant name="PosXForContentForMessage">400</constant>
    <constant name="PosYForContentForMessage">4</constant>
    <constant name="WidthForContentForMessage">1400</constant>
    
    <constant name="PosXForIconForMessage">280</constant>
    <constant name="PosYForIconForMessage">0</constant>
    
    <include name="BackgroundAnimationForMessage">
        <param name="posx" default="0" />
        <param name="posy" default="0" />
        <param name="color" default="$VAR[MainColor]" />

        <definition>
            <control type="group">
                <visible>IntegerGreaterThan(Skin.String(Background.Animation.Level),1)</visible>
                <posx>$PARAM[posx]</posx>
                <posy>$PARAM[posy]</posy>
                
                <include content="OrbitCircle">
                    <param name="posx" value="45" />
                    <param name="posy" value="45" />
                    <param name="color" value="$PARAM[color]" />
                    <param name="size" value="20" />
                    <param name="radius" value="55" />
                    <param name="time" value="10000" />
                </include>
            </control>
            
            <control type="group">
                <visible>IntegerGreaterThan(Skin.String(Background.Animation.Level),3)</visible>
                <posx>$PARAM[posx]</posx>
                <posy>$PARAM[posy]</posy>

                <include content="OrbitCircle">
                    <param name="posx" value="45" />
                    <param name="posy" value="45" />
                    <param name="color" value="$PARAM[color]" />
                    <param name="size" value="10" />
                    <param name="radius" value="80" />
                    <param name="time" value="4000" />
                    <param name="direction" value="false" />
                </include>

                <include content="OrbitCircle">
                    <param name="posx" value="45" />
                    <param name="posy" value="45" />
                    <param name="color" value="$PARAM[color]" />
                    <param name="size" value="15" />
                    <param name="radius" value="95" />
                    <param name="time" value="6000" />
                    <param name="direction" value="false" />
                </include>
            </control>
        </definition>
    </include>
    
    <include name="IconForMessage">
        <param name="posx" default="PosXForIconForMessage" />
        <param name="posy" default="PosYForIconForMessage" />
        <param name="icontexture" default="-" />

        <definition>
            <control type="group">
                <posx>$PARAM[posx]</posx>
                <posy>$PARAM[posy]</posy>

                <include content="BackgroundAnimationForMessage" />
                <include content="BorderedBackgroundForSmallCircleThumbnailIcon" />

                <control type="image">
                    <width>90</width>
                    <height>90</height>
                    <texture colordiffuse="$VAR[BackgroundColor]">$PARAM[icontexture]</texture>
                    <aspectratio>keep</aspectratio>
                </control>
            </control>
        </definition>
    </include>

    <constant name="PosYForPauseWindowForMessage">690</constant>

    <constant name="PosYForBusyWindowForMessage">490</constant>
    
    <include name="WindowForMessage">
        <param name="headerid" default="0" />
        <param name="headerlabel" default="-" />
        <param name="backgroundvisible" default="true" />
    
        <definition>
            <control type="group">
                <control type="image">
                    <posx>90</posx>
                    <posy>-135</posy>
                    <width>370</width>
                    <height>370</height>
                    <texture>elements/circle-shadow.png</texture>
                </control>

                <control type="group">
                    <visible>$PARAM[backgroundvisible]</visible>
                    <include content="DialogWindow">
                        <param name="height" value="100" />
                    </include>
                </control>

                <control type="label" id="$PARAM[headerid]">
                    <posx>560</posx>
                    <posy>20</posy>
                    <width>1240</width>
                    <height>40</height>
                    <font>MessageTitleFont</font>
                    <textcolor>$VAR[SecondaryColor]</textcolor>
                    <align>left</align>
                    <label>$PARAM[headerlabel]</label>
                </control>
                
                <control type="group">
                    <posx>140</posx>
                    <posy>-85</posy>
                    <include content="BackgroundForDefaultCircleThumbnailIcon" />
                </control>
            </control>
        </definition>
    </include>
</includes>
