<?xml version="1.0" encoding="UTF-8"?>
<includes>
    <constant name="PosXForContentForOSD">340</constant>
    <constant name="PosXForAdditionalContentForOSD">1880</constant>
    <constant name="WidthForContentForOSD">1350</constant>
    <constant name="WidthForAdditionalContentForOSD">200</constant>

      <include name="DefaultAnimationForOSD">
        <definition>
            <animation type="WindowOpen">
                <effect type="fade" start="0" end="100" time="500" />
            </animation>
            <animation type="WindowClose">
                <effect type="fade" start="100" end="0" time="500" />
            </animation>
        </definition>
    </include>

    <include name="MediaNameLabelForOSD">
        <param name="label" default="$VAR[PlayerNameLabel]" />
    
        <definition>
            <control type="group">
                <include content="DefaultAnimationForOSD" />
                <posx>PosXForContentForOSD</posx>
                <posy>975</posy>
                
                <include content="OutlineLabel">
                    <param name="width" value="WidthForContentForOSD" />
                    <param name="font" value="MessageTitleFont" />
                    <param name="textcolor" value="$VAR[BackgroundColor]" />
                    <param name="outlinecolor" value="$VAR[MainColor]" />
                    <param name="outlinesize" value="2" />
                    <param name="label" value="$PARAM[label]" />
                </include>
            </control>
        </definition>
    </include>
    
    <include name="MediaInformationLabelForOSD">
        <param name="label" default="$VAR[PlayerInformationLabel]" />
    
        <definition>
            <control type="group">
                <include content="DefaultAnimationForOSD" />
                <posx>PosXForContentForOSD</posx>
                <posy>934</posy>
                    
                <include content="OutlineLabel">
                    <param name="width" value="WidthForContentForOSD" />
                    <param name="font" value="MessageTextFont" />
                    <param name="textcolor" value="$VAR[BackgroundColor]" />
                    <param name="outlinecolor" value="$VAR[MainColor]" />
                    <param name="outlinesize" value="2" />
                    <param name="label" value="$PARAM[label]" />
                </include>
            </control>
        </definition>
    </include>
    
    <include name="MediaPlaylistPositionLabelForOSD">
        <definition>
            <control type="group">
                <include content="DefaultAnimationForOSD" />
                <posx>PosXForAdditionalContentForOSD</posx>
                <posy>934</posy>
                    
                <include content="OutlineLabel">
                    <param name="width" value="WidthForAdditionalContentForOSD" />
                    <param name="font" value="MessageTextFont" />
                    <param name="textcolor" value="$VAR[BackgroundColor]" />
                    <param name="outlinecolor" value="$VAR[MainColor]" />
                    <param name="outlinesize" value="2" />
                    <param name="align" value="right" />
                    <param name="label" value="$VAR[PlayerPlaylistPositionLabel]" />
                </include>
            </control>
        </definition>
    </include>
    
    <include name="MediaSeekBarForOSD">
        <param name="playertimelabel" default="$VAR[PlayerTimeLabel]" />
        <param name="playerdurationlabel" default="$VAR[PlayerDurationLabel]" />
        <param name="playercache" default="Player.ProgressCache" />
        <param name="playerprogress" default="Player.Progress" />
    
        <definition>
            <control type="group">
                <include content="DefaultAnimationForOSD" />

                <control type="group">
                    <posx>PosXForContentForOSD</posx>
                    <posy>1015</posy>
                        
                    <include content="OutlineLabel">
                        <param name="width" value="200" />
                        <param name="font" value="MessageTextFont" />
                        <param name="textcolor" value="$VAR[BackgroundColor]" />
                        <param name="outlinecolor" value="$VAR[MainColor]" />
                        <param name="outlinesize" value="2" />
                        <param name="label" value="$PARAM[playertimelabel]" />
                    </include>
                </control>

                <control type="group">
                    <posx>PosXForAdditionalContentForOSD</posx>
                    <posy>1015</posy>

                    <include content="OutlineLabel">
                        <param name="width" value="200" />
                        <param name="font" value="MessageTextFont" />
                        <param name="textcolor" value="$VAR[BackgroundColor]" />
                        <param name="outlinecolor" value="$VAR[MainColor]" />
                        <param name="outlinesize" value="2" />
                        <param name="align" value="right" />
                        <param name="label" value="$PARAM[playerdurationlabel]" />
                    </include>
                </control>

                <control type="group">
                    <posx>510</posx>
                    <posy>1025</posy>

                    <control type="image">
                        <posx>-2</posx>
                        <posy>-2</posy>
                        <width>1185</width>
                        <height>28</height>
                        <texture colordiffuse="$VAR[MainColor]" border="6">controls/horizontalbar-thick.png</texture>
                        <aspectratio>stretch</aspectratio>
                    </control>
                    <control type="image">
                        <posx>0</posx>
                        <posy>0</posy>
                        <width>1180</width>
                        <height>24</height>
                        <texture colordiffuse="$VAR[BackgroundColor]" border="6">controls/horizontalbar-thick.png</texture>
                        <aspectratio>stretch</aspectratio>
                    </control>
                    <control type="progress">
                        <posx>0</posx>
                        <posy>-12</posy>
                        <width>1185</width>
                        <height>24</height>
                        <midtexture colordiffuse="$VAR[SelectColor]" border="6">controls/horizontalbar-thin.png</midtexture>
                        <info>$PARAM[playercache]</info>
                    </control>
                    <control type="progress">
                        <posx>0</posx>
                        <posy>-12</posy>
                        <width>1185</width>
                        <height>24</height>
                        <midtexture colordiffuse="$VAR[MainColor]" border="6">controls/horizontalbar-thin.png</midtexture>
                        <info>$PARAM[playerprogress]</info>
                    </control>
                </control>
            </control>
        </definition>
    </include>

    <include name="MediaThumbnailIconForOSD">
        <definition>
            <control type="group">
                <visible>Skin.HasSetting(Media.PlayerArtwork.Visible)</visible>
                <animation type="WindowOpen">
                    <effect type="slide" tween="quadratic" easing="out" start="1590,0" end="0,0" time="500" />
                </animation>
                <animation type="WindowClose">
                    <effect type="slide" tween="quadratic" easing="out" start="0,0" end="1590,0" time="500" />
                </animation>

                <include content="BackgroundAnimationForMediaThumbnailIconForOSD" />
                
                <control type="group">
                    <posx>40</posx>
                    <posy>806</posy>
                    <include content="DefaultCirclePlayerMediaIcon" />
                </control>
            </control>
            
            <control type="group">
                <visible>!Skin.HasSetting(Media.PlayerArtwork.Visible)</visible>
                <animation type="WindowOpen">
                    <effect type="slide" tween="quadratic" easing="out" start="1900,0" end="0,0" time="500" />
                </animation>
                <animation type="WindowClose">
                    <effect type="slide" tween="quadratic" easing="out" start="0,0" end="1900,0" time="500" />
                </animation>

                <include content="BackgroundAnimationForMediaThumbnailIconForOSD" />
                
                <control type="group">
                    <posx>40</posx>
                    <posy>806</posy>
                    <include content="DefaultCirclePlayerMediaIcon" />
                </control>
            </control>
        </definition>
    </include>

    <include name="BackgroundAnimationForMediaThumbnailIconForOSD">
        <definition>
            <control type="group">
                <visible>IntegerGreaterThan(Skin.String(Background.Animation.Level),1)</visible>
                <include content="OrbitCircle">
                    <param name="posx" value="175" />
                    <param name="posy" value="941" />
                    <param name="size" value="25" />
                    <param name="radius" value="145" />
                    <param name="time" value="10000" />
                </include>
            </control>
            
            <control type="group">
                <visible>IntegerGreaterThan(Skin.String(Background.Animation.Level),3)</visible>
                <include content="OrbitCircle">
                    <param name="posx" value="175" />
                    <param name="posy" value="941" />
                    <param name="size" value="15" />
                    <param name="radius" value="180" />
                    <param name="time" value="18000" />
                </include>
                
                <include content="OrbitCircle">
                    <param name="posx" value="175" />
                    <param name="posy" value="941" />
                    <param name="size" value="5" />
                    <param name="radius" value="200" />
                    <param name="time" value="8500" />
                    <param name="direction" value="false" />
                </include>
                
                <include content="OrbitCircle">
                    <param name="posx" value="175" />
                    <param name="posy" value="941" />
                    <param name="size" value="10" />
                    <param name="radius" value="210" />
                    <param name="time" value="12500" />
                </include>

                <include content="OrbitCircle">
                    <param name="posx" value="175" />
                    <param name="posy" value="941" />
                    <param name="size" value="10" />
                    <param name="radius" value="230" />
                    <param name="time" value="13000" />
                    <param name="direction" value="false" />
                </include>
            </control>
        </definition>
    </include>
    
    <include name="MediaBackgroundMusicLabelForOSD">
        <definition>
            <control type="group">
                <visible>Player.Playing</visible>
                <include content="DefaultAnimationForOSD" />

                <control type="group">
                    <posx>PosXForContentForOSD</posx>
                    <posy>1015</posy>

                    <control type="image">
                        <posx>0</posx>
                        <posy>0</posy>
                        <width>40</width>
                        <height>40</height>
                        <texture colordiffuse="$VAR[MainColor]">elements/circle-mask.png</texture>
                    </control>

                    <control type="image">
                        <posx>10</posx>
                        <posy>8</posy>
                        <width>24</width>
                        <height>24</height>
                        <texture colordiffuse="$VAR[BackgroundColor]">icons/player-play.png</texture>
                    </control>
                </control>
            
                <control type="group">
                    <posx>390</posx>
                    <posy>1015</posy>
                    
                    <include content="OutlineLabel">
                        <param name="width" value="1480" />
                        <param name="font" value="MessageTextFont" />
                        <param name="textcolor" value="$VAR[BackgroundColor]" />
                        <param name="outlinecolor" value="$VAR[MainColor]" />
                        <param name="outlinesize" value="2" />
                        <param name="label" value="$VAR[PlayerBackgroundMusicLabel]" />
                    </include>
                </control>
            </control>
        </definition>
    </include>
</includes>
