                <height>$PARAM[height]</height>
                <font>DefaultInformationFont</font>
                <textcolor>SecondaryColor</textcolor>
                <scroll>false</scroll>
                <label>| $INFO[MusicPlayer.Time] / $INFO[MusicPlayer.Duration]</label>
            </control>
        </definition>
    </include>
    
