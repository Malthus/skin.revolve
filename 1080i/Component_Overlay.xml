<?xml version="1.0" encoding="UTF-8"?>
<includes>
    <constant name="PosYForPlayerInformationForOverlay">1030</constant>

    <include name="GlobalOverlay">
        <definition>
            <control type="group">
                <include content="VideoOverlay" />
                <include content="MusicOverlay" />
                <include content="BackButtonOverlay" />
            </control>
        </definition>
    </include>

    <include name="VideoOverlay">
        <definition>
            <control type="group">
                <visible>Player.HasVideo</visible>
                <include content="BackgroundForOverlay" />
                <include content="InformationLabelForOverlay">
                    <param name="medialabel" value="$INFO[VideoPlayer.ChannelNumber,,. ]$INFO[VideoPlayer.ChannelName]$INFO[VideoPlayer.TVShowTitle,, | ]$INFO[VideoPlayer.Season,(,$INFO[VideoPlayer.Episode, /])] $INFO[VideoPlayer.Title]" />
                    <param name="timelabel" value="| $INFO[VideoPlayer.Time] / $INFO[VideoPlayer.Duration]" />
                </include>
                <include content="PlayerMediaIconForOverlay" />
            </control>
        </definition>
    </include>

    <include name="MusicOverlay">
        <definition>
            <control type="group">
                <visible>Player.HasAudio</visible>
                <include content="BackgroundForOverlay" />
                <include content="InformationLabelForOverlay">
                    <param name="medialabel" value="$INFO[MusicPlayer.Artist,, | ]$INFO[MusicPlayer.Album,, | ]$INFO[MusicPlayer.Title]$INFO[MusicPlayer.Year, | ,]" />
                    <param name="timelabel" value="| $INFO[MusicPlayer.Time] / $INFO[MusicPlayer.Duration]" />
                </include>
                <include content="PlayerMediaIconForOverlay" />
            </control>
        </definition>
    </include>
    
    <include name="BackButtonOverlay">
        <definition>
            <control type="group">
                <visible>Skin.HasSetting(BackButton.Visible) + !Window.Is(home)</visible>
                <posx>1820</posx>
                <posy>988</posy>

                <control type="image">
                    <width>88</width>
                    <height>88</height>
                    <texture colordiffuse="$VAR[MainColor]">elements/circle-mask.png</texture>
                    <aspectratio>keep</aspectratio>
                </control>

                <control id="9999" type="button">
                    <posx>4</posx>
                    <posy>4</posy>
                    <width>80</width>
                    <height>80</height>
                    <texturefocus colordiffuse="$VAR[HighlightColor]">controls/button-back.png</texturefocus>
                    <texturenofocus colordiffuse="$VAR[BackgroundColor]">controls/button-back.png</texturenofocus>
                    <label>$LOCALIZE[31919]</label>
                    <font></font>
                    <onclick>Close</onclick>
                </control>
            </control>
        </definition>
    </include>
    
    <include name="BackgroundForOverlay">
        <definition>
            <control type="image">
                <visible>Skin.HasSetting(Media.OverlayBackground.Visible)</visible>
                <posx>0</posx>
                <posy>1020</posy>
                <width>1920</width>
                <height>60</height>
                <texture colordiffuse="$VAR[BackgroundColor]">white.png</texture>
            </control>
        </definition>
    </include>

    <include name="InformationLabelForOverlay">
        <param name="medialabel" default="-" />
        <param name="timelabel" default="-" />
        
        <definition>
            <control type="group">
                <visible>!Skin.HasSetting(Media.PlayerArtwork.Visible)</visible>
                
                <include content="MediaLabelForOverlay">
                    <param name="posx" value="1520" />
                    <param name="width" value="1500" />
                    <param name="label" value="$PARAM[medialabel]" />
                </include>
                <include content="TimeLabelForOverlay">
                    <param name="posx" value="1530" />
                    <param name="width" value="400" />
                    <param name="label" value="$PARAM[timelabel]" />
                </include>
            </control>
            
            <control type="group">
                <visible>Skin.HasSetting(Media.PlayerArtwork.Visible)</visible>
                
                <include content="MediaLabelForOverlay">
                    <param name="posx" value="1320" />
                    <param name="width" value="1300" />
                    <param name="label" value="$PARAM[medialabel]" />
                </include>
                <include content="TimeLabelForOverlay">
                    <param name="posx" value="1330" />
                    <param name="width" value="400" />
                    <param name="label" value="$PARAM[timelabel]" />
                </include>
            </control>
        </definition>
    </include>

    <include name="MediaLabelForOverlay">
        <param name="posx" default="1320" />
        <param name="posy" default="PosYForPlayerInformationForOverlay" />
        <param name="width" default="1300" />
        <param name="height" default="30" />
        <param name="label" default="-" />

        <definition>
            <control type="group">
                <visible>Skin.HasSetting(Media.OverlayBackground.Visible)</visible>
                <control type="label">
                    <posx>$PARAM[posx]</posx>
                    <posy>$PARAM[posy]</posy>
                    <width>$PARAM[width]</width>
                    <height>$PARAM[height]</height>
                    <font>MessageTextFont</font>
                    <textcolor>$VAR[SecondaryColor]</textcolor>
                    <align>right</align>
                    <scroll>true</scroll>
                    <label>$PARAM[label]</label>
                </control>
            </control>
            
            <control type="group">
                <visible>!Skin.HasSetting(Media.OverlayBackground.Visible)</visible>
                <include content="OutlineLabel">
                    <param name="posx" value="$PARAM[posx]" />
                    <param name="posy" value="$PARAM[posy]" />
                    <param name="width" value="$PARAM[width]" />
                    <param name="height" value="$PARAM[height]" />
                    <param name="font" value="MessageTextFont" />
                    <param name="textcolor" value="$VAR[TextColor]" />
                    <param name="outlinecolor" value="$VAR[BackgroundColor]" />
                    <param name="outlinesize" value="2" />
                    <param name="align" value="right" />
                    <param name="scroll" value="true" />
                    <param name="label" value="$PARAM[label]" />
                </include>
            </control>
        </definition>
    </include>
    
    <include name="TimeLabelForOverlay">
        <param name="posx" default="1330" />
        <param name="posy" default="PosYForPlayerInformationForOverlay" />
        <param name="width" default="400" />
        <param name="height" default="30" />
        <param name="label" default="-" />

        <definition>
            <control type="group">
                <visible>Skin.HasSetting(Media.OverlayBackground.Visible)</visible>
                <control type="label">
                    <posx>$PARAM[posx]</posx>
                    <posy>$PARAM[posy]</posy>
                    <width>$PARAM[width]</width>
                    <height>$PARAM[height]</height>
                    <font>MessageTextFont</font>
                    <textcolor>$VAR[SecondaryColor]</textcolor>
                    <scroll>false</scroll>
                    <label>$PARAM[label]</label>
                </control>
            </control>

            <control type="group">
                <visible>!Skin.HasSetting(Media.OverlayBackground.Visible)</visible>
                <include content="OutlineLabel">
                    <param name="posx" value="$PARAM[posx]" />
                    <param name="posy" value="$PARAM[posy]" />
                    <param name="width" value="$PARAM[width]" />
                    <param name="height" value="$PARAM[height]" />
                    <param name="font" value="MessageTextFont" />
                    <param name="textcolor" value="$VAR[TextColor]" />
                    <param name="outlinecolor" value="$VAR[BackgroundColor]" />
                    <param name="outlinesize" value="2" />
                    <param name="scroll" value="false" />
                    <param name="label" value="$PARAM[label]" />
                </include>
            </control>
        </definition>
    </include>
    
    <include name="PlayerMediaIconForOverlay">
        <definition>
            <control type="group">
                <visible>Skin.HasSetting(Media.PlayerArtwork.Visible)</visible>

                <control type="group">
                    <visible>IntegerGreaterThan(Skin.String(Background.Animation.Level),1)</visible>
                    <include content="OrbitCircle">
                        <param name="posx" value="1765" />
                        <param name="posy" value="941" />
                        <param name="size" value="25" />
                        <param name="radius" value="145" />
                        <param name="time" value="10000" />
                    </include>
                </control>
                
                <control type="group">
                    <visible>IntegerGreaterThan(Skin.String(Background.Animation.Level),3)</visible>
                    <include content="OrbitCircle">
                        <param name="posx" value="1765" />
                        <param name="posy" value="941" />
                        <param name="size" value="30" />
                        <param name="radius" value="175" />
                        <param name="time" value="8500" />
                        <param name="direction" value="false" />
                    </include>
                    
                    <include content="OrbitCircle">
                        <param name="posx" value="1765" />
                        <param name="posy" value="941" />
                        <param name="size" value="10" />
                        <param name="radius" value="215" />
                        <param name="time" value="6000" />
                        <param name="direction" value="false" />
                    </include>

                    <include content="OrbitCircle">
                        <param name="posx" value="1765" />
                        <param name="posy" value="941" />
                        <param name="size" value="20" />
                        <param name="radius" value="250" />
                        <param name="time" value="13000" />
                        <param name="direction" value="false" />
                    </include>
                </control>
                
                <control type="group">
                    <posx>1630</posx>
                    <posy>806</posy>
                    <include content="DefaultCirclePlayerMediaIcon" />
                </control>
                    
                <control type="button" id="9990">
                    <description>Invisible Mouse Control For Media Controls Button</description>
                    <posx>1650</posx>
                    <posy>826</posy>
                    <width>230</width>
                    <height>230</height>
                    <texturenofocus>-</texturenofocus>
                    <texturefocus>-</texturefocus>
                    <font>-</font>
                    <label>-</label>
                    <onclick>SetProperty(DialogCloseButton,True,114)</onclick>
                    <onclick>ActivateWindow(playercontrols)</onclick>
                </control>
            </control>
        </definition>
    </include>
</includes>
