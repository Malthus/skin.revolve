<?xml version="1.0" encoding="UTF-8"?>
<includes>
    <include name="EPGTimelineViewForPVR">
        <definition>
            <control type="group">
                <visible>Control.IsVisible(10)</visible>
                <include content="BackgroundAnimationForBottomRing" />
            </control>
        
            <control type="epggrid" id="10">
                <viewtype label="19032">list</viewtype>
                <animation effect="slide" start="0,1080" end="0,0" time="500">WindowOpen</animation>
                <animation effect="slide" start="0,0" end="0,1080" time="500">WindowClose</animation>

                <posx>40</posx>
                <posy>108</posy>
                <width>1820</width>
                <height>760</height>
                <pagecontrol>70</pagecontrol>
                <scrolltime>200</scrolltime>
                <progresstexture colordiffuse="$VAR[SelectColor]">white.png</progresstexture>
                <timeblocks>24</timeblocks>
                <rulerunit>6</rulerunit>
                <onleft>10</onleft>
                <onright>10</onright>
                <onup>9000</onup>
                <onback>50</onback>

                <rulerlayout height="40" width="60">
                    <control type="image" id="1">
                        <width>60</width>
                        <height>40</height>
                        <posx>0</posx>
                        <posy>0</posy>
                        <texture colordiffuse="$VAR[MainColor]" border="20">controls/rectangle-fill.png</texture>
                    </control>
                    <control type="label" id="2">
                        <posx>8</posx>
                        <posy>0</posy>
                        <width>60</width>
                        <height>40</height>
                        <align>left</align>
                        <font>DetailViewFont</font>
                        <textcolor>$VAR[BackgroundColor]</textcolor>
                        <label>$INFO[ListItem.Label]</label>
                    </control>
                </rulerlayout>
                    
                <channellayout height="80" width="480">
                    <control type="image">                    
                        <posx>20</posx>
                        <posy>0</posy>
                        <width>480</width>
                        <height>80</height>
                        <texture colordiffuse="$VAR[BackgroundColor]" border="20">controls/rectangle-fill.png</texture>
                    </control>
                    <control type="image">
                        <posx>20</posx>
                        <posy>0</posy>
                        <width>480</width>
                        <height>80</height>
                        <texture colordiffuse="$VAR[MainColor]" border="20">controls/rectangle-clear.png</texture>
                    </control>
                    <control type="label">
                        <posx>30</posx>
                        <posy>10</posy>
                        <width>360</width>
                        <height>30</height>
                        <textcolor>$VAR[TextColor]</textcolor>
                        <font>MediumViewFont</font>
                        <align>left</align>
                        <scroll>false</scroll>
                        <label>$INFO[ListItem.ChannelName]</label>
                    </control>
                    <control type="label">
                        <posx>30</posx>
                        <posy>40</posy>
                        <width>360</width>
                        <height>30</height>
                        <textcolor>$VAR[TextColor]</textcolor>
                        <font>DetailViewFont</font>
                        <align>left</align>
                        <scroll>false</scroll>
                        <label>$INFO[ListItem.ChannelNumber,,. ]</label>
                    </control>
                    <control type="group">
                        <posx>405</posx>
                        <posy>5</posy>
                        <include content="TinyCircleThumbnailIcon" />
                    </control>
                </channellayout>
                    
                <focusedchannellayout height="80" width="480">
                    <control type="image">
                        <posx>0</posx>
                        <posy>0</posy>
                        <width>500</width>
                        <height>80</height>
                        <texture colordiffuse="$VAR[MainColor]" border="20">controls/rectangle-fill.png</texture>
                    </control>
                    <control type="label">
                        <posx>10</posx>
                        <posy>10</posy>
                        <width>360</width>
                        <height>30</height>
                        <textcolor>$VAR[BackgroundColor]</textcolor>
                        <font>MediumViewFont</font>
                        <align>left</align>
                        <label>$INFO[ListItem.ChannelName]</label>
                    </control>
                    <control type="label">
                        <posx>10</posx>
                        <posy>40</posy>
                        <width>360</width>
                        <height>30</height>
                        <textcolor>$VAR[BackgroundColor]</textcolor>
                        <font>DetailViewFont</font>
                        <align>left</align>
                        <label>$INFO[ListItem.ChannelNumber,,. ]</label>
                    </control>
                    <control type="group">
                        <posx>405</posx>
                        <posy>5</posy>
                        <include content="TinyCircleThumbnailIcon" />
                    </control>
                </focusedchannellayout>
                    
                <itemlayout height="80" width="60">
                    <control type="image" id="2">
                        <width>60</width>
                        <height>80</height>
                        <texture colordiffuse="$VAR[BackgroundColor]" border="20">controls/rectangle-fill.png</texture>
                    </control>
                    <control type="label" id="1">
                        <posx>8</posx>
                        <posy>10</posy>
                        <width>44</width>
                        <height>30</height>
                        <textcolor>$VAR[MainColor]</textcolor>
                        <font>MediumViewFont</font>
                        <align>left</align>
                        <scroll>false</scroll>
                        <label>$INFO[ListItem.Label]</label>
                    </control>
                    <control type="label" id="1">
                        <visible>!String.IsEmpty(ListItem.Label)</visible>
                        <posx>8</posx>
                        <posy>40</posy>
                        <width>44</width>
                        <height>30</height>
                        <textcolor>$VAR[MainColor]</textcolor>
                        <font>DetailViewFont</font>
                        <align>left</align>
                        <scroll>false</scroll>
                        <label>$INFO[ListItem.StartTime]$INFO[ListItem.EndTime, - ,]</label>
                    </control>
                </itemlayout>
                    
                <focusedlayout height="80" width="60">
                    <control type="image" id="2">
                        <posy>0</posy>
                        <width>60</width>
                        <height>80</height>
                        <texture colordiffuse="$VAR[MainColor]" border="20">controls/rectangle-fill.png</texture>
                    </control>
                    <control type="label" id="1">
                        <posx>8</posx>
                        <posy>10</posy>
                        <width>44</width>
                        <height>30</height>
                        <textcolor>$VAR[BackgroundColor]</textcolor>
                        <font>MediumViewFont</font>
                        <align>left</align>
                        <scroll>true</scroll>
                        <label>$INFO[ListItem.Label]</label>
                    </control>
                    <control type="label" id="1">
                        <visible>!String.IsEmpty(ListItem.Label)</visible>
                        <posx>8</posx>
                        <posy>40</posy>
                        <width>44</width>
                        <height>30</height>
                        <textcolor>$VAR[BackgroundColor]</textcolor>
                        <font>DetailViewFont</font>
                        <align>left</align>
                        <scroll>true</scroll>
                        <label>$INFO[ListItem.StartTime]$INFO[ListItem.EndTime, - ,]</label>
                    </control>
                </focusedlayout>
            </control>

            <include content="ScrollbarForView">
                <param name="id" value="70" />
                <param name="viewid" value="10" />
            </include>
            
            <control type="group">
                <visible>Control.IsVisible(10)</visible>
                <control type="group">
                    <control type="group">
                        <include content="BottomRing" />
                    </control>

                    <include content="LabelsForBottomRing" />
                </control>
            </control>
        </definition>
    </include>
    
