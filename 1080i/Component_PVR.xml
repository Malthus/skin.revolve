                    </control>
                    <control type="label" id="1">
                        <posx>8</posx>
                        <posy>10</posy>
                        <width>44</width>
                        <height>30</height>
                        <textcolor>MainColor</textcolor>
                        <font>MediumViewFont</font>
                        <align>left</align>
                        <scroll>false</scroll>
                        <label>$INFO[ListItem.Label]</label>
                    </control>
                    <control type="label" id="1">
                        <visible>!IsEmpty(ListItem.Label)</visible>
                        <posx>8</posx>
                        <posy>40</posy>
                        <width>44</width>
                        <height>30</height>
                        <textcolor>MainColor</textcolor>
                        <font>DetailViewFont</font>
                        <align>left</align>
                        <scroll>false</scroll>
                        <label>$INFO[ListItem.StartTime]$INFO[ListItem.EndTime, - ,]</label>
                    </control>
                </itemlayout>
                    
                <focusedlayout height="80" width="60">
                    <control type="image" id="2">
                        <posy>0</posy>
                        <width>60</width>
                        <height>80</height>
                        <texture colordiffuse="MainColor" border="20">controls/rectangle-fill.png</texture>
                    </control>
                    <control type="label" id="1">
                        <posx>8</posx>
                        <posy>10</posy>
                        <width>44</width>
                        <height>30</height>
                        <textcolor>BackgroundColor</textcolor>
                        <font>MediumViewFont</font>
                        <align>left</align>
                        <scroll>true</scroll>
                        <label>$INFO[ListItem.Label]</label>
                    </control>
                    <control type="label" id="1">
                        <visible>!IsEmpty(ListItem.Label)</visible>
                        <posx>8</posx>
                        <posy>40</posy>
                        <width>44</width>
                        <height>30</height>
                        <textcolor>BackgroundColor</textcolor>
                        <font>DetailViewFont</font>
                        <align>left</align>
                        <scroll>true</scroll>
                        <label>$INFO[ListItem.StartTime]$INFO[ListItem.EndTime, - ,]</label>
                    </control>
                </focusedlayout>
            </control>

            <control type="group">
                <visible>Control.IsVisible(10)</visible>
                <control type="group">
                    <include name="BottomRing" />
                    <include name="LabelsForBottomRing" />
                </control>
            </control>
        </definition>
	</include>
    
	<include name="EPGGuideNowViewForPVR">
        <definition>
            <control type="fixedlist" id="11">
                <viewtype label="19030">list</viewtype>
                <visible allowhiddenfocus="true">true</visible>
                <posx>720</posx>
                <posy>-121</posy>
                <width>960</width>
                <height>1250</height>
                <pagecontrol>71</pagecontrol>
                <focusposition>1</focusposition>
                <onup>11</onup>
                <ondown>11</ondown>
                <onleft>9000</onleft>
                <onright>71</onright>
      
