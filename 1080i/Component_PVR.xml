    <include name="PreviewForPVR">
        <definition>
            <control type="group">
                <visible>Player.HasVideo + !Skin.HasSetting(Background.Video.Active)</visible>
                <posx>120</posx>
                <posy>260</posy>

                <control type="image">
                    <posx>4</posx>
                    <posy>4</posy>
                    <width>520</width>
                    <height>353</height>
                    <fadetime>100</fadetime>
                    <texture colordiffuse="Black" fallback="white.png">elements/view-mask.png</texture>
                    <aspectratio>stretch</aspectratio>
                </control>
                <control type="videowindow">
                    <posx>10</posx>
                    <posy>10</posy>
                    <width>500</width>
                    <height>341</height>
                </control>
                <control type="image">
                    <width>528</width>
                    <height>361</height>
                    <fadetime>100</fadetime>
                    <texture colordiffuse="$VAR[MainColor]" fallback="white.png">elements/view-thickborder.png</texture>
                    <aspectratio>stretch</aspectratio>
                </control>
            </control>
        </definition>
