	<include name="CircleControlsForPlayerControl">
        <param name="posx" default="0" />
        <param name="posy" default="0" />
        <param name="onup" default="9001" />
        <param name="ondown" default="9001" />
        <param name="onleft" default="Noop" />
        <param name="onright" default="52" />
    
        <definition>
            <control type="group" id="9010">
                <posx>$PARAM[posx]</posx>
                <posy>$PARAM[posy]</posy>
                <width>270</width>
                <height>270</height>
                <onup>$PARAM[onup]</onup>
                <ondown>$PARAM[ondown]</ondown>
                <onleft>$PARAM[onleft]</onleft>
                <onright>$PARAM[onright]</onright>

                <control type="image">
                    <width>270</width>
                    <height>270</height>
                    <texture colordiffuse="MainColor">elements/circle-mask.png</texture>
                    <aspectratio>stretch</aspectratio>
                </control>

                <control type="togglebutton" id="403" description="Play/Pause Button">
                    <posx>95</posx>
                    <posy>0</posy>
                    <include>PlayPauseButtonForPlayerControl</include>
                    <onup>$PARAM[onup]</onup>
                    <ondown>404</ondown>
                    <onleft>402</onleft>
                    <onright>405</onright>
                </control>

                <control type="button" id="402" description="Rewind Button">
                    <posx>28</posx>
                    <posy>28</posy>
                    <include>RewindButtonForPlayerControl</include>
                    <onup>403</onup>
                    <ondown>401</ondown>
                    <onleft>401</onleft>
                    <onright>403</onright>
                </control>

                <control type="button" id="405" description="Fast Forward Button">
                    <posx>162</posx>
                    <posy>28</posy>
                    <include>FastForwardButtonForPlayerControl</include>
                    <onup>403</onup>
                    <ondown>406</ondown>
                    <onleft>403</onleft>
                    <onright>406</onright>
                </control>

                <control type="button" id="401" description="Previous Button">
                    <posx>0</posx>
                    <posy>95</posy>
                    <include>PreviousButtonForPlayerControl</include>
                    <onup>402</onup>
                    <ondown>407</ondown>
                    <onleft>$PARAM[onleft]</onleft>
                    <onright>406</onright>
                </control>

                <control type="button" id="406" description="Next Button">
                    <posx>190</posx>
                    <posy>95</posy>
                    <include>NextButtonForPlayerControl</include>
                    <onup>405</onup>
                    <ondown>400</ondown>
                    <onleft>401</onleft>
                    <onright>$PARAM[onright]</onright>
                </control>
			
                <control type="group" description="Repeat Button">
                    <posx>28</posx>
                    <posy>162</posy>

                    <control type="button" id="407">
                        <include>RepeatButtonForPlayerControl</include>
                        <onup>401</onup>
                        <ondown>404</ondown>
                        <onleft>401</onleft>
                        <onright>404</onright>
                    </control>

                    <include>RepeatImageForPlayerControl</include>
                </control>

                <control type="togglebutton" id="400" description="Random Button">
                    <posx>162</posx>
                    <posy>162</posy>
                    <include>RandomButtonForPlayerControl</include>
                    <onup>406</onup>
                    <ondown>404</ondown>
                    <onleft>404</onleft>
                    <onright>406</onright>
                </control>

                <control type="button" id="404" description="Stop Button">
                    <posx>95</posx>
                    <posy>190</posy>
                    <include>StopButtonForPlayerControl</include>
                    <onup>403</onup>
                    <ondown>$PARAM[ondown]</ondown>
                    <onleft>407</onleft>
                    <onright>400</onright>
                </control>
            </control>
        </definition>
	</include>

