<?xml version="1.0" encoding="UTF-8"?>
<includes>
    <include name="SmallBusyAnimationForProgressBar">
        <param name="visible" default="true" />
        <param name="posx" default="0" />
        <param name="posy" default="0" />
        
        <definition>
            <control type="group">
                <visible>$PARAM[visible]</visible>
                <posx>$PARAM[posx]</posx>
                <posy>$PARAM[posy]</posy>

                <control type="image">
                    <posx>5</posx>
                    <posy>5</posy>
                    <width>80</width>
                    <height>80</height>
                    <texture colordiffuse="$VAR[BackgroundColor]">$VAR[BusyAnimationThumbnail]</texture>
                    <aspectratio>keep</aspectratio>
                    <animation effect="rotate" start="360" end="0" center="45,45" time="1200" loop="true" condition="true">conditional</animation>
                </control>
            </control>
        </definition>
    </include>
    
    <include name="DefaultBusyAnimationForProgressBar">
        <param name="visible" default="true" />
        <param name="posx" default="0" />
        <param name="posy" default="0" />
        
        <definition>
            <control type="group">
                <visible>$PARAM[visible]</visible>
                <posx>$PARAM[posx]</posx>
                <posy>$PARAM[posy]</posy>

                <control type="image">
                    <posx>15</posx>
                    <posy>15</posy>
                    <width>240</width>
                    <height>240</height>
                    <texture colordiffuse="$VAR[BackgroundColor]">$VAR[BusyAnimationThumbnail]</texture>
                    <aspectratio>keep</aspectratio>
                    <animation effect="rotate" start="360" end="0" center="135,135" time="1200" loop="true" condition="true">conditional</animation>
                </control>
            </control>
        </definition>
    </include>
    
    <include name="BackgroundForProgressBar">
        <param name="posx" default="0" />
        <param name="posy" default="0" />
        <param name="width" default="1240" />
        
        <definition>
            <control type="group">
                <control type="image">
                    <posx>$PARAM[posx]</posx>
                    <posy>$PARAM[posy]</posy>
                    <width>$PARAM[width]</width>
                    <height>28</height>
                    <texture colordiffuse="$VAR[MainColor]" border="6">controls/horizontalbar-thick.png</texture>
                    <aspectratio>stretch</aspectratio>
                </control>
            </control>
        </definition>
    </include>

    <include name="ProgressBar">
        <param name="id" default="0" />
        <param name="visible" default="true" />
        <param name="posx" default="0" />
        <param name="posy" default="0" />
        <param name="width" default="1240" />
        <param name="progressbarcolor" default="$VAR[BackgroundColor]" />
        <param name="backgroundcolor" default="$VAR[MainColor]" />
        
        <definition>
            <control type="group">
                <visible>$PARAM[visible]</visible>
                <posx>$PARAM[posx]</posx>
                <posy>$PARAM[posy]</posy>
                
                <control type="image">
                    <posx>0</posx>
                    <posy>12</posy>
                    <width>$PARAM[width]</width>
                    <height>24</height>
                    <texture colordiffuse="$PARAM[backgroundcolor]" border="6">controls/horizontalbar-thick.png</texture>
                    <aspectratio>stretch</aspectratio>
                </control>
                <control type="progress" id="$PARAM[id]">
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>$PARAM[width]</width>
                    <height>24</height>
                    <texturebg border="6">-</texturebg>
                    <midtexture colordiffuse="$PARAM[progressbarcolor]" border="6">controls/horizontalbar-thin.png</midtexture>
                    <info>-</info>
                </control>
            </control>
        </definition>
    </include>

    <constant name="PosYForSingleLineDialogForProgressBar">440</constant>
    <include name="SingleLineDialogForProgressBar">
        <definition>
            <control type="group">
                <control type="image">
                    <posx>90</posx>
                    <posy>-85</posy>
                    <width>370</width>
                    <height>370</height>
                    <texture>elements/circle-shadow.png</texture>
                </control>
            
                <include content="DialogWindow">
                    <param name="height" value="200" />
                </include>

                <control type="group">
                    <posx>140</posx>
                    <posy>-35</posy>
                    <include content="BackgroundForDefaultCircleThumbnailIcon" />
                </control>
        
                <include content="DefaultBusyAnimationForProgressBar">
                    <param name="posy" value="-20" />
                </include>
            </control>
        </definition>
    </include>
</includes>
