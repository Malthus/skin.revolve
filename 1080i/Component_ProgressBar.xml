<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="BusyAnimationForProgressBar">
        <param name="posy" default="0" />
        
        <definition>
            <control type="group">
                <posx>155</posx>
                <posy>$PARAM[posy]</posy>

                <control type="image">
                    <width>240</width>
                    <height>240</height>
                    <texture colordiffure="BackgroundColor">$VAR[BusyAnimationThumbnail]</texture>
                    <aspectratio>keep</aspectratio>
                    <animation effect="rotate" start="360" end="0" center="120,120" time="1200" loop="true" condition="true">conditional</animation>
                </control>
            </control>
        </definition>
	</include>
    
	<include name="ProgressBar">
        <param name="id" default="0" />
        <param name="posx" default="0" />
        <param name="posy" default="0" />
        <param name="width" default="1240" />
        
        <definition>
            <control type="group">
                <posx>$PARAM[posx]</posx>
                <posy>$PARAM[posy]</posy>
                
                <control type="image">
                    <posx>0</posx>
                    <posy>12</posy>
                    <width>$PARAM[width]</width>
                    <height>24</height>
                    <texture colordiffuse="MainColor" border="6">controls/horizontalbar-thick.png</texture>
                    <aspectratio>stretch</aspectratio>
                </control>
                <control type="progress" id="$PARAM[id]">
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>$PARAM[width]</width>
                    <height>24</height>
                    <texturebg border="6">-</texturebg>
                    <midtexture colordiffuse="BackgroundColor" border="6">controls/horizontalbar-thin.png</midtexture>
                    <info>-</info>
                </control>
            </control>
        </definition>
	</include>

    <constant name="PosYForMessageDialogForProgressBar">490</constant>
	<include name="MessageDialogForProgressBar">
        <definition>
            <control type="group">
                <include>DefaultIconInMessageBand</include>

                <include name="BusyAnimationForProgressBar">
                    <param name="posy" value="-70" />
                </include>
            </control>
        </definition>
	</include>
    
    <constant name="PosYForSingleLineDialogForProgressBar">440</constant>
	<include name="SingleLineDialogForProgressBar">
        <definition>
            <control type="group">
                <control type="image">
                    <posx>90</posx>
                    <posy>-85</posy>
                    <width>370</width>
                    <height>370</height>
                    <texture>elements/circle-shadow.png</texture>
                </control>
            
                <include name="DialogWindow">
                    <param name="height" value="200" />
                </include>

                <control type="group">
                    <posx>140</posx>
                    <posy>-35</posy>
                    <include>BackgroundForDefaultCircleThumbnailIcon</include>
                </control>
		
                <include name="BusyAnimationForProgressBar">
                    <param name="posy" value="-20" />
                </include>
            </control>
        </definition>
	</include>

    <constant name="PosYForMultiLineDialogForProgressBar">410</constant>
	<include name="MultiLineDialogForProgressBar">
        <definition>
            <control type="group">
                <control type="image">
                    <posx>90</posx>
                    <posy>-140</posy>
                    <width>370</width>
                    <height>370</height>
                    <texture>elements/circle-shadow.png</texture>
                </control>

                <include name="DialogWindow">
                    <param name="height" value="260" />
                </include>

                <control type="group">
                    <posx>140</posx>
                    <posy>-90</posy>
                    <include>BackgroundForDefaultCircleThumbnailIcon</include>
                </control>

                <include name="BusyAnimationForProgressBar">
                    <param name="posy" value="-75" />
                </include>
            </control>
        </definition>
	</include>
</includes>
