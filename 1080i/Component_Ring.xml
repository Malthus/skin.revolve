<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="LeftRing">
		<animation effect="slide" tween="quadratic" easing="out" start="-1000,0" end="0,0" time="400" reversible="false">WindowOpen</animation>
		<animation effect="slide" delay="400" tween="quadratic" easing="in" start="0,0" end="-1000,0" time="400" reversible="false">WindowClose</animation>

		<control type="image">
			<width>900</width>
			<height>1080</height>
			<texture colordiffuse="MainColor" diffuse="elements/ring-maskleft.png">white.png</texture>
			<aspectratio scalediffuse="false">scale</aspectratio>
		</control>

		<control type="group">
            <control type="group">
                <include>VisibilityForVerticalIcon</include>
                <posx>40</posx>
                <posy>140</posy>
                <include>VerticalThumbnailIcon</include>
                <include>OverlayForVerticalThumbnailIcon</include>
            </control>

            <control type="group">
                <include>VisibilityForSquareIcon</include>
                <posx>40</posx>
                <posy>240</posy>
                <include>SquareThumbnailIcon</include>
                <include>OverlayForSquareThumbnailIcon</include>
            </control>
		
            <control type="group">
                <include>VisibilityForHorizontalIcon</include>
                <posx>40</posx>
                <posy>240</posy>
                <include>HorizontalThumbnailIcon</include>
                <include>OverlayForSquareThumbnailIcon</include>
            </control>
		
            <control type="group">
                <visible>Skin.HasSetting(MediaIcons.Visible)</visible>
                <posx>40</posx>
                <posy>610</posy>
                <include>HorizontalViewListOfContentMediaFlag</include>
            </control>
		</control>
        
		<control type="textbox" description="Description of List Item">
			<posx>40</posx>
			<posy>660</posy>
			<width>580</width>
			<height>360</height>
			<font>HomeMenuDetailFont</font>
			<textcolor>BackgroundColor</textcolor>
			<align>left</align>
			<aligny>top</aligny>
			<autoscroll time="2000" delay="3000" repeat="5000">true</autoscroll>
			<label>$VAR[ContentDescription]</label>
		</control>
			
		<control type="image">
			<width>900</width>
			<height>1080</height>
			<texture>elements/ring-ringsleft.png</texture>
		</control>
	</include>
	
	<include name="RightRing">
		<animation effect="slide" start="1000,0" end="0,0" time="400">WindowOpen</animation>
		<animation effect="slide" start="0,0" end="1000,0" time="400">WindowClose</animation>
		
		<control type="image">
			<posx>920</posx>
			<posy>0</posy>
			<width>1000</width>
			<height>1080</height>
			<texture colordiffuse="MainColor" diffuse="elements/ring-maskright.png">white.png</texture>
			<aspectratio scalediffuse="false">scale</aspectratio>
		</control>

		<control type="group">
			<visible>Skin.HasSetting(MediaIcons.Visible)</visible>
			<posx>1100</posx>
			<posy>40</posy>
			<include>HorizontalViewListOfContentMediaFlag</include>
		</control>

		<control type="textbox" description="Description of List Item">
			<posx>1120</posx>
			<posy>100</posy>
			<width>740</width>
			<height>340</height>
			<font>HomeMenuDetailFont</font>
			<textcolor>BackgroundColor</textcolor>
			<align>right</align>
			<aligny>top</aligny>
			<autoscroll time="2000" delay="3000" repeat="5000">true</autoscroll>
			<label>$VAR[ContentDescription]</label>
		</control>
			
		<control type="group">
            <control type="group">
                <include>VisibilityForSquareIcon</include>
                <posx>1500</posx>
                <posy>460</posy>
                <include>SquareThumbnailIcon</include>
                <include>OverlayForSquareThumbnailIcon</include>
            </control>
			
            <control type="group">
                <include>VisibilityForVerticalIcon</include>
                <posx>1500</posx>
                <posy>460</posy>
                <include>VerticalThumbnailIcon</include>
                <include>OverlayForVerticalThumbnailIcon</include>
            </control>
			
            <control type="group">
                <include>VisibilityForHorizontalIcon</include>
                <posx>1400</posx>
                <posy>460</posy>
                <include>HorizontalThumbnailIcon</include>
                <include>OverlayForHorizontalThumbnailIcon</include>
            </control>
		</control>
			
		<control type="image">
			<posx>920</posx>
			<posy>0</posy>
			<width>1000</width>
			<height>1080</height>
			<texture>elements/ring-ringsright.png</texture>
		</control>
	</include>

	<include name="BottomRing" description="Bottom Ring">
		<animation effect="slide" start="0,240" end="0,0" time="500">WindowOpen</animation>
		<animation effect="slide" start="0,0" end="0,240" time="500">WindowClose</animation>
		
		<control type="image">
			<posy>780</posy>
			<width>1920</width>
			<height>400</height>
			<texture colordiffuse="MainColor">elements/ring-maskbottom.png</texture>
			<aspectratio scalediffuse="false">scale</aspectratio>
		</control>
				
		<control type="group">
			<visible>Skin.HasSetting(MediaIcons.Visible)</visible>
			<posx>560</posx>
			<posy>1020</posy>
			<include>HorizontalViewListOfContentMediaFlag</include>
		</control>
				
		<control type="image">
			<posy>780</posy>
			<width>1920</width>
			<height>400</height>
			<texture>elements/ring-ringsbottom.png</texture>
		</control>
		
		<include>LabelsForBottomRing</include>
	</include>

