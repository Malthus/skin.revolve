<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="LeftRing">
        <definition>
            <animation effect="slide" tween="quadratic" easing="out" start="-1000,0" end="0,0" time="400" reversible="false">WindowOpen</animation>
            <animation effect="slide" delay="400" tween="quadratic" easing="in" start="0,0" end="-1000,0" time="400" reversible="false">WindowClose</animation>

            <control type="image">
                <width>900</width>
                <height>1080</height>
                <texture colordiffuse="MainColor" diffuse="elements/ring-maskleft.png">white.png</texture>
                <aspectratio scalediffuse="false">scale</aspectratio>
            </control>

            <control type="group">
                <control type="group">
                    <include name="VisibilityForVerticalIcon" />
                    <posx>40</posx>
                    <posy>140</posy>
                    <include name="VerticalThumbnailIcon" />
                    <include name="OverlayForVerticalThumbnailIcon" />
                </control>

                <control type="group">
                    <include name="VisibilityForSquareIcon" />
                    <posx>40</posx>
                    <posy>240</posy>
                    <include name="SquareThumbnailIcon" />
                    <include name="OverlayForSquareThumbnailIcon" />
                </control>
            
                <control type="group">
                    <include name="VisibilityForHorizontalIcon" />
                    <posx>40</posx>
                    <posy>240</posy>
                    <include name="HorizontalThumbnailIcon" />
                    <include name="OverlayForSquareThumbnailIcon" />
                </control>
            
                <control type="group">
                    <visible>Skin.HasSetting(MediaIcons.Visible)</visible>
                    <posx>40</posx>
                    <posy>615</posy>
                    <include name="HorizontalViewListOfContentMediaFlag" />
                </control>
            </control>
            
            <control type="textbox">
                <posx>40</posx>
                <posy>680</posy>
                <width>580</width>
                <height>340</height>
                <font>HomeMenuDetailFont</font>
                <textcolor>BackgroundColor</textcolor>
                <align>left</align>
                <aligny>top</aligny>
                <autoscroll time="3000" delay="2000" repeat="5000">true</autoscroll>
                <label>$VAR[ContentDescription]</label>
            </control>
                
            <control type="image">
                <width>900</width>
                <height>1080</height>
                <texture>elements/ring-ringsleft.png</texture>
            </control>
        </definition>
	</include>
	
	<include name="RightRing">
        <definition>
            <animation effect="slide" start="1000,0" end="0,0" time="400">WindowOpen</animation>
            <animation effect="slide" start="0,0" end="1000,0" time="400">WindowClose</animation>
            
            <control type="image">
                <posx>920</posx>
                <posy>0</posy>
                <width>1000</width>
                <height>1080</height>
                <texture colordiffuse="MainColor" diffuse="elements/ring-maskright.png">white.png</texture>
                <aspectratio scalediffuse="false">scale</aspectratio>
            </control>

            <control type="group">
                <visible>Skin.HasSetting(MediaIcons.Visible)</visible>
                <posx>1100</posx>
                <posy>40</posy>
                <include name="HorizontalViewListOfContentMediaFlag" />
            </control>

            <control type="textbox">
                <description>Description of List Item</description>
                <posx>1120</posx>
                <posy>120</posy>
                <width>740</width>
                <height>320</height>
                <font>HomeMenuDetailFont</font>
                <textcolor>BackgroundColor</textcolor>
                <align>right</align>
                <aligny>top</aligny>
                <autoscroll time="2000" delay="3000" repeat="5000">true</autoscroll>
                <label>$VAR[ContentDescription]</label>
            </control>
                
            <control type="group">
                <control type="group">
                    <include name="VisibilityForSquareIcon" />
                    <posx>1500</posx>
                    <posy>460</posy>
                    <include name="SquareThumbnailIcon" />
                    <include name="OverlayForSquareThumbnailIcon" />
                </control>
                
                <control type="group">
                    <include name="VisibilityForVerticalIcon" />
                    <posx>1500</posx>
                    <posy>460</posy>
                    <include name="VerticalThumbnailIcon" />
                    <include name="OverlayForVerticalThumbnailIcon" />
                </control>
                
                <control type="group">
                    <include name="VisibilityForHorizontalIcon" />
                    <posx>1400</posx>
                    <posy>460</posy>
                    <include name="HorizontalThumbnailIcon" />
                    <include name="OverlayForHorizontalThumbnailIcon" />
                </control>
            </control>
                
            <control type="image">
                <posx>920</posx>
                <posy>0</posy>
                <width>1000</width>
                <height>1080</height>
                <texture>elements/ring-ringsright.png</texture>
            </control>
        </definition>
	</include>

	<include name="BottomRing">
        <definition>
            <animation effect="slide" start="0,240" end="0,0" time="500">WindowOpen</animation>
            <animation effect="slide" start="0,0" end="0,240" time="500">WindowClose</animation>
            
            <control type="image">
                <posy>780</posy>
                <width>1920</width>
                <height>400</height>
                <texture colordiffuse="MainColor">elements/ring-maskbottom.png</texture>
                <aspectratio scalediffuse="false">scale</aspectratio>
            </control>
                    
            <control type="group">
                <visible>Skin.HasSetting(MediaIcons.Visible)</visible>
                <posx>560</posx>
                <posy>1020</posy>
                <include name="HorizontalViewListOfContentMediaFlag" />
            </control>
                    
            <control type="image">
                <posy>780</posy>
                <width>1920</width>
                <height>400</height>
                <texture>elements/ring-ringsbottom.png</texture>
            </control>
            
            <include name="LabelsForBottomRing" />
        </definition>
	</include>

	<include name="LabelsForBottomRing">
        <definition>
            <control type="group">
                <include name="VisibilityOfListIconInView" />
                <animation effect="slide" start="0,240" end="0,0" time="500">WindowOpen</animation>
                <animation effect="slide" start="0,0" end="0,240" time="500">WindowClose</animation>

                <include name="OutlineLabel">
                    <param name="posx" value="10" />
                    <param name="posy" value="971" />
                    <param name="width" value="1900" />
                    <param name="height" value="30" />
                    <param name="font" value="MediumViewFont" />
                    <param name="textcolor" value="$VAR[ContentBackgroundColor]" />
                    <param name="outlinecolor" value="MainColor" />
                    <param name="outlinesize" value="2" />
                    <param name="align" value="center" />
                    <param name="scroll" value="true" />
                    <param name="label" value="$VAR[ContentNameLabel]" />
                </include>
                <include name="OutlineLabel">
                    <param name="posx" value="10" />
                    <param name="posy" value="930" />
                    <param name="width" value="1900" />
                    <param name="height" value="30" />
                    <param name="font" value="HomeMenuDetailFont" />
                    <param name="textcolor" value="BackgroundColor" />
                    <param name="outlinecolor" value="MainColor" />
                    <param name="outlinesize" value="1" />
                    <param name="align" value="center" />
                    <param name="scroll" value="true" />
                    <param name="label" value="$VAR[ContentInformationLabel]" />
                </include>
            </control>
            
            <control type="group">
                <include name="VisibilityOfSortLetterInView" />
                <animation effect="slide" start="0,240" end="0,0" time="500">WindowOpen</animation>
                <animation effect="slide" start="0,0" end="0,240" time="500">WindowClose</animation>

                <include name="OutlineLabel">
                    <param name="posx" value="10" />
                    <param name="posy" value="860" />
                    <param name="width" value="1900" />
                    <param name="height" value="140" />
                    <param name="font" value="LargeSortLetterFont" />
                    <param name="textcolor" value="BackgroundColor" />
                    <param name="outlinecolor" value="MainColor" />
                    <param name="outlinesize" value="2" />
                    <param name="align" value="center" />
                    <param name="scroll" value="true" />
                    <param name="label" value="$VAR[ContentSortLetterLabel]" />
                </include>
            </control>
        </definition>
	</include>
</includes>
