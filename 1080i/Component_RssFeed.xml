<?xml version="1.0" encoding="UTF-8"?>
<includes>
    <include name="BackgroundForRssFeed">
        <definition>
			<control type="image">
				<posx>0</posx>
				<posy>0</posy>
				<width>1920</width>
				<height>40</height>
				<texture colordiffuse="BackgroundColor">white.png</texture>
			</control>

            <control type="group">
                <visible>StringCompare(Skin.String(Background.AnimationLevel),B) | StringCompare(Skin.String(Background.AnimationLevel),W)</visible>
                <include name="MoveCircle">
                    <param name="posy" value="5" />
                    <param name="color" value="SelectColor" />
                    <param name="size" value="30" />
                    <param name="time" value="23000" />
                    <param name="startleft" value="false" />
                    <param name="startright" value="true" />
                </include>
            </control>
        </definition>
    </include>
    
    <include name="RssFeed">
        <definition>
            <control type="group">
                <visible>System.GetBool(lookandfeel.enablerssfeeds)</visible>
            
                <include name="BackgroundForRssFeed" />

                <control type="rss" id="1">
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>1920</width>
                    <height>40</height>
                    <font>RSSFont</font>
                    <titlecolor>MainColor</titlecolor>
                    <headlinecolor>SecondaryColor</headlinecolor>
                    <textcolor>TextColor</textcolor>
                    <urlset>1</urlset>
                </control>
            </control>
        </definition>
    </include>
</includes>
