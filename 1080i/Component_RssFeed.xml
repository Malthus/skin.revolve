<?xml version="1.0" encoding="UTF-8"?>
<includes>
    <include name="BackgroundForRssFeed">
        <definition>
            <control type="image">
                <visible>Skin.HasSetting(Media.OverlayBackground.Visible)</visible>
                <posx>0</posx>
                <posy>0</posy>
                <width>1920</width>
                <height>60</height>
                <texture colordiffuse="$VAR[BackgroundColor]">white.png</texture>
            </control>
        </definition>
    </include>

    <include name="RssFeed">
        <definition>
            <control type="group">
                <visible>System.GetBool(lookandfeel.enablerssfeeds)</visible>

                <include content="BackgroundForRssFeed" />

                <control type="group">
                    <posx>1852</posx>
                    <posy>0</posy>

                    <include content="RssFeedFlag">
                        <param name="flagcolor" value="$VAR[TextColorForOverlay]" />
                    </include>
                </control>

                <control type="rss" id="1">
                    <posx>18</posx>
                    <posy>8</posy>
                    <width>1825</width>
                    <height>40</height>
                    <font>MessageTextFont</font>
                    <titlecolor>$VAR[BackgroundColor]</titlecolor>
                    <headlinecolor>$VAR[BackgroundColor]</headlinecolor>
                    <textcolor>$VAR[BackgroundColor]</textcolor>
                    <urlset>1</urlset>
                </control>
                <control type="rss" id="1">
                    <posx>22</posx>
                    <posy>8</posy>
                    <width>1825</width>
                    <height>40</height>
                    <font>MessageTextFont</font>
                    <titlecolor>$VAR[BackgroundColor]</titlecolor>
                    <headlinecolor>$VAR[BackgroundColor]</headlinecolor>
                    <textcolor>$VAR[BackgroundColor]</textcolor>
                    <urlset>1</urlset>
                </control>
                <control type="rss" id="1">
                    <posx>18</posx>
                    <posy>12</posy>
                    <width>1825</width>
                    <height>40</height>
                    <font>MessageTextFont</font>
                    <titlecolor>$VAR[BackgroundColor]</titlecolor>
                    <headlinecolor>$VAR[BackgroundColor]</headlinecolor>
                    <textcolor>$VAR[BackgroundColor]</textcolor>
                    <urlset>1</urlset>
                </control>
                <control type="rss" id="1">
                    <posx>22</posx>
                    <posy>12</posy>
                    <width>1825</width>
                    <height>40</height>
                    <font>MessageTextFont</font>
                    <titlecolor>$VAR[BackgroundColor]</titlecolor>
                    <headlinecolor>$VAR[BackgroundColor]</headlinecolor>
                    <textcolor>$VAR[BackgroundColor]</textcolor>
                    <urlset>1</urlset>
                </control>
                <control type="rss" id="1">
                    <posx>20</posx>
                    <posy>10</posy>
                    <width>1825</width>
                    <height>40</height>
                    <font>MessageTextFont</font>
                    <titlecolor>$VAR[MainColor]</titlecolor>
                    <headlinecolor>$VAR[SecondaryColor]</headlinecolor>
                    <textcolor>$VAR[TextColor]</textcolor>
                    <urlset>1</urlset>
                </control>
            </control>
        </definition>
    </include>
</includes>
