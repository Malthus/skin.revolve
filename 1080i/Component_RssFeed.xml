<?xml version="1.0" encoding="UTF-8"?>
<includes>
    <expression name="VisibilityOfRssFeed">System.GetBool(lookandfeel.enablerssfeeds)</expression>

    <include name="RssFeed">
        <definition>
            <control type="group">
                <visible>$EXP[VisibilityOfRssFeed] + !Window.IsVisible(notification)</visible>

                <include content="BackgroundForOverlay">
                    <param name="visible" value="true" />
                    <param name="posy" value="PosYForUpperBackgroundForOverlay" />
                </include>

                <control type="rss" id="1">
                    <posx>20</posx>
                    <posy>12</posy>
                    <width>1850</width>
                    <height>30</height>
                    <font>MessageTextFont</font>
                    <titlecolor>$VAR[MainColor]</titlecolor>
                    <headlinecolor>$VAR[SecondaryColor]</headlinecolor>
                    <textcolor>$VAR[TextColor]</textcolor>
                    <urlset>1</urlset>
                </control>

                <control type="group">
                    <posx>1855</posx>
                    <posy>PosYForUpperIconForOverlay</posy>
                    <include content="RssFeedFlag">
                        <param name="flagcolor" value="$VAR[SecondaryColor]" />
                    </include>
                </control>
            </control>
        </definition>
    </include>
</includes>
