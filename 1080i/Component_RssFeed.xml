<?xml version="1.0" encoding="UTF-8"?>
<includes>
    <expression name="VisibilityOfRssFeed">System.GetBool(lookandfeel.enablerssfeeds)</expression>

    <include name="RssFeed">
        <definition>
            <control type="group">
                <visible>$EXP[$EXP[VisibilityOfRssFeed]]</visible>

                <control type="image">
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>1920</width>
                    <height>70</height>
                    <texture colordiffuse="$VAR[FademaskColor]">white.png</texture>
                </control>

                <control type="rss" id="1">
                    <posx>20</posx>
                    <posy>15</posy>
                    <width>1885</width>
                    <height>30</height>
                    <font>MessageTextFont</font>
                    <titlecolor>$VAR[MainColor]</titlecolor>
                    <headlinecolor>$VAR[SecondaryColor]</headlinecolor>
                    <textcolor>$VAR[TextColor]</textcolor>
                    <urlset>1</urlset>
                </control>

                <control type="group">
                    <posx>1855</posx>
                    <posy>5</posy>
                    <include content="RssFeedFlag">
                        <param name="flagcolor" value="$VAR[TextColorForOverlay]" />
                    </include>
                </control>
            </control>
        </definition>
    </include>
</includes>
