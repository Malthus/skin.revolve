	<include name="ItemsForProfileListForSettings">
        <param name="id" default="0" />
        <param name="width" default="1100" />
        <param name="labelwidth" default="1060" />

        <definition>
            <itemlayout height="70">
                <include name="NormalItemsForProfileListForSettings">
                    <param name="width" value="$PARAM[width]" />
                    <param name="labelwidth" value="$PARAM[labelwidth]" />
                </include>
            </itemlayout>
                
            <focusedlayout height="70">
                <control type="group">
                    <visible>Control.HasFocus($PARAM[id])</visible>
                    <include name="FocusedItemsForProfileListForSettings">
                        <param name="width" value="$PARAM[width]" />
                        <param name="labelwidth" value="$PARAM[labelwidth]" />
                    </include>
                </control>
                <control type="group">
                    <visible>!Control.HasFocus($PARAM[id])</visible>
                    <include name="NormalItemsForProfileListForSettings">
                        <param name="width" value="$PARAM[width]" />
                        <param name="labelwidth" value="$PARAM[labelwidth]" />
                    </include>
                </control>
            </focusedlayout>
        </definition>
	</include>	

	<include name="CleanLeftRingForSettings">
        <definition>
            <animation effect="slide" tween="quadratic" easing="out" start="-1000,0" end="0,0" time="400" reversible="false">WindowOpen</animation>
            <animation effect="slide" delay="400" tween="quadratic" easing="in" start="0,0" end="-1000,0" time="400" reversible="false">WindowClose</animation>

            <control type="image">
                <posx>-140</posx>
                <width>900</width>
                <height>1080</height>
                <texture background="true" diffuse="elements/ring-maskleft.png">white.png</texture>
                <aspectratio scalediffuse="false">scale</aspectratio>
                <colordiffuse>$VAR[MainColor]</colordiffuse>
            </control>

            <control type="image">
                <posx>-140</posx>
                <width>900</width>
                <height>1080</height>
                <texture>elements/ring-ringsleft.png</texture>
            </control>
        </definition>
	</include>
	
	<include name="ButtonLeftRingForSettings">
        <definition>
            <animation effect="slide" tween="quadratic" easing="out" start="-1000,0" end="0,0" time="500" reversible="false">WindowOpen</animation>
            <animation effect="slide" delay="500" tween="quadratic" easing="in" start="0,0" end="-1000,0" time="500" reversible="false">WindowClose</animation>

            <control type="image">
                <posx>-140</posx>
                <width>900</width>
                <height>1080</height>
                <texture diffuse="elements/ring-maskleft.png">white.png</texture>
                <aspectratio scalediffuse="false">scale</aspectratio>
                <colordiffuse>$VAR[MainColor]</colordiffuse>
            </control>
            <control type="image">
                <posx>20</posx>
                <posy>540</posy>
                <width>520</width>
                <height>440</height>
                <fadetime>200</fadetime>
                <texture colordiffuse="$VAR[BackgroundColor]" fallback="white.png">elements/poster-mask.png</texture>
                <aspectratio>stretch</aspectratio>
            </control>
            <control type="image">
                <posx>-140</posx>
                <width>900</width>
                <height>1080</height>
                <texture>elements/ring-ringsleft.png</texture>
            </control>
        </definition>
	</include>

	<include name="WindowAnimationForSettings">
        <definition>
            <animation effect="slide" tween="quadratic" easing="out" start="-2000,0" end="0,0" time="500" reversible="false">WindowOpen</animation>
            <animation effect="slide" delay="500" tween="quadratic" easing="in" start="0,0" end="-2000,0" time="500" reversible="false">WindowClose</animation>
        </definition>
	</include>
    
	<include name="BackgroundAnimationForSettings">
        <definition>
            <control type="group">
                <visible>IntegerGreaterThan(Skin.String(Background.AnimationLevel),2)</visible>
                <animation effect="slide" tween="quadratic" easing="out" start="-1000,0" end="0,0" time="500" reversible="false">WindowOpen</animation>
                <animation effect="slide" delay="500" tween="quadratic" easing="in" start="0,0" end="-1000,0" time="500" reversible="false">WindowClose</animation>
                
                <include name="OrbitCircle">
                    <param name="posx" value="-140" />
                    <param name="posy" value="750" />
                    <param name="size" value="60" />
                    <param name="radius" value="800" />
                    <param name="time" value="40000" />
                </include>
            </control>
            
            <control type="group">
                <visible>IntegerGreaterThan(Skin.String(Background.AnimationLevel),2)</visible>
                <animation effect="slide" tween="quadratic" easing="out" start="-1000,0" end="0,0" time="500" reversible="false">WindowOpen</animation>
                <animation effect="slide" delay="500" tween="quadratic" easing="in" start="0,0" end="-1000,0" time="500" reversible="false">WindowClose</animation>

                <include name="OrbitCircle">
                    <param name="posx" value="-140" />
                    <param name="posy" value="750" />
                    <param name="size" value="20" />
                    <param name="radius" value="1200" />
                    <param name="time" value="20000" />
                    <param name="direction" value="false" />
                </include>

                <include name="OrbitCircle">
                    <param name="posx" value="-140" />
