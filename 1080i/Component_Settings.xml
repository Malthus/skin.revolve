<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="CleanLeftRingForSettings" description="Small Left Ring For Settings">
		<animation effect="slide" tween="quadratic" easing="out" start="-1000,0" end="0,0" time="400" reversible="false">WindowOpen</animation>
		<animation effect="slide" delay="400" tween="quadratic" easing="in" start="0,0" end="-1000,0" time="400" reversible="false">WindowClose</animation>

		<control type="image">
		    <posx>-140</posx>
			<width>900</width>
			<height>1080</height>
			<texture background="true" diffuse="elements/ring-maskleft.png">white.png</texture>
			<aspectratio scalediffuse="false">scale</aspectratio>
			<colordiffuse>MainColor</colordiffuse>
		</control>

		<control type="image">
		    <posx>-140</posx>
			<width>900</width>
			<height>1080</height>
			<texture>elements/ring-ringsleft.png</texture>
		</control>
	</include>
	
	<include name="ButtonLeftRingForSettings" description="Small Left Ring With Button Area For Settings">
		<animation effect="slide" tween="quadratic" easing="out" start="-1000,0" end="0,0" time="400" reversible="false">WindowOpen</animation>
		<animation effect="slide" delay="400" tween="quadratic" easing="in" start="0,0" end="-1000,0" time="400" reversible="false">WindowClose</animation>

		<control type="image">
		    <posx>-140</posx>
			<width>900</width>
			<height>1080</height>
			<texture diffuse="elements/ring-maskleft.png">white.png</texture>
			<aspectratio scalediffuse="false">scale</aspectratio>
			<colordiffuse>MainColor</colordiffuse>
		</control>
		<control type="image">
			<posx>20</posx>
			<posy>580</posy>
			<width>520</width>
			<height>400</height>
			<fadetime>200</fadetime>
			<texture colordiffuse="BackgroundColor" fallback="white.png">elements/poster-mask.png</texture>
			<aspectratio>stretch</aspectratio>
		</control>
		<control type="image">
		    <posx>-140</posx>
			<width>900</width>
			<height>1080</height>
			<texture>elements/ring-ringsleft.png</texture>
		</control>
	</include>
</includes>
