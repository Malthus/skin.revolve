<includes>
	<include name="NormalItemsForProfileListForSettings">
        <param name="width" default="1100" />
        <param name="labelwidth" default="1060" />

        <definition>
            <control type="image">
                <width>$PARAM[width]</width>
                <height>70</height>
                <aspectratio>stretch</aspectratio>
                <texture colordiffuse="$VAR[BackgroundColor]" border="20">controls/rectangle-fill.png</texture>
            </control>
            
            <control type="group">
                <visible>!IsEmpty(ListItem.Label2)</visible>
                <control type="label">
                    <posx>20</posx>
                    <posy>5</posy>
                    <width>$PARAM[labelwidth]</width>
                    <height>30</height>
                    <font>NormalButtonFont</font>
                    <textcolor>$VAR[MainColor]</textcolor>
                    <info>ListItem.Label</info>
                </control>
                <control type="label">
                    <posx>20</posx>
                    <posy>35</posy>
                    <width>$PARAM[labelwidth]</width>
                    <height>30</height>
                    <font>DetailListItemFont</font>
                    <textcolor>$VAR[MainColor]</textcolor>
                    <info>ListItem.Label2</info>
                </control>
            </control>
            
            <control type="group">
                <visible>IsEmpty(ListItem.Label2)</visible>
                <control type="label">
                    <posx>20</posx>
                    <posy>15</posy>
                    <width>$PARAM[labelwidth]</width>
                    <height>40</height>
                    <font>NormalButtonFont</font>
                    <textcolor>$VAR[MainColor]</textcolor>
                    <info>ListItem.Label</info>
                </control>
            </control>
        </definition>
	</include>
	
