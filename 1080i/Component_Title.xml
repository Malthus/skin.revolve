<?xml version="1.0" encoding="UTF-8"?>
<includes>
    <include name="Title">
        <definition>
            <control type="group">
                <posx>560</posx>
                <posy>140</posy>

                <control type="image">
                    <posx>-80</posx>
                    <posy>-80</posy>
                    <width>960</width>
                    <height>960</height>
                    <texture background="true">elements/circle-shadow.png</texture>
                </control>

                <control type="image">
                    <width>800</width>
                    <height>800</height>
                    <texture colordiffuse="$VAR[MainColor]">elements/circle-mask.png</texture>
                    <aspectratio>stretch</aspectratio>
                </control>

                <control type="image">
                    <posx>69</posx>
                    <posy>69</posy>
                    <width>662</width>
                    <height>662</height>
                    <texture colordiffuse="Black" background="true">circle/revolve.png</texture>
                    <fadetime>400</fadetime>
                    <animation effect="rotate" center="400,400" start="360" end="0" time="2000" loop="true" condition="true">conditional</animation>
                </control>

                <control type="label">
                    <description>Revolve Title</description>
                    <posx>0</posx>
                    <posy>360</posy>
                    <height>80</height>
                    <width>800</width>
                    <font>HugeClockTimeFont</font>
                    <align>center</align>
                    <scroll>false</scroll>
                    <textcolor>$VAR[BackgroundColor]</textcolor>
                    <label>$LOCALIZE[31000]</label>
                </control>
            </control>
        </definition>
    </include>
</includes>
