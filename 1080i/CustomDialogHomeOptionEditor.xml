<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog" id="1196">
    <defaultcontrol always="true">31</defaultcontrol>
    <menucontrol>9000</menucontrol>

    <controls>
        <control type="group">
            <posy>PosYForSixLinesDialog</posy>
            <include content="WindowForDialog">
                <param name="height" value="HeightForSixLinesDialog" />
                <param name="headerlabel" value="$INFO[Window.Property(CustomOptionName)] $LOCALIZE[31974]" />
                <param name="iconsmallvisible" value="true" />
                <param name="icondefaultvisible" value="false" />
                <param name="icontexture" value="icons/icon-pencil.png" />
            </include>

            <control type="grouplist" id="5">
                <posx>560</posx>
                <posy>80</posy>
                <width>1240</width>
                <height>240</height>
                <orientation>vertical</orientation>
                <itemgap>0</itemgap>
                <usecontrolcoords>true</usecontrolcoords>
                <onleft>9000</onleft>

                <control type="label" id="30">
                    <width>1240</width>
                    <font>DialogTextFont</font>
                    <textcolor>$VAR[TextColor]</textcolor>
                    <align>left</align>
                    <label>$LOCALIZE[480]:</label>
                </control>

                <control type="radiobutton" id="31">
                    <description>Home Option Activation Radiobutton</description>
                    <width>1240</width>
                    <radioposx>1180</radioposx>
                    <align>left</align>
                    <label>$LOCALIZE[31405]</label>
                    <selected>Substring(Window.Property(CustomOptionActive),T,left)</selected>
                    <onclick condition="!Substring(Window.Property(CustomOptionActive),T,Left)">SetProperty(CustomOptionActive,True)</onclick>
                    <onclick condition="Substring(Window.Property(CustomOptionActive),T,Left)">SetProperty(CustomOptionActive,False)</onclick>
                </control>

                <control type="button" id="32">
                    <description>Background Image For Custom Option Button</description>
                    <width>1240</width>
                    <font>DialogTextFont</font>
                    <align>left</align>
                    <label>$LOCALIZE[31802]: $INFO[Window.Property(CustomBackgroundImage)]</label>
                    <onclick>Skin.SetImage(Dialog.Input)</onclick>
                    <onclick>SetProperty(CustomBackgroundImage,$INFO[Skin.String(Dialog.Input)])</onclick>
                    <onclick>Skin.Reset(Dialog.Input)</onclick>
                </control>

                <control type="label" id="33">
                    <visible>Substring(Window.Property(Dialog.ImmutablePathVisible),T,left) | Substring(Window.Property(Dialog.CustomWindowVisible),T,left)</visible>
                    <posy>40</posy>
                    <width>1240</width>
                    <font>DialogTextFont</font>
                    <textcolor>$VAR[TextColor]</textcolor>
                    <align>left</align>
                    <label>$LOCALIZE[31973]:</label>
                </control>

                <control type="radiobutton" id="34">
                    <description>Home Option Immutable Path Radiobutton</description>
                    <visible>Substring(Window.Property(Dialog.ImmutablePathVisible),T,left)</visible>
                    <width>1240</width>
                    <radioposx>1180</radioposx>
                    <align>left</align>
                    <label>$LOCALIZE[31204]</label>
                    <selected>Substring(Window.Property(CustomOptionImmutablePath),True,Left)</selected>
                    <onclick condition="!Substring(Window.Property(CustomOptionImmutablePath),T,Left)">SetProperty(CustomOptionImmutablePath,True)</onclick>
                    <onclick condition="Substring(Window.Property(CustomOptionImmutablePath),T,Left)">SetProperty(CustomOptionImmutablePath,False)</onclick>
                </control>

                <control type="radiobutton" id="35">
                    <description>Home Option Custom Window Radiobutton</description>
                    <visible>Substring(Window.Property(Dialog.CustomWindowVisible),T,left)</visible>
                    <width>1240</width>
                    <radioposx>1180</radioposx>
                    <align>left</align>
                    <label>$LOCALIZE[31631]</label>
                    <selected>Substring(Window.Property(CustomOptionCustomWindow),True,Left)</selected>
                    <onclick condition="!Substring(Window.Property(CustomOptionCustomWindow),T,Left)">SetProperty(CustomOptionCustomWindow,True)</onclick>
                    <onclick condition="Substring(Window.Property(CustomOptionCustomWindow),T,Left)">SetProperty(CustomOptionCustomWindow,False)</onclick>
                </control>
            </control>

            <control type="grouplist" id="9000">
                <include content="MarkupForButtonListForDialog">
                    <param name="posy" value="180" />
                    <param name="height" value="140" />
                </include>
                <onright>5</onright>

                <control type="button" id="25">
                    <description>Clear Button</description>
                    <label>$LOCALIZE[192]</label>
                    <onclick>ClearProperty(CustomBackgroundImage)</onclick>
                </control>
                <control type="button" id="20">
                    <description>Ok Button</description>
                    <posy>20</posy>
                    <label>$LOCALIZE[186]</label>
                    <onclick condition="!Substring(Window.Property(CustomOptionActive),T,Left)">Skin.Reset($INFO[Window.Property(TargetOption)].Active)</onclick>
                    <onclick condition="Substring(Window.Property(CustomOptionActive),T,Left)">Skin.SetBool($INFO[Window.Property(TargetOption)].Active)</onclick>
                    <onclick>Skin.SetString($INFO[Window.Property(TargetOption)].BackgroundImage,$INFO[Window.Property(CustomBackgroundImage)])</onclick>
                    <onclick condition="!Substring(Window.Property(CustomOptionImmutablePath),T,Left)">Skin.Reset($INFO[Window.Property(TargetOption)].ImmutablePath)</onclick>
                    <onclick condition="Substring(Window.Property(CustomOptionImmutablePath),T,Left)">Skin.SetBool($INFO[Window.Property(TargetOption)].ImmutablePath)</onclick>
                    <onclick condition="!Substring(Window.Property(CustomOptionCustomWindow),T,Left)">Skin.Reset($INFO[Window.Property(TargetOption)].CustomWindow)</onclick>
                    <onclick condition="Substring(Window.Property(CustomOptionCustomWindow),T,Left)">Skin.SetBool($INFO[Window.Property(TargetOption)].CustomWindow)</onclick>
                    <onclick>Close</onclick>
                </control>
                <control type="button" id="21">
                    <description>Cancel Button</description>
                    <label>$LOCALIZE[222]</label>
                    <onclick>Close</onclick>
                </control>
            </control>
        </control>
    </controls>
</window>
