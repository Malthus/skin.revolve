<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog" id="1187">
	<defaultcontrol>21</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
    <onload>RunScript(special://skin/scripts/default.py,FillPropertyFromTextFile,$INFO[Window.Property(DialogTextFile)],DialogText,1187)</onload>

	<controls>
		<control type="group">
			<posy>PosYForFifteenLinesDialog</posy>
			<include name="FifteenLinesDialog" />

            <include name="DefaultIconForDialog">
                <param name="texture" value="icons/icon-textfile.png" />
            </include>

            <include name="HeaderForDialog">
                <param name="label" value="$INFO[Window.Property(DialogTitle)]" />
            </include>

			<control type="textbox" id="5">
                <include name="MarkupForTextboxForDialog">
                    <param name="height" value="600" />
                    <param name="pagecontrol" value="61" />
                </include>
				<label>$INFO[Window.Property(DialogText)]</label>
			</control>

			<control type="scrollbar" id="61">
				<include name="MarkupForScrollbarForDialog">
                    <param name="posy" value="80" />
                    <param name="height" value="600" />
                </include>
				<onleft>9000</onleft>
				<onright>Noop</onright>
			</control>
            
			<control type="grouplist" id="9000">
                <include name="MarkupForButtonListForDialog">
                    <param name="posy" value="640" />
                    <param name="height" value="40" />
                </include>
                <onright>61</onright>
            
                <control type="button" id="21">
                    <description>Close Button</description>
                    <label>$LOCALIZE[31915]</label>
                    <onclick>Close</onclick>
                </control>
			</control>
		</control>
	</controls>
</window>
