<?xml version="1.0" encoding="UTF-8"?>
<window id="1110">
    <defaultcontrol always="true">100</defaultcontrol>
    <onunload condition="!Window.Next(music) + !Window.Next(musicplaylist)">ClearProperty(ViewMode,music)</onunload>
    <onunload condition="!Window.Next(music) + !Window.Next(musicplaylist)">ClearProperty(ViewMode,musicplaylist)</onunload>

    <controls>
        <include content="GlobalBackground" />

        <control type="button" id="100">
            <visible allowhiddenfocus="true">true</visible>
            <posx>950</posx>
            <posy>530</posy>
            <width>20</width>
            <height>20</height>
            <texturenofocus></texturenofocus>
            <texturefocus></texturefocus>
            <font></font>
            <label></label>
            <onup>403</onup>
            <ondown>9001</ondown>
            <onleft>SetProperty(ViewMode,Jukebox,music)</onleft>
            <onleft>SetProperty(ViewMode,Jukebox,musicplaylist)</onleft>
            <onleft>ActivateWindow(musicplaylist)</onleft>
            <onright>SetProperty(ViewMode,Jukebox,music)</onright>
            <onright>SetProperty(ViewMode,Jukebox,musicplaylist)</onright>
            <onright>ActivateWindow(music,musicdb://albums/,return)</onright>
        </control>

        <include content="LeftHandle">
            <param name="id" value="102" />
            <param name="visible" value="Skin.HasSetting(SideMenu.Visible)" />
            <param name="texturefocus" value="controls/button-playlist.png" />
            <param name="texturenofocus" value="controls/button-playlist.png" />
            <param name="onright" value="100" />
            <param name="onclick" value="SetProperty(ViewMode,Jukebox,music)" />
            <param name="onclick2" value="SetProperty(ViewMode,Jukebox,musicplaylist)" />
            <param name="onclick3" value="ActivateWindow(musicplaylist)" />
        </include>

        <include content="RightHandle">
            <param name="id" value="103" />
            <param name="visible" value="Skin.HasSetting(SideMenu.Visible)" />
            <param name="texturefocus" value="controls/button-albums.png" />
            <param name="texturenofocus" value="controls/button-albums.png" />
            <param name="onleft" value="100" />
            <param name="onclick" value="SetProperty(ViewMode,Jukebox,music)" />
            <param name="onclick2" value="SetProperty(ViewMode,Jukebox,musicplaylist)" />
            <param name="onclick3" value="ActivateWindow(music,musicdb://albums/,return)" />
        </include>

        <control type="group">
            <description>Top Player Controls Handle</description>
            <visible>Skin.HasSetting(SideMenu.Visible) + Player.HasMedia</visible>

            <animation type="conditional" condition="ControlGroup(200).HasFocus()">
                <effect type="slide" start="0,0" end="0,-64" time="200" />
            </animation>

            <include content="TopHandle">
                <param name="id" value="101" />
                <param name="visible" value="true" />
                <param name="texturefocus" value="controls/button-controls.png" />
                <param name="texturenofocus" value="controls/button-controls.png" />
                <param name="ondown" value="100" />
                <param name="onclick" value="SetFocus(403)" />
            </include>
        </control>

        <control type="group">
            <description>Top Player Controls</description>
            <animation type="conditional" condition="!ControlGroup(200).HasFocus()">
                <effect type="slide" start="0,0" end="0,-120" time="200" />
            </animation>

            <include content="TopMusicControlsForPlayer">
                <param name="id" value="200" />
                <param name="ondown" value="100" />
            </include>

            <include content="DescriptionForControlsForPlayer" />
        </control>

        <control type="group">
            <description>Jukebox Settings</description>
            <animation effect="slide" start="0,0" end="0,280" time="500" reversible="false">WindowClose</animation>
            <animation type="conditional" condition="!ControlGroup(9001).HasFocus() + !ControlGroup(9002).HasFocus() + !ControlGroup(9010).HasFocus() + !ControlGroup(9020).HasFocus() + !ControlGroup(9021).HasFocus()">
                <effect type="slide" start="0,0" end="0,280" time="200" />
            </animation>

            <include content="BottomHandle">
                <param name="id" value="104" />
                <param name="posy" value="760" />
                <param name="visible" value="Skin.HasSetting(SideMenu.Visible)" />
                <param name="texturefocus" value="controls/button-settings.png" />
                <param name="texturenofocus" value="controls/button-settings.png" />
                <param name="onup" value="100" />
                <param name="onclick" value="SetFocus(9001)" />
            </include>

            <control type="image">
                <posx>0</posx>
                <posy>800</posy>
                <width>1920</width>
                <height>280</height>
                <fadetime>100</fadetime>
                <texture colordiffuse="$VAR[BackgroundColor]">white.png</texture>
                <aspectratio>stretch</aspectratio>
            </control>

            <control type="grouplist" id="9001">
                <posx>20</posx>
                <posy>820</posy>
                <width>930</width>
                <height>240</height>
                <orientation>vertical</orientation>
                <itemgap>0</itemgap>
                <onup>100</onup>
                <ondown>Noop</ondown>
                <onleft>Noop</onleft>
                <onright>9002</onright>
                
                <control type="radiobutton" id="1">
                    <description>Background Option</description>
                    <width>930</width>
                    <radioposx>870</radioposx>
                    <align>left</align>
                    <label>$LOCALIZE[31124]</label>
                    <selected>Skin.HasSetting(Background.Video.Active)</selected>
                    <onclick>Skin.ToggleSetting(Background.Video.Active)</onclick>
                </control>
            </control>

            <control type="grouplist" id="9002">
                <posx>970</posx>
                <posy>820</posy>
                <width>930</width>
                <height>240</height>
                <orientation>vertical</orientation>
                <itemgap>0</itemgap>
                <onup>100</onup>
                <ondown>Noop</ondown>
                <onleft>9001</onleft>
                <onright>Noop</onright>
            </control>

            <include content="InvisibleButton">
                <param name="id" value="9020" />
                <param name="posx" value="0" />
                <param name="posy" value="8000" />
                <param name="width" value="1920" />
                <param name="height" value="280" />
            </include>
        </control>

        <control type="group">
            <include content="DefaultAnimationForOSD" />
            <include content="MediaOverlay" />
        </control>
    </controls>
</window>
