<?xml version="1.0" encoding="UTF-8"?>
<window id="1102">
	<defaultcontrol always="yes">450</defaultcontrol>
    <menucontrol>9001</menucontrol>
    <onload condition="!IsEmpty(Window.Property(MenuTitle))">Skin.SetString(MyLists.MenuTitle,$INFO[Window.Property(MenuTitle)])</onload>
    <onload condition="!IsEmpty(Window.Property(SourceInfo))">Skin.SetString(MyLists.SourceInfo,$INFO[Window.Property(SourceInfo)])</onload>
    <onload condition="IsEmpty(Window.Property(MenuTitle))">SetProperty(MenuTitle,$INFO[Skin.String(MyLists.MenuTitle)])</onload>
    <onload condition="IsEmpty(Window.Property(SourceInfo))">SetProperty(SourceInfo,$INFO[Skin.String(MyLists.SourceInfo)])</onload>
    
	<controls>
		<include name="FullscreenDimensions" />
		<include name="GlobalBackground" />

		<control type="fixedlist" id="450">
			<visible allowhiddenfocus="true">Skin.HasSetting(Debug.ListBorder.Visible)</visible>
			<posx>0</posx>
			<posy>0</posy>
			<width>1920</width>
			<height>1080</height>
			<focusposition>4</focusposition>
			<onup>450</onup>
			<ondown>450</ondown>
			<onleft>9000</onleft>
			<onright>Noop</onright>

            <include name="InvisibleVerticalListItemsForMenu" />

            <content>plugin://$INFO[Window.Property(SourceInfo)]</content>
		</control>

        <control type="group">
            <visible>Skin.HasSetting(MyItemsMenu.Default)</visible>
            <include name="RevolveMenu">
                <param name="label" value="$INFO[Window.Property(MenuTitle)]" />
            </include>
		</control>
        
        <control type="group">
            <visible>!Skin.HasSetting(MyItemsMenu.Default)</visible>
            <include name="CircleMenu">
                <param name="label" value="$INFO[Window.Property(MenuTitle)]" />
            </include>
        </control>
        
		<control type="group" id="9000">
			<include name="SideMenu" />

			<control type="grouplist" id="9001">
                <include name="BeginOfButtonListForSideMenu">
                    <param name="onright" value="450" />
                </include>

                <include name="ViewGroupLabelForSideMenu" />
				<include name="MyItemsMenuTypeButtonForSideMenu" />

                <include name="PlaylistLibraryGroupLabelForSideMenu" />
                <include name="GenericPlaylistButtonForSideMenu" />
                <include name="ClearPlaylistButtonForSideMenu" />

                <include name="NavigationGroupLabelForSideMenu">
                    <param name="visible" value="Skin.HasSetting(SideMenu.Grouped) + Control.IsVisible(91)" />
                </include>
				<include name="GlobalSearchButtonForSideMenu" />
                
                <include name="EndOfButtonListForSideMenu" />
			</control>

            <include name="PlayerControlsForSideMenu">
                <param name="onright" value="450" />
            </include>
		</control>
        
		<include name="Overlay" />
        <include name="BackButton" />
	</controls>
</window>
