<?xml version="1.0" encoding="UTF-8"?>
<window id="1103">
	<defaultcontrol always="yes">450</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
    <onload condition="!IsEmpty(Window.Property(MenuTitle))">Skin.SetString(MyLists.MenuTitle,$INFO[Window.Property(MenuTitle)])</onload>
    <onload condition="!IsEmpty(Window.Property(SourceInfo))">Skin.SetString(MyLists.SourceInfo,$INFO[Window.Property(SourceInfo)])</onload>
    <onload condition="IsEmpty(Window.Property(MenuTitle))">SetProperty(MenuTitle,$INFO[Skin.String(MyLists.MenuTitle)])</onload>
    <onload condition="IsEmpty(Window.Property(SourceInfo))">SetProperty(SourceInfo,$INFO[Skin.String(MyLists.SourceInfo)])</onload>
    <onload>RunScript(special://skin/scripts/PopulateSubmenuFromSkinVariables.py,$INFO[Window.Property(SourceInfo)],MySubmenu%02dOption,1103)</onload>

	<controls>
		<include>GlobalBackground</include>

		<control type="fixedlist" id="450" description="Invisible My Submenu Wraplist">
			<visible allowhiddenfocus="true">true</visible>
			<posx>0</posx>
			<posy>60</posy>
			<width>1920</width>
			<height>1000</height>
			<focusposition>0</focusposition>
			<onup>450</onup>
			<ondown>450</ondown>
			<onleft>9000</onleft>
			<onright>Noop</onright>

            <include>InvisibleItemsForMenu</include>
            
            <content>
                <item id="1" description="My Submenu 1 Option">
                    <visible>!IsEmpty(Window.Property(MySubmenu01Option.Name))</visible>
                    <label fallback="31002">$INFO[Window.Property(MySubmenu01Option.Name)]</label>
                    <property name="Label3">$INFO[Window.Property(MySubmenu01Option.Subtitle)]</property>
                    <icon>$INFO[Window.Property(MySubmenu01Option.BackgroundImage)]</icon>
                    <onclick>SetProperty(MenuTitle,$INFO[Window.Property(MySubmenu01Option.MenuTitle)],$INFO[Skin.String(MySubmenu01Option.Window)])</onclick>
                    <onclick>SetProperty(SourceInfo,$INFO[Window.Property(MySubmenu01Option.SourceInfo)],$INFO[Skin.String(MySubmenu01Option.Window)])</onclick>
                    <onclick>$INFO[Window.Property(MySubmenu01Option.Action)]</onclick>
                </item>
            </content>
		</control>

        <control type="group" description="Revolve Menu">
            <visible>true</visible>
            <include>ListForRevolveMenu</include>
            <include>RingForRevolveMenu</include>
            <include>IconForRevolveMenu</include>
            
            <control type="label" description="My Items Menu Title">
                <include>MarkupForTitleForRevolveMenu</include>
                <label>$INFO[Window.Property(MenuTitle)]</label>
            </control>
		</control>
        
        <control type="group" description="Circle Menu">
            <visible>false</visible>
            <include>CenterIconForCircleMenu</include>
            <include>ListForCircleMenu</include>
            
            <control type="label" description="My Items Menu Title">
                <include>MarkupForTitleForCircleMenu</include>
                <label>$INFO[Window.Property(MenuTitle)]</label>
            </control>
        </control>
        
		<control type="group" id="9000">
			<include>SideMenu</include>

			<control type="grouplist" id="9001">
				<posx>24</posx>
				<posy>20</posy>
				<width>482</width>
				<height>480</height>
				<itemgap>0</itemgap>
				<onleft>Noop</onleft>
				<onright>450</onright>
				<onup>9010</onup>
				<ondown>9010</ondown>
				<orientation>vertical</orientation>

				<include>MyItemsMenuTypeButtonForSideMenu</include>
                <include>GenericPlaylistButtonForSideMenu</include>
                <include>ClearPlaylistButtonForSideMenu</include>
			</control>

			<control type="group" description="Player Controls">
				<visible>Player.HasMedia</visible>
				<posx>PosXForCircleControlsForPlayer</posx>
				<posy>PosYForCircleControlsForPlayer</posy>
				<include>CircleControlsForPlayer</include>
			</control>
		</control>
	</controls>
</window>
