<?xml version="1.0" encoding="UTF-8"?>
<window id="111">
	<defaultcontrol always="true">3110</defaultcontrol>
	<allowoverlay>yes</allowoverlay>

	<controls>
		<control type="group">
			<posx>681</posx>
			<posy>200</posy>
			
			<control type="group" description="Background for Button Menu">
				<control type="image">
					<posx>-30</posx>
					<posy>-30</posy>
					<width>618</width>
					<height>760</height>
					<fadetime>100</fadetime>
					<texture border="30">elements/poster-shadow.png</texture>
					<aspectratio>stretch</aspectratio>
				</control>
	
				<control type="image">
					<width>558</width>
					<height>700</height>
					<fadetime>100</fadetime>
					<texture colordiffuse="BackgroundColor" fallback="white.png">elements/poster-mask.png</texture>
					<aspectratio>stretch</aspectratio>
				</control>
			</control>

			<control type="grouplist" id="3110">
				<posx>22</posx>
				<posy>20</posy>
				<width>512</width>
				<height>580</height>
				<itemgap>0</itemgap>
				<onup>3110</onup>
				<ondown>3110</ondown>
				<onleft>Noop</onleft>
				<onright>Noop</onright>
				<orientation>vertical</orientation>

				<control type="button" id="3111" description="Exit Button">
					<visible>System.ShowExitButton</visible>
					<width>512</width>
					<height>60</height>
					<label>13012</label>
					<onclick>Quit()</onclick>
				</control>

				<control type="button" id="3116" description="Shutdown Bottun">
					<width>512</width>
					<height>60</height>
					<label>13005</label>
					<onclick>ShutDown()</onclick>
				</control>

				<control type="button" id="3113" description="Logoff Profile Button">
					<visible>System.IsLoggedOn + System.HasLoginScreen</visible>
					<width>512</width>
					<height>60</height>
					<label>$LOCALIZE[20126] $INFO[System.ProfileName]</label>
					<onclick>Dialog.Close(all,true)</onclick>
					<onclick>System.LogOff()</onclick>
				</control>

				<control type="button" id="3117" description="Suspend Button">
					<width>512</width>
					<height>60</height>
					<label>13011</label>
					<onclick>Suspend()</onclick>
				</control>

				<control type="button" id="3118" description="Reboot Button">
					<width>512</width>
					<height>60</height>
					<label>13013</label>
					<onclick>Reset()</onclick>
				</control>

				<control type="button" id="3112" description="Master Mode Button">
					<visible>System.HasLocks</visible>
					<width>512</width>
					<height>60</height>
					<label>20046</label>
					<altlabel>20045</altlabel>
					<onclick>Mastermode()</onclick>
				</control>

				<control type="button" id="3114" description="Custom Cancel Timer Button">
					<visible>System.HasAlarm(shutdowntimer)</visible>
					<width>512</width>
					<height>60</height>
					<label>20151</label>
					<onclick>CancelAlarm(shutdowntimer)</onclick>
				</control>

				<control type="button" id="3115" description="Custom Shutdown Timer Button">
					<visible>!System.HasAlarm(shutdowntimer)</visible>
					<width>512</width>
					<height>60</height>
					<label>20150</label>
					<onclick>AlarmClock(shutdowntimer,XBMC.Shutdown())</onclick>
				</control>

				<control type="label" id="3119" description="Alarm Time Label">
					<visible>System.HasAlarm(shutdowntimer)</visible>
					<width>512</width>
					<height>60</height>
					<align>center</align>
					<label>$LOCALIZE[20145] [B]$INFO[System.Alarmpos][/B]</label>
				</control>
			</control>
		</control>
	</controls>
</window>
