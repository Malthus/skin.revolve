<?xml version="1.0" encoding="UTF-8"?>
<window id="111">
	<defaultcontrol always="true">3110</defaultcontrol>
	<allowoverlay>yes</allowoverlay>

	<controls>
		<control type="group">
			<posx>681</posx>
			<posy>200</posy>
			
			<control type="group">
					<description>Background for Button Menu</description>
				<control type="image">
					<posx>-30</posx>
					<posy>-30</posy>
					<width>618</width>
					<height>760</height>
					<fadetime>100</fadetime>
					<texture border="30">elements/poster-shadow.png</texture>
					<aspectratio>stretch</aspectratio>
				</control>
	
				<control type="image">
					<width>558</width>
					<height>700</height>
					<fadetime>100</fadetime>
					<texture colordiffuse="BackgroundColor" fallback="white.png">elements/poster-mask.png</texture>
					<aspectratio>stretch</aspectratio>
				</control>
			</control>

			<control type="grouplist" id="3110">
				<posx>22</posx>
				<posy>20</posy>
				<width>512</width>
				<height>580</height>
				<itemgap>0</itemgap>
				<onup>3110</onup>
				<ondown>3110</ondown>
				<onleft>Noop</onleft>
				<onright>Noop</onright>
				<orientation>vertical</orientation>

				<control type="button" id="1">
					<description>Exit Button</description>
					<visible>System.ShowExitButton</visible>
					<width>512</width>
					<height>60</height>
					<label>$LOCALIZE[13012]</label>
					<onclick>Quit()</onclick>
				</control>

				<control type="button" id="2">
					<description>Shutdown Button</description>
                    <visible>System.CanPowerDown</visible>
					<width>512</width>
					<height>60</height>
					<label>$LOCALIZE[13005]</label>
					<onclick>ShutDown()</onclick>
				</control>

				<control type="button" id="3">
					<description>Logoff Profile Button</description>
					<visible>System.IsLoggedOn + [System.HasLoginScreen | IntegerGreaterThan(System.ProfileCount,1)]</visible>
					<width>512</width>
					<height>60</height>
					<label>$LOCALIZE[20126] $INFO[System.ProfileName]</label>
					<onclick>Dialog.Close(all,true)</onclick>
					<onclick>System.LogOff()</onclick>
				</control>

				<control type="button" id="4">
					<description>Suspend Button</description>
					<visible>System.CanSuspend</visible>
                    <width>512</width>
					<height>60</height>
					<label>$LOCALIZE[13011]</label>
					<onclick>Suspend()</onclick>
				</control>

				<control type="button" id="5">
					<description>Hibernate Button</description>
					<visible>System.CanHibernate</visible>
                    <width>512</width>
					<height>60</height>
					<label>$LOCALIZE[13010]</label>
					<onclick>Hibernate()</onclick>
				</control>

				<control type="button" id="6">
					<description>Reboot Button</description>
					<visible>System.CanReboot</visible>
                    <width>512</width>
					<height>60</height>
					<label>$LOCALIZE[13013]</label>
					<onclick>Reset()</onclick>
				</control>

				<control type="button" id="7">
					<description>Custom Shutdown Timer Button</description>
					<visible>!System.HasAlarm(shutdowntimer)</visible>
					<width>512</width>
					<height>60</height>
					<label>$LOCALIZE[20150]</label>
					<onclick>AlarmClock(shutdowntimer,XBMC.Shutdown())</onclick>
				</control>

				<control type="button" id="8">
					<description>Custom Cancel Timer Button</description>
					<visible>System.HasAlarm(shutdowntimer)</visible>
					<width>512</width>
					<height>60</height>
					<label>$LOCALIZE[20151]</label>
					<onclick>CancelAlarm(shutdowntimer)</onclick>
				</control>

				<control type="togglebutton" id="9">
					<description>Master Mode Button</description>
					<visible>System.HasLocks</visible>
					<width>512</width>
					<height>60</height>
					<label>$LOCALIZE[20046]</label>
					<altlabel>$LOCALIZE[20045]</altlabel>
					<onclick>Mastermode()</onclick>
				</control>

				<control type="button" id="10">
					<description>Settings Button</description>
					<visible>!Skin.HasSetting(SettingsOption.Active)</visible>
					<width>512</width>
					<height>60</height>
					<label>$LOCALIZE[5]</label>
					<onclick>ActivateWindow(settings)</onclick>
				</control>

				<control type="label" id="20">
					<description>Alarm Time Label</description>
					<visible>System.HasAlarm(shutdowntimer)</visible>
					<width>512</width>
					<height>60</height>
					<align>center</align>
					<label>$LOCALIZE[20145] [B]$INFO[System.Alarmpos][/B]</label>
				</control>
			</control>
		</control>
	</controls>
</window>
