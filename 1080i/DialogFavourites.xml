<?xml version="1.0" encoding="UTF-8"?>
<window id="134" type="dialog">
	<defaultcontrol always="true">400</defaultcontrol>
	<allowoverlay>yes</allowoverlay>

	<controls>
		<include>FullscreenDimensions</include>
		<include>GlobalBackground</include>

		<control type="button" id="400" description="Empty Favourites List Condition">
			<texturenofocus>-</texturenofocus>
            <texturefocus>-</texturefocus>
			<onfocus condition="!StringCompare(Container(450).NumItems,0)">SetFocus(450)</onfocus>
		</control>
        
		<control type="fixedlist" id="450" description="Invisible Favourites Wraplist">
			<visible allowhiddenfocus="true">Skin.HasSetting(DebugListBorder.Visible)</visible>
			<posx>0</posx>
			<posy>0</posy>
			<width>1920</width>
			<height>1080</height>
			<focusposition>4</focusposition>
			<scrolltime>200</scrolltime>
            <onup>450</onup>
            <ondown>450</ondown>
			<onleft>9000</onleft>
			<onright>Noop</onright>

            <include>InvisibleVerticalListItemsForMenu</include>
        </control>

        <control type="group" description="Revolve Menu">
            <visible>Skin.HasSetting(FavouritesMenu.Default)</visible>
            <include>ListForRevolveMenu</include>
            <include>RingForRevolveMenu</include>
            
       		<control type="group" description="Favourites Circle Image">
                <animation effect="slide" tween="quadratic" easing="out" start="-1000,0" end="0,0" time="400" reversible="false">WindowOpen</animation>
                <animation effect="slide" delay="400" tween="quadratic" easing="in" start="0,0" end="-1000,0" time="400" reversible="false">WindowClose</animation>

                <control type="image">
                    <posx>-280</posx>
                    <posy>330</posy>
                    <width>662</width>
                    <height>662</height>
                    <texture background="true">circle/favourites.png</texture>
                    <fadetime>500</fadetime>
                    <colordiffuse>55000000</colordiffuse>
                </control>
            </control>
            
            <include>IconForRevolveMenu</include>

            <control type="label" description="Favourites Menu Title">
                <include>MarkupForTitleForRevolveMenu</include>
                <label>$LOCALIZE[1036]</label>
            </control>
        </control>

        <control type="group" description="Circle Menu">
            <visible>!Skin.HasSetting(FavouritesMenu.Default)</visible>
            <include>CenterIconForCircleMenu</include>
            <include>ListForCircleMenu</include>
            
            <control type="label" description="Favourites Menu Title">
                <include>MarkupForTitleForCircleMenu</include>
                <label>$LOCALIZE[1036]</label> 
            </control>
        </control>
        
		<control type="group" id="9000">
			<include>SideMenu</include>

			<control type="grouplist" id="9001">
                <include name="ButtonListForSideMenu">
                    <param name="onright" value="450" />
                </include>

                <include>ViewGroupLabelForSideMenu</include>
				<include>FavouritesMenuTypeButtonForSideMenu</include>
			</control>

            <include name="PlayerControlsForSideMenu">
                <param name="onright" value="450" />
            </include>
		</control>
        
        <include>BackButton</include>
	</controls>
</window>
