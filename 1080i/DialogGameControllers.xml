                <onright>5</onright>
                <onup>9000</onup>
                <ondown>9000</ondown>

                <include content="HelpButtonForDialog">
                    <param name="id" default="17" />
                </include>
                <include content="ButtonForDialog">
                    <param name="id" default="20" />
                    <param name="label" default="21452" />
                </include>
                <include content="ResetButtonForDialog">
                    <param name="id" default="19" />
