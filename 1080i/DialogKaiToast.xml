<?xml version="1.0" encoding="UTF-8"?>
<window id="107">
	<defaultcontrol always="true">-</defaultcontrol>
	<allowoverlay>yes</allowoverlay>

	<controls>
		<control type="group">
            <control type="group">
                <posx>PosXForIconForMessage</posx>
				<posy>PosYForIconForMessage</posy>
                <include name="BorderedBackgroundForSmallCircleThumbnailIcon" />

                <control type="image" id="400" description="File Icon">
                    <width>90</width>
                    <height>90</height>
                    <texture diffuse="elements/circle-mask.png">DefaultFile.png</texture>
                    <aspectratio>keep</aspectratio>
                </control>

                <control type="image" id="403" description="Info Icon">
                    <visible>false</visible>
                    <width>90</width>
                    <height>90</height>
                    <texture diffuse="elements/circle-mask.png">DefaultIconInfo.png</texture>
                    <aspectratio>keep</aspectratio>
                </control>

                <control type="image" id="404" description="Warning Icon">
                    <visible>false</visible>
                    <width>90</width>
                    <height>90</height>
                    <texture diffuse="elements/circle-mask.png">DefaultIconWarning.png</texture>
                    <aspectratio>keep</aspectratio>
                </control>

                <control type="image" id="405" description="Error Icon">
                    <visible>false</visible>
                    <width>90</width>
                    <height>90</height>
                    <texture diffuse="elements/circle-mask.png">DefaultIconError.png</texture>
                    <aspectratio>keep</aspectratio>
                </control>                
            </control>

            <control type="group">
                <posx>PosXForContentForMessage</posx>
                <posy>PosYForContentForMessage</posy>
                
                <control type="group">
                    <posx>0</posx>
                    <posy>4</posy>
                    
                    <include name="BackgroundForNormalOutlineLabel">
                        <param name="width" value="1020" />
                        <param name="height" value="40" />
                        <param name="font" value="BigInformationFont" />
                        <param name="outlinecolor" value="BackgroundColor" />
                        <param name="label" value="$INFO[Control.GetLabel(401)]" />
                    </include>
                    
                    <control type="label" id="401" description="Message Header Label">
                        <width>1020</width>
                        <height>40</height>
                        <font>BigInformationFont</font>
                        <textcolor>MainColor</textcolor>
                        <label>-</label>
                    </control>
                </control>

                <control type="group">
                    <posx>0</posx>
                    <posy>44</posy>
                    
                    <include name="BackgroundForNormalOutlineLabel">
                        <param name="width" value="1020" />
                        <param name="height" value="40" />
                        <param name="font" value="BigInformationFont" />
                        <param name="outlinecolor" value="BackgroundColor" />
                        <param name="label" value="$INFO[Control.GetLabel(402)]" />
                    </include>
                    
                    <control type="label" id="402" description="Message Content Label">
                        <width>1020</width>
                        <height>40</height>
                        <font>BigInformationFont</font>
                        <textcolor>MainColor</textcolor>
                        <label>-</label>
                    </control>
                </control>
			</control>
		</control>
	</controls>
</window>
