<?xml version="1.0" encoding="UTF-8"?>
<window id="107">
	<controls>
		<control type="group">
            <posx>0</posx>
            <posy>80</posy>

            <control type="group">
                <posx>PosXForIconForMessage</posx>
				<posy>PosYForIconForMessage</posy>

                <include name="BackgroundAnimationForMessage" />
                <include name="BorderedBackgroundForSmallCircleThumbnailIcon" />

                <control type="image" id="400">
                    <width>90</width>
                    <height>90</height>
                    <texture diffuse="elements/circle-mask.png">-</texture>
                    <aspectratio>keep</aspectratio>
                </control>
            </control>

            <control type="group">
                <posx>PosXForContentForMessage</posx>
                <posy>PosYForContentForMessage</posy>
                
                <control type="group">
                    <description>Message Header Label</description>
                    
                    <include name="BackgroundForOutlineLabel">
                        <param name="width" value="WidthForContentForMessage" />
                        <param name="height" value="40" />
                        <param name="font" value="MessageTitleFont" />
                        <param name="outlinecolor" value="MainColor" />
                        <param name="outlinesize" value="2" />
                        <param name="label" value="$INFO[Control.GetLabel(401)]" />
                    </include>
                    
                    <control type="label" id="401">
                        <width>WidthForContentForMessage</width>
                        <height>40</height>
                        <font>MessageTitleFont</font>
                        <textcolor>BackgroundColor</textcolor>
                        <label>-</label>
                    </control>
                </control>

                <control type="group">
                    <description>Message Content Label</description>
                    <posy>40</posy>
                    
                    <include name="BackgroundForOutlineLabel">
                        <param name="width" value="WidthForContentForMessage" />
                        <param name="height" value="40" />
                        <param name="font" value="MessageTextFont" />
                        <param name="outlinecolor" value="MainColor" />
                        <param name="outlinesize" value="2" />
                        <param name="label" value="$INFO[Control.GetLabel(402)]" />
                    </include>
                    
                    <control type="label" id="402">
                        <width>WidthForContentForMessage</width>
                        <height>40</height>
                        <font>MessageTextFont</font>
                        <textcolor>BackgroundColor</textcolor>
                        <label>-</label>
                    </control>
                </control>
			</control>
		</control>
	</controls>
</window>
