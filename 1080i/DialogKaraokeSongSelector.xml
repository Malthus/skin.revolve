<?xml version="1.0" encoding="UTF-8"?>
<window id="143">
	<allowoverlay>yes</allowoverlay>

	<controls>
		<control type="group">
            <control type="group">
                <posx>PosXForIconForMessage</posx>
				<posy>PosYForIconForMessage</posy>
                <include name="BorderedBackgroundForSmallCircleThumbnailIcon" />
                    
                <control type="image">
                    <width>90</width>
                    <height>90</height>
                    <texture colordiffuse="BackgroundColor">icons/icon-microphone.png</texture>
                    <aspectratio>keep</aspectratio>
                </control>
            </control>

            <control type="group">
                <posx>PosXForContentForMessage</posx>
                <posy>PosYForContentForMessage</posy>
                
                <control type="group">
                    <description>Song Number Label</description>
                    
                    <include name="BackgroundForNormalOutlineLabel">
                        <param name="width" value="WidthForContentForMessage" />
                        <param name="height" value="40" />
                        <param name="font" value="BigInformationFont" />
                        <param name="outlinecolor" value="BackgroundColor" />
                        <param name="label" value="$INFO[Control.GetLabel(401)]" />
                    </include>
                    
                    <control type="label" id="401">
                        <width>WidthForContentForMessage</width>
                        <height>40</height>
                        <font>BigInformationFont</font>
                        <textcolor>MainColor</textcolor>
                        <label>-</label>
                    </control>
                </control>

                <control type="group">
                    <description>Song Name Label</description>
                    <posy>40</posy>
                    
                    <include name="BackgroundForNormalOutlineLabel">
                        <param name="width" value="WidthForContentForMessage" />
                        <param name="height" value="40" />
                        <param name="font" value="BigInformationFont" />
                        <param name="outlinecolor" value="BackgroundColor" />
                        <param name="label" value="$INFO[Control.GetLabel(402)]" />
                    </include>
                    
                    <control type="label" id="402">
                        <width>WidthForContentForMessage</width>
                        <height>40</height>
                        <font>BigInformationFont</font>
                        <textcolor>MainColor</textcolor>
                        <label>-</label>
                    </control>
                </control>
			</control>
		</control>
	</controls>
</window>
