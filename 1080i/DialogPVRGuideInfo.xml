			<control type="group" description="Television Dialog Icon">
				<posx>PosXForDefaultIconFrameForDialog</posx>
				<posy>PosYForDefaultIconFrameForDialog</posy>
				<include>DefaultIconFrameForDialog</include>

				<control type="image">
