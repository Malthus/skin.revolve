<?xml version="1.0" encoding="UTF-8"?>
<window id="603">
	<defaultcontrol always="true">10</defaultcontrol>
	<allowoverlay>yes</allowoverlay>

	<controls>
		<control type="group">
			<posy>PosYForThirteenLinesDialog</posy>
			<include name="WindowForDialog">
                <param name="height" value="HeightForThirteenLinesDialog" />
                <param name="headerlabel" value="$VAR[ContentNameLabel]" />
                <param name="icontexture" value="icons/icon-clapperboard.png" />
            </include>

			<control type="list" id="49">
                <description>Program Information List</description>
				<posx>560</posx>
				<posy>80</posy>
				<width>1240</width>
				<height>200</height>
				<itemgap>0</itemgap>
                <pagecontrol>60</pagecontrol>
				
				<include>ItemsForLabelList</include>
				
				<content>
					<item>
						<visible>!IsEmpty(ListItem.Genre)</visible>
						<label>$LOCALIZE[515]:</label>
						<label2>$INFO[ListItem.Genre]</label2>
						<onclick>Noop</onclick>
					</item>
					<item>
						<label>$LOCALIZE[552]:</label>
						<label2>$INFO[ListItem.StartDate]</label2>
						<onclick>Noop</onclick>
					</item>
					<item>
						<label>$LOCALIZE[142]</label>
						<label2>$INFO[ListItem.StartTime]</label2>
						<onclick>Noop</onclick>
					</item>
					<item>
						<label>$LOCALIZE[19148]:</label>
						<label2>$INFO[ListItem.ChannelName]</label2>
						<onclick>Noop</onclick>
					</item>
					<item>
						<visible>!IsEmpty(ListItem.Duration)</visible>
						<label>$LOCALIZE[180]:</label>
						<label2>$INFO[ListItem.Duration]</label2>
						<onclick>Noop</onclick>
					</item>
				</content>
			</control>
		
			<control type="scrollbar" id="60">
				<include name="MarkupForScrollbarForDialog">
                    <param name="posy" value="80" />
                    <param name="height" value="200" />
                </include>
				<onleft>9000</onleft>
				<onright>Noop</onright>
				<ondown>61</ondown>
				<onup>61</onup>
			</control>
            
            <include name="TextboxForDialog">
                <param name="textboxid" value="4" />
                <param name="scrollbarid" value="61" />
                <param name="posy" value="320" />
                <param name="height" value="280" />
                <param name="label" value="$INFO[ListItem.Plot]" />
                <param name="onup" value="60" />
                <param name="ondown" value="60" />
                <param name="onleft" value="9000" />
            </include>
			
			<control type="grouplist" id="9000">
                <include name="MarkupForButtonListForDialog">
                    <param name="posy" value="560" />
                    <param name="height" value="40" />
                </include>
                <onleft>61</onleft>
				<onright>Noop</onright>

				<control type="button" id="10">
                    <description>OK Button</description>
					<label>$LOCALIZE[186]</label>
				</control>
			</control>
		</control>
	</controls>
</window>
