<?xml version="1.0" encoding="UTF-8"?>
<window id="603">
	<defaultcontrol always="true">10</defaultcontrol>
	<allowoverlay>yes</allowoverlay>

	<controls>
		<control type="group">
			<posy>PosYForThirteenLinesDialog</posy>
			<include>ThirteenLinesDialog</include>

			<control type="group" description="Clapperboard Dialog Icon">
				<posx>PosXForDefaultIconFrameForDialog</posx>
				<posy>PosYForDefaultIconFrameForDialog</posy>
				<include>DefaultIconFrameForDialog</include>

				<control type="image">
					<width>262</width>
					<height>262</height>
					<texture colodiffuse="BackgroundColor">icons/icon-clapperboard.png</texture>
					<aspectratio>scale</aspectratio>
				</control>
			</control>
			
			<control type="label" description="PVR Recording Title Header">
				<posx>560</posx>
				<posy>20</posy>
				<width>1240</width>
				<height>40</height>
				<font>DialogTitleFont</font>
				<textcolor>SecondaryColor</textcolor>
				<align>left</align>
				<label fallback="19053">$VAR[ContentNameLabel]</label>
			</control>

			<control type="list" id="49" description="Program Information List">
				<posx>560</posx>
				<posy>80</posy>
				<width>1240</width>
				<height>200</height>
				<itemgap>0</itemgap>
				
				<include>ItemsForLabelList</include>
				
				<content>
					<item>
						<visible>!IsEmpty(ListItem.Genre)</visible>
						<label>$LOCALIZE[515]:</label>
						<label2>$INFO[ListItem.Genre]</label2>
						<onclick>Noop</onclick>
					</item>
					<item>
						<label>$LOCALIZE[552]:</label>
						<label2>$INFO[ListItem.StartDate]</label2>
						<onclick>Noop</onclick>
					</item>
					<item>
						<label>$LOCALIZE[142]</label>
						<label2>$INFO[ListItem.StartTime]</label2>
						<onclick>Noop</onclick>
					</item>
					<item>
						<label>$LOCALIZE[19148]:</label>
						<label2>$INFO[ListItem.ChannelName]</label2>
						<onclick>Noop</onclick>
					</item>
					<item>
						<visible>!IsEmpty(ListItem.Duration)</visible>
						<label>$LOCALIZE[180]:</label>
						<label2>$INFO[ListItem.Duration]</label2>
						<onclick>Noop</onclick>
					</item>
				</content>
			</control>
		
			<control type="textbox" id="400" description="Plot Text Box">
				<visible>!IsEmpty(ListItem.Plot)</visible>
				<posx>560</posx>
				<posy>320</posy>
				<width>1240</width>
				<height>280</height>
				<font>DescriptionFont</font>
				<align>left</align>
				<label>$INFO[ListItem.Plot]</label>
			</control>
			
			<control type="grouplist" id="9000">
				<posx>40</posx>
				<posy>560</posy>
				<itemgap>0</itemgap>
				<orientation>vertical</orientation>
				<onup>9000</onup>
				<ondown>9000</ondown>
				<onleft>Noop</onleft>
				<onright>Noop</onright>

				<control type="button" id="10" description="OK Button">
					<label>186</label>
				</control>
			</control>
		</control>
	</controls>
</window>
