<?xml version="1.0" encoding="UTF-8"?>
<window id="115">
    <visible>Player.Seeking | Player.DisplayAfterSeek | Player.Paused | Player.Forwarding | Player.Rewinding</visible>
    <defaultcontrol always="true">401</defaultcontrol>
    
    <controls>
        <control type="group">
            <include content="FullscreenDimensions" />

            <control type="group">
                <visible>[Player.Forwarding | Player.Rewinding | Player.Paused] + [Window.IsVisible(fullscreenvideo) | Window.IsVisible(visualisation)] + !Window.IsVisible(subtitlesearch)</visible>

                <control type="group">
                    <posy>PosYForPauseWindowForMessage</posy>
                    <include content="WindowForMessage">
                        <param name="backgroundvisible" value="Skin.HasSetting(Media.PlayerSeekBar.Visible)" />
                    </include>

                    <control type="group">
                        <description>Player Direction Icon</description>
                        <control type="image">
                            <visible>Player.Paused</visible>
                            <posx>235</posx>
                            <posy>10</posy>
                            <width>80</width>
                            <height>80</height>
                            <texture colordiffuse="$VAR[BackgroundColor]">$VAR[PlayerDirectionIcon]</texture>
                            <aspectratio>stretch</aspectratio>
                        </control>
                        <control type="image">
                            <visible>Player.Forwarding | Player.Rewinding</visible>
                            <posx>235</posx>
                            <posy>0</posy>
                            <width>80</width>
                            <height>80</height>
                            <texture colordiffuse="$VAR[BackgroundColor]">$VAR[PlayerDirectionIcon]</texture>
                            <aspectratio>stretch</aspectratio>
                        </control>
                        <control type="label">
                            <visible>Player.Forwarding | Player.Rewinding</visible>
                            <posx>230</posx>
                            <posy>80</posy>
                            <width>80</width>
                            <height>40</height>
                            <font>MessageTextFont</font>
                            <textcolor>$VAR[BackgroundColor]</textcolor>
                            <align>center</align>
                            <label>$VAR[PlayerSpeedLabel]</label>
                        </control>
                    </control>
                
                    <control type="group">
                        <control type="image">
                            <posx>778</posx>
                            <posy>38</posy>
                            <width>805</width>
                            <height>28</height>
                            <texture colordiffuse="$VAR[MainColor]" border="6">controls/horizontalbar-thick.png</texture>
                            <aspectratio>stretch</aspectratio>
                        </control>
                        <control type="image">
                            <posx>780</posx>
                            <posy>40</posy>
                            <width>800</width>
                            <height>24</height>
                            <texture colordiffuse="$VAR[BackgroundColor]" border="6">controls/horizontalbar-thick.png</texture>
                            <aspectratio>stretch</aspectratio>
                        </control>
                        <control type="progress">
                            <description>Cache Progress Bar</description>
                            <posx>780</posx>
                            <posy>28</posy>
                            <width>800</width>
                            <height>24</height>
                            <midtexture colordiffuse="$VAR[SelectColor]" border="6">controls/horizontalbar-thin.png</midtexture>
                            <info>Player.ProgressCache</info>
                        </control>
                        <control type="progress">
                            <description>Player Seek Bar</description>
                            <posx>780</posx>
                            <posy>28</posy>
                            <width>800</width>
                            <height>24</height>
                            <midtexture colordiffuse="$VAR[MainColor]" border="6">controls/horizontalbar-thin.png</midtexture>
                            <info>Player.Progress</info>
                        </control>
                        <control type="slider" id="401">
                            <description>Player Seek Slider</description>
                            <visible>true</visible>
                            <posx>780</posx>
                            <posy>40</posy>
                            <width>800</width>
                            <height>24</height>
                            <texturesliderbar>-</texturesliderbar>
                            <textureslidernib colordiffuse="$VAR[BackgroundColor]">controls/circle-verticalhole.png</textureslidernib>
                            <textureslidernibfocus colordiffuse="$VAR[MainColor]">controls/circle-verticalhole.png</textureslidernibfocus>
                            <action>seek</action>
                        </control>
                    </control>

                    <control type="group">
                        <visible>Skin.HasSetting(Media.PlayerSeekBar.Visible)</visible>
                        <control type="label">
                            <visible>Player.Seeking | Player.DisplayAfterSeek</visible>
                            <posx>540</posx>
                            <posy>30</posy>
                            <width>200</width>
                            <height>40</height>
                            <font>MessageDetailFont</font>
                            <textcolor>$VAR[TextColor]</textcolor>
                            <align>right</align>
                            <label>$INFO[Player.SeekOffset]</label>
                        </control>
                        <control type="label" id="402">
                            <posx>560</posx>
                            <posy>30</posy>
                            <width>200</width>
                            <height>40</height>
                            <font>MessageTitleFont</font>
                            <textcolor>$VAR[MainColor]</textcolor>
                            <label>$VAR[PlayerTimeLabel]</label>
                        </control>
                        <control type="label">
                            <posx>1800</posx>
                            <posy>30</posy>
                            <width>200</width>
                            <height>40</height>
                            <font>MessageTitleFont</font>
                            <textcolor>$VAR[MainColor]</textcolor>
                            <align>right</align>
                            <label>$VAR[PlayerDurationLabel]</label>
                        </control>
                    </control>

                    <control type="group">
                        <visible>!Skin.HasSetting(Media.PlayerSeekBar.Visible)</visible>
                        <control type="group">
                            <visible>Player.Seeking | Player.DisplayAfterSeek</visible>
                            <include content="OutlineLabel">
                                <param name="posx" value="540" />
                                <param name="posy" value="30" />
                                <param name="width" value="200" />
                                <param name="height" value="40" />
                                <param name="font" value="MessageDetailFont" />
                                <param name="textcolor" value="$VAR[BackgroundColor]" />
                                <param name="outlinecolor" value="$VAR[MainColor]" />
                                <param name="outlinesize" value="2" />
                                <param name="align" value="right" />
                                <param name="label" value="$INFO[Player.SeekOffset]" />
                            </include>
                        </control>
                        <include content="OutlineLabel">
                            <param name="posx" value="560" />
                            <param name="posy" value="30" />
                            <param name="width" value="200" />
                            <param name="height" value="40" />
                            <param name="font" value="MessageTitleFont" />
                            <param name="textcolor" value="$VAR[BackgroundColor]" />
                            <param name="outlinecolor" value="$VAR[MainColor]" />
                            <param name="outlinesize" value="2" />
                            <param name="align" value="left" />
                            <param name="label" value="$VAR[PlayerTimeLabel]" />
                        </include>
                        <include content="OutlineLabel">
                            <param name="posx" value="1800" />
                            <param name="posy" value="30" />
                            <param name="width" value="200" />
                            <param name="height" value="40" />
                            <param name="font" value="MessageTitleFont" />
                            <param name="textcolor" value="$VAR[BackgroundColor]" />
                            <param name="outlinecolor" value="$VAR[MainColor]" />
                            <param name="outlinesize" value="2" />
                            <param name="align" value="right" />
                            <param name="label" value="$VAR[PlayerDurationLabel]" />
                        </include>
                    </control>
                </control>
                
                <control type="group">
                    <animation effect="fade" start="0" end="100" time="250" reversible="false">WindowOpen</animation>
                    <animation effect="fade" start="100" end="0" time="250" reversible="false">WindowClose</animation>
                    <include content="BigClock" />
                </control>
            </control>
            
            <control type="group">
                <visible>[Player.Forwarding | Player.Rewinding | Player.Paused] + [[!Window.IsVisible(fullscreenvideo) + !Window.IsVisible(visualisation)] | Window.IsVisible(subtitlesearch)]</visible>
                
                <control type="group">
                    <visible>Player.Muted</visible>
                    <posx>140</posx>
                    <posy>20</posy>
                    <include content="SmallCirclePlayerStateIcon" />
                </control>
                
                <control type="group">
                    <visible>!Player.Muted</visible>
                    <posx>20</posx>
                    <posy>20</posy>
                    <include content="SmallCirclePlayerStateIcon" />
                </control>
            </control>
        </control>
    </controls>
</window>
