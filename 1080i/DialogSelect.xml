<?xml version="1.0" encoding="UTF-8"?>
<window id="2000">
	<defaultcontrol always="true">3</defaultcontrol>
	<allowoverlay>yes</allowoverlay>

	<controls>
		<control type="group">
			<posy>PosYForThirteenLinesDialog</posy>
			<include name="WindowForDialog">
                <param name="headerid" value="1" />
                <param name="height" value="HeightForThirteenLinesDialog" />
                <param name="headerlabel" value="$LOCALIZE[13406]" />
                <param name="iconlabel" value="$LOCALIZE[31904]" />
                <param name="iconthumbnail" value="$VAR[ContentThumbnail]" />
            </include>

			<control type="list" id="3">
                <description>Normal Selection List</description>
                <include name="MarkupForListForDialog">
                    <param name="posy" value="80" />
                    <param name="height" value="520" />
                    <param name="pagecontrol" value="21" />
                </include>
				<onup>3</onup>
				<ondown>3</ondown>
				<onleft>9000</onleft>
				<onright>21</onright>

				<itemlayout height="40">
					<include>NormalItemsForNormalListInDialog</include>
				</itemlayout>
					
				<focusedlayout height="40">
					<control type="group">
						<visible>Control.HasFocus(3)</visible>
						<include>FocusedItemsForNormalListInDialog</include>
					</control>
					<control type="group">
						<visible>!Control.HasFocus(3)</visible>
						<include>SelectedItemsForNormalListInDialog</include>
					</control>
				</focusedlayout>
			</control>

			<control type="list" id="6">
                <description>Selection List With Thumbnails For Addons</description>
                <include name="MarkupForListForDialog">
                    <param name="posy" value="80" />
                    <param name="height" value="520" />
                    <param name="pagecontrol" value="22" />
                </include>
				<onup>6</onup>
				<ondown>6</ondown>
				<onleft>9000</onleft>
				<onright>22</onright>
				
				<itemlayout height="100">
					<include>NormalItemsForLargeThumbnailList</include>
				</itemlayout>
					
				<focusedlayout height="100">
					<control type="group">
						<visible>Control.HasFocus(6)</visible>
						<include>FocusedItemsForLargeThumbnailList</include>
					</control>
					<control type="group">
						<visible>!Control.HasFocus(6)</visible>
						<include>SelectedItemsForLargeThumbnailList</include>
					</control>
				</focusedlayout>
			</control>
            
			<control type="scrollbar" id="21">
                <description>Normal List Scrollbar</description>
				<visible>Control.IsVisible(3)</visible>
				<include name="MarkupForScrollbarForDialog">
                    <param name="posy" value="80" />
                    <param name="height" value="520" />
                </include>
				<onleft>3</onleft>
				<onright>Noop</onright>
			</control>

			<control type="scrollbar" id="22">
                <description>Thumbnail List Scrollbar</description>
				<visible>Control.IsVisible(6)</visible>
				<include name="MarkupForScrollbarForDialog">
                    <param name="posy" value="80" />
                    <param name="height" value="520" />
                </include>
				<onleft>6</onleft>
				<onright>Noop</onright>
			</control>

			<control type="label" id="2">
                <description>Number Of Files Label</description>
				<posx>40</posx>
				<posy>520</posy>
				<width>480</width>
				<font>DialogTextFont</font>
				<textcolor>SecondaryColor</textcolor>
				<align>center</align>
				<label>-</label>
			</control>

			<control type="grouplist" id="9000">
                <include name="MarkupForButtonListForDialog">
                    <param name="posy" value="480" />
                    <param name="height" value="120" />
                </include>
                <onright>3</onright>

                <control type="button" id="5">
                    <description>Manual Search/Get More Button</description>
                    <label>$LOCALIZE[368]</label>
                </control>
                <control type="image" id="8">
                    <description>Spacer Image</description>
                    <visible>!Control.IsVisible(5)</visible>
                    <height>40</height>
                    <texture>-</texture>
                </control>
                <control type="button" id="9">
                    <description>Close Button</description>
                    <posy>40</posy>
                    <label>$LOCALIZE[31915]</label>
                    <onclick>Close</onclick>
                </control>
			</control>
		</control>
	</controls>
</window>
