<?xml version="1.0" encoding="UTF-8"?>
<window id="145">
	<defaultcontrol always="true">11</defaultcontrol>
	<allowoverlay>yes</allowoverlay>

	<controls>
		<control type="group">
            <control type="group">
                <posx>PosXForIconForMessage</posx>
				<posy>PosYForIconForMessage</posy>
                <include name="BorderedBackgroundForSmallCircleThumbnailIcon" />

                <control type="image">
                    <width>90</width>
                    <height>90</height>
                    <texture colordiffuse="BackgroundColor">icons/icon-settings.png</texture>
                    <aspectratio>keep</aspectratio>
                </control>
            </control>

            <control type="group">
                <posx>PosXForContentForMessage</posx>
                <posy>PosYForContentForMessage</posy>

                <include name="OutlineLabel">
                    <param name="width" value="WidthForContentForMessage" />
                    <param name="font" value="DialogTextFont" />
                    <param name="textcolor" value="MainColor" />
                    <param name="outlinecolor" value="BackgroundColor" />
                    <param name="outlinesize" value="2" />
                    <param name="label" value="$INFO[Control.GetLabel(10)] | $INFO[Control.GetLabel(12)]" />
                </include>
                    
                <control type="label" id="10">
                    <description>Slider Header Label</description>
                    <font>-</font>
                    <label>-</label>
                </control>

                <control type="label" id="12">
                    <description>Slider Value Label</description>
                    <font>-</font>
                    <label>-</label>
                </control>

                <control type="image">
                    <posx>0</posx>
                    <posy>48</posy>
                    <width>824</width>
                    <height>24</height>
                    <texture colordiffuse="MainColor" border="6">controls/horizontalbar-thick.png</texture>
                    <aspectratio>stretch</aspectratio>
                </control>
                <control type="image">
                    <posx>2</posx>
                    <posy>50</posy>
                    <width>820</width>
                    <height>20</height>
                    <texture colordiffuse="BackgroundColor" border="6">controls/horizontalbar-thick.png</texture>
                    <aspectratio>stretch</aspectratio>
                </control>
                <control type="slider" id="11">
                    <description>Slider</description>
                    <posx>7</posx>
                    <posy>40</posy>
                    <width>810</width>
                    <height>40</height>
                    <texturesliderbar colordiffuse="MainColor">controls/line-horizontal.png</texturesliderbar>
                    <textureslidernib colordiffuse="HighlightColor">controls/circle-verticalhole.png</textureslidernib>
                    <textureslidernibfocus colordiffuse="HighlightColor">controls/circle-verticalhole.png</textureslidernibfocus>
                    <onup>Noop</onup>
                    <ondown>Noop</ondown>
                    <onleft>11</onleft>
                    <onright>11</onright>
                </control>
			</control>
		</control>
	</controls>
</window>
