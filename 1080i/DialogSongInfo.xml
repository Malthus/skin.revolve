<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">10</defaultcontrol>
	<allowoverlay>yes</allowoverlay>

	<controls>
		<control type="group">
			<posy>PosYForFifteenLinesDialog</posy>
			<include>FifteenLinesDialog</include>

			<control type="group" description="Dialog Icon For Song">
				<visible>!Control.HasFocus(50)</visible>
				<posx>PosXForDefaultIconFrameForDialog</posx>
				<posy>PosYForDefaultIconFrameForDialog</posy>
				<include>DefaultCircleThumbnailIcon</include>
			</control>

			<control type="label" description="Song Title Header">
				<posx>560</posx>
				<posy>20</posy>
				<width>1240</width>
				<height>40</height>
				<font>DialogTitleFont</font>
				<textcolor>SecondaryColor</textcolor>
				<align>left</align>
				<label>$INFO[ListItem.Title]</label>
			</control>
			
			<control type="list" id="20" description="Song Information List">
				<posx>560</posx>
				<posy>80</posy>
				<width>1240</width>
				<height>240</height>
				<itemgap>0</itemgap>
				<pagecontrol>21</pagecontrol>
				
				<include>ItemsForInfoListInDialog</include>
				
				<content>
					<item description="Artist Label">
						<visible>!IsEmpty(ListItem.Artist)</visible>
						<label>$LOCALIZE[557]:</label>
						<label2>$INFO[ListItem.Artist]</label2>
						<onclick>Noop</onclick>
					</item>
					<item description="Album Label">
						<visible>!IsEmpty(ListItem.Album)</visible>
						<label>$LOCALIZE[558]:</label>
						<label2>$INFO[ListItem.Album]</label2>
						<onclick>Noop</onclick>
					</item>
					<item description="Year Label">
						<visible>!IsEmpty(ListItem.Year)</visible>
						<label>$LOCALIZE[562]:</label>
						<label2>$INFO[ListItem.Year]</label2>
						<onclick>Noop</onclick>
					</item>
					<item description="Duration Label">
						<visible>!IsEmpty(ListItem.Duration)</visible>
						<label>$LOCALIZE[180]:</label>
						<label2>$INFO[ListItem.Duration]</label2>
						<onclick>Noop</onclick>
					</item>
					<item description="Genre Label">
						<visible>!IsEmpty(ListItem.Genre)</visible>
						<label>$LOCALIZE[515]:</label>
						<label2>$INFO[ListItem.Genre]</label2>
						<onclick>Noop</onclick>
					</item>
				</content>
			</control>
			
			<control type="scrollbar" id="21" description="Song Information Scrollbar">
				<posy>80</posy>
				<height>280</height>
				<include>MarkupForScrollbarForDialog</include>
				<onleft>9001</onleft>
				<onright>Noop</onright>
			</control>

			<control type="group" description="Song Details Icons">
				<posx>560</posx>
				<posy>320</posy>
				<include>HorizontalDialogListOfContentMediaFlag</include>
			</control>

			<control type="group" id="9001" description="Song Rating Controls">
				<posx>40</posx>
				<posy>320</posy>

				<control type="group" description="Song Rating Icons">
					<posx>160</posx>
					<include>StarRatingMediaFlag</include>
				</control>
				
				<control type="button" id="14" description="Decrease Rating Button">
					<posx>400</posx>
					<width>40</width>
					<height>40</height>
					<texturenofocus border="20" colordiffuse="MainColor">controls/circle-opentriangledown.png</texturenofocus>
					<texturefocus border="20" colordiffuse="MainColor">controls/circle-triangledown.png</texturefocus>
					<onleft>Noop</onleft>
					<onright>15</onright>
					<onup>9000</onup>
					<ondown>9000</ondown>
					<onclick>DecreaseRating</onclick>
				</control>

				<control type="button" id="15" description="Increase Rating Button">
					<posx>440</posx>
					<width>40</width>
					<height>40</height>
					<texturenofocus border="20" colordiffuse="MainColor">controls/circle-opentriangleup.png</texturenofocus>
					<texturefocus border="20" colordiffuse="MainColor">controls/circle-triangleup.png</texturefocus>
					<onleft>14</onleft>
					<onright>21</onright>
					<onup>9000</onup>
					<ondown>9000</ondown>
					<onclick>IncreaseRating</onclick>
				</control>
			</control>

			<control type="textbox" id="4" description="Review">
				<posx>560</posx>
				<posy>400</posy>
				<width>1240</width>
				<height>280</height>
				<align>left</align>
				<pagecontrol>24</pagecontrol>
				<label>$VAR[ContentDescription]</label>
			</control>

			<control type="scrollbar" id="24" description="Review Scrollbar">
				<visible>Control.IsVisible(4)</visible>
				<posy>400</posy>
				<height>280</height>
				<include>MarkupForScrollbarForDialog</include>
				<onup>24</onup>
				<ondown>24</ondown>
				<onleft>9000</onleft>
				<onright>Noop</onright>
			</control>

			<control type="grouplist" id="9000">
				<posx>40</posx>
				<posy>400</posy>
				<width>480</width>
				<height>160</height>
				<orientation>vertical</orientation>
				<itemgap>0</itemgap>
				<onup>9001</onup>
				<ondown>9001</ondown>
				<onright>24</onright>
				<onleft>Noop</onleft>

				<control type="button" id ="10" description="Ok Button">
					<label>186</label>
				</control>

				<control type="button" id ="11" description="Cancel Button">
					<label>222</label>
				</control>

				<control type="button" id ="12" description="Album Info Button">
					<label>10523</label>
				</control>

				<control type="button" id ="13" description="Get Thumbnail Button">
					<label>13405</label>
				</control>
			</control>
		</control>
	</controls>
</window>
