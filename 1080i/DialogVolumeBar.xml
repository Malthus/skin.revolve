<?xml version="1.0" encoding="UTF-8"?>
<window id="104">
    <defaultcontrol always="true">-</defaultcontrol>

    <controls>
        <control type="group">
            <posx>0</posx>
            <posy>520</posy>
            
            <control type="group">
                <visible>!Player.Muted</visible>
                <include content="IconForMessage">
                    <param name="icontexture" value="icons/volume-sound.png" />
                </include>
            </control>
            
            <control type="group">
                <visible>Player.Muted</visible>
                <include content="IconForMessage">
                    <param name="icontexture" value="icons/volume-mute.png" />
                </include>
            </control>

            <control type="group">
                <visible>Player.Muted</visible>
                <posx>20</posx>
                <posy>20</posy>
                <include content="SmallCircleMuteBugIcon" />
            </control>

            <control type="group">
                <posx>PosXForContentForMessage</posx>
                <posy>PosYForContentForMessage</posy>
            
                <control type="group">
                    <description>Volume Control</description>
                    <visible>!Player.PassThrough</visible>
                
                    <control type="image">
                        <posx>0</posx>
                        <posy>26</posy>
                        <width>1115</width>
                        <height>28</height>
                        <texture colordiffuse="$VAR[MainColor]" border="6">controls/horizontalbar-thick.png</texture>
                        <aspectratio>stretch</aspectratio>
                    </control>
                    <control type="image">
                        <posx>2</posx>
                        <posy>28</posy>
                        <width>1110</width>
                        <height>24</height>
                        <texture colordiffuse="$VAR[BackgroundColor]" border="6">controls/horizontalbar-thick.png</texture>
                        <aspectratio>stretch</aspectratio>
                    </control>
                    <control type="progress" id="1">
                        <posx>2</posx>
                        <posy>16</posy>
                        <width>1110</width>
                        <height>24</height>
                        <texturebg border="6">-</texturebg>
                        <midtexture border="6">controls/horizontalbar-thin.png</midtexture>
                        <colordiffuse>$VAR[MainColor]</colordiffuse>
                        <info>Player.Volume</info>
                    </control>
                </control>
                
                <control type="group">
                    <visible>Player.PassThrough</visible>
                    <posy>20</posy>

                    <include content="OutlineLabel">
                        <param name="width" value="WidthForContentForMessage" />
                        <param name="height" value="40" />
                        <param name="font" value="MessageTitleFont" />
                        <param name="textcolor" value="$VAR[BackgroundColor]" />
                        <param name="outlinecolor" value="$VAR[MainColor]" />
                        <param name="outlinesize" value="2" />
                        <param name="label" value="$LOCALIZE[29802]" />
                    </include>
                </control>
            </control>
        </control>
    </controls>
</window>
