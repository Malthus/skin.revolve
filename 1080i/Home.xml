<?xml version="1.0" encoding="UTF-8"?>
<window id="0">
	<defaultcontrol>200</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
    <onload condition="!IsEmpty(Skin.String(CircleMovieOption.Source))">RunScript(special://skin/scripts/PopulateItemsFromHomeProperties.py,$INFO[Skin.String(CircleMovieOption.Source)],CircleMovie%02dOption,0)</onload>
    <onload condition="!IsEmpty(Skin.String(CircleEpisodeOption.Source))">RunScript(special://skin/scripts/PopulateItemsFromHomeProperties.py,$INFO[Skin.String(CircleEpisodeOption.Source)],CircleEpisode%02dOption,0)</onload>
    <onload condition="!IsEmpty(Skin.String(CircleAlbumOption.Source))">RunScript(special://skin/scripts/PopulateItemsFromHomeProperties.py,$INFO[Skin.String(CircleAlbumOption.Source)],CircleAlbum%02dOption,0)</onload>
    <onload condition="System.HasAddon(script.tv.show.next.aired)">RunScript(script.tv.show.next.aired,silent=True)</onload>

	<controls>
		<control type="button" id="200" description="Default Revolve Skin Settings Initialisation">
			<visible>!Skin.HasSetting(RevolveConfiguration)</visible>
			<texturenofocus>-</texturenofocus>
            <texturefocus>-</texturefocus>
			<include>DefaultSettingsForSkinSettings</include>
			<onfocus>SetFocus(300)</onfocus>
		</control>

		<control type="button" id="200" description="Default Revolve Skin Settings Evasion">
			<visible>Skin.HasSetting(RevolveConfiguration)</visible>
			<texturenofocus>-</texturenofocus>
            <texturefocus>-</texturefocus>
			<onfocus>SetFocus(300)</onfocus>
		</control>
	
		<include>GlobalBackground</include>

		<control type="group" description="RSS">
			<control type="image">
				<visible>System.GetBool(lookandfeel.enablerssfeeds)</visible>
				<posx>0</posx>
				<posy>0</posy>
				<width>1920</width>
				<height>40</height>
				<texture colordiffuse="BackgroundColor">white.png</texture>
			</control>
			<control type="rss" id="1" description="RSS Feed">
				<visible>true</visible>
				<posx>0</posx>
				<posy>0</posy>
				<width>1920</width>
				<height>40</height>
				<font>RSSFont</font>
				<titlecolor>MainColor</titlecolor>
				<headlinecolor>SecondaryColor</headlinecolor>
				<textcolor>TextColor</textcolor>
				<urlset>1</urlset>
			</control>
		</control>

		<include>RingForHomeRevolveList</include>
		<include>ListForHomeRevolveList</include>

		<control type="wraplist" id="300" description="Invisible Home Wraplist">
			<visible allowhiddenfocus="true">false</visible>
			<posx>0</posx>
			<posy>40</posy>
			<width>1920</width>
			<height>1000</height>
			<focusposition>5</focusposition>
			<defaultcontrol>8</defaultcontrol>
			<onup>300</onup>
			<ondown>300</ondown>
			<onleft condition="Container(300).HasFocus(5) | Container(300).HasFocus(6) | Container(300).HasFocus(15) | Container(300).HasFocus(16)">600</onleft>
			<onright>Noop</onright>

            <include>InvisibleItemsForMenu</include>

			<content>
				<include>HomeMenuItems</include>
			</content>
		</control>
		
		<control type="group" description="Clock">
			<animation effect="fade" start="0" end="100" time="500" reversible="false">WindowOpen</animation>
			<animation effect="fade" delay="500" start="100" end="0" time="500" reversible="false">WindowClose</animation>
			
			<include>BigClock</include>
		</control>
	</controls>
</window>
