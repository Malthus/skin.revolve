<?xml version="1.0" encoding="UTF-8"?>
<window id="0">
	<defaultcontrol>200</defaultcontrol>
	<allowoverlay>yes</allowoverlay>

	<controls>
		<include>GlobalBackground</include>
    
		<control type="button" id="200" description="Default Skin Settings Initialisation">
			<visible>!Skin.HasSetting(RevolveConfiguration)</visible>
			<texturenofocus>-</texturenofocus>
            <texturefocus>-</texturefocus>
			<include>DefaultSettingsForSkinSettings</include>
			<onfocus>SetFocus(210)</onfocus>
		</control>

		<control type="button" id="200" description="Default Skin Settings Evasion">
			<visible>Skin.HasSetting(RevolveConfiguration)</visible>
			<texturenofocus>-</texturenofocus>
            <texturefocus>-</texturefocus>
			<onfocus>SetFocus(210)</onfocus>
		</control>
	
		<control type="button" id="210" description="Script and Plugin Initialisation">
			<texturenofocus>-</texturenofocus>
            <texturefocus>-</texturefocus>
            <onfocus condition="System.HasAddon(service.skin.widgets) + !Window(home).Property(SkinWidgets_Running)">RunScript(service.skin.widgets)</onfocus>
<!--            <onfocus condition="System.HasAddon(service.skin.widgets)">SetProperty(SkinWidgets_RandomItems_Update,true)</onfocus> -->
<!--            <onfocus condition="System.HasAddon(script.tv.show.next.aired)">RunScript(script.tv.show.next.aired,silent=True)</onfocus> -->
			<onfocus>SetFocus(300)</onfocus>
		</control>
    
		<control type="group" description="RSS Feed">
			<visible>System.GetBool(lookandfeel.enablerssfeeds)</visible>
            
			<control type="image">
				<posx>0</posx>
				<posy>0</posy>
				<width>1920</width>
				<height>40</height>
				<texture colordiffuse="BackgroundColor">white.png</texture>
			</control>
			<control type="rss" id="1">
				<posx>0</posx>
				<posy>0</posy>
				<width>1920</width>
				<height>40</height>
				<font>RSSFont</font>
				<titlecolor>MainColor</titlecolor>
				<headlinecolor>SecondaryColor</headlinecolor>
				<textcolor>TextColor</textcolor>
				<urlset>1</urlset>
			</control>
		</control>

		<include>RingForHomeRevolveList</include>
		<include>ListForHomeRevolveList</include>

		<control type="wraplist" id="300" description="Invisible Home Wraplist">
			<visible allowhiddenfocus="true">false</visible>
			<posx>0</posx>
			<posy>40</posy>
			<width>1920</width>
			<height>1000</height>
			<focusposition>5</focusposition>
			<defaultcontrol>8</defaultcontrol>
			<onup>300</onup>
			<ondown>300</ondown>
			<onleft condition="Container(300).HasFocus(5) | Container(300).HasFocus(6) | Container(300).HasFocus(15) | Container(300).HasFocus(16)">600</onleft>
			<onright>Noop</onright>

            <include>InvisibleItemsForMenu</include>

			<content>
				<include>HomeMenuItems</include>
			</content>
		</control>
		
		<control type="group" description="Clock">
			<animation effect="fade" start="0" end="100" time="500" reversible="false">WindowOpen</animation>
			<animation effect="fade" delay="500" start="100" end="0" time="500" reversible="false">WindowClose</animation>
			
			<include>BigClock</include>
		</control>
	</controls>
</window>
