<?xml version="1.0" encoding="UTF-8"?>
<window id="0">
	<defaultcontrol always="true">200</defaultcontrol>

	<controls>
		<include name="GlobalBackground" />

		<control type="button" id="200">
            <description>Default Skin Settings Initialisation</description>
			<visible>!Skin.HasSetting(RevolveConfiguration)</visible>
			<texturenofocus>-</texturenofocus>
            <texturefocus>-</texturefocus>
			<include name="DefaultSettingsForSkinSettings" />
			<onfocus>SetFocus(210)</onfocus>
		</control>

		<control type="button" id="200">
            <description>Default Skin Settings Evasion</description>
			<visible>Skin.HasSetting(RevolveConfiguration)</visible>
			<texturenofocus>-</texturenofocus>
            <texturefocus>-</texturefocus>
			<onfocus>SetFocus(210)</onfocus>
		</control>

		<control type="button" id="210">
            <description>Script and Plugin Initialisation</description>
			<texturenofocus>-</texturenofocus>
            <texturefocus>-</texturefocus>
            <onfocus>RunScript(script.revolve.service,PopulateStaticItemsFromHomeProperties,$INFO[Skin.String(CircleMovieOption.Source)],CircleMovie%02dOption,0)</onfocus>
            <onfocus>RunScript(script.revolve.service,PopulateStaticItemsFromHomeProperties,$INFO[Skin.String(CircleEpisodeOption.Source)],CircleEpisode%02dOption,0)</onfocus>
            <onfocus>RunScript(script.revolve.service,PopulateStaticItemsFromHomeProperties,$INFO[Skin.String(CircleAlbumOption.Source)],CircleAlbum%02dOption,0)</onfocus>
			<onfocus>SetFocus(300)</onfocus>
		</control>

		<include name="RssFeed" />

		<control type="wraplist" id="300">
            <description>Invisible Home Wraplist</description>
			<visible allowhiddenfocus="true">Skin.HasSetting(Debug.ListBorderVisible)</visible>
			<posx>0</posx>
			<posy>0</posy>
			<width>1920</width>
			<height>1080</height>
			<focusposition>4</focusposition>
			<defaultcontrol>8</defaultcontrol>
			<onup>300</onup>
			<ondown>300</ondown>
			<onleft condition="[Container(300).HasFocus(5) + !IsEmpty(Skin.String(CircleMovieOption.Source))] | [Container(300).HasFocus(6) + !IsEmpty(Skin.String(CircleEpisodeOption.Source))] | [Container(300).HasFocus(15) + System.HasAddon(script.tv.show.next.aired) + Skin.HasSetting(CircleNextAired.Enable)] | [Container(300).HasFocus(16) + !IsEmpty(Skin.String(CircleAlbumOption.Source))]">600</onleft>
			<onleft condition="Container(300).HasFocus(20) + Skin.HasSetting(CircleExitMenu.Enable)">900</onleft>
			<onright>Noop</onright>

            <include name="InvisibleVerticalListItemsForMenu" />
			<include name="HomeMenuItems" />
		</control>
		
		<include name="BackgroundAnimationForHomeRevolveList" />
		<include name="ListForHomeRevolveList" />
		<include name="RingForHomeRevolveList" />

		<control type="group">
			<animation effect="fade" start="0" end="100" time="500" reversible="false">WindowOpen</animation>
			<animation effect="fade" delay="500" start="100" end="0" time="500" reversible="false">WindowClose</animation>
            
            <control type="group">
                <visible>System.GetBool(lookandfeel.enablerssfeeds)</visible>
                <include name="BigClock">
                    <param name="posy" value="50" />
                </include>
            </control>
            <control type="group">
                <visible>!System.GetBool(lookandfeel.enablerssfeeds)</visible>
                <include name="BigClock" />
            </control>
		</control>
        
		<include name="Overlay" />
	</controls>
</window>
