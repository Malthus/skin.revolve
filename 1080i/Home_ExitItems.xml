<?xml version="1.0" encoding="UTF-8"?>
<includes>
    <include name="HomeExitItems">
        <definition>
            <control type="group">
                <posx>-100</posx>
                <posy>330</posy>

                <control type="group">
                    <visible>Control.HasFocus(900)</visible>
                    <animation effect="fade" start="0" end="100" time="500">Visible</animation>
                    <animation effect="fade" start="100" end="0" time="500">Hidden</animation>
                    
                    <control type="group">
                        <visible>System.HasAlarm(shutdowntimer)</visible>

                        <posx>600</posx>
                        <posy>430</posy>
                            
                        <control type="image">
                            <width>80</width>
                            <height>80</height>
                            <texture colordiffuse="$VAR[BackgroundColor]">icons/overlay-timer.png</texture>
                            <aspectratio>stretch</aspectratio>
                        </control>
                            
                        <control type="label">
                            <posx>90</posx>
                            <posy>20</posy>
                            <width>300</width>
                            <height>40</height>
                            <font>BigViewFont</font>
                            <textcolor>$VAR[BackgroundColor]</textcolor>
                            <align>left</align>
                            <scroll>true</scroll>
                            <label>[UPPERCASE]$INFO[System.AlarmPos][/UPPERCASE]</label>
                        </control>
                    </control>
                
                    <control type="group">
                        <visible>System.HasLocks + System.IsMaster</visible>

                        <posx>600</posx>
                        <posy>510</posy>

                        <control type="image">
                            <width>80</width>
                            <height>80</height>
                            <texture colordiffuse="$VAR[BackgroundColor]">icons/overlay-locked.png</texture>
                            <aspectratio>stretch</aspectratio>
                        </control>
                    </control>
                </control>

                <control type="fixedlist" id="900">
                    <description>Exit Options In Circle List</description>
                    <visible allowhiddenfocus="true">Control.HasFocus(900) + Container(300).HasFocus(20)</visible>
                    <animation type="Visible">
                        <effect type="fade" start="0" end="100" time="500" />
                        <effect type="rotate" center="331,331" start="90" end="0" time="100" delay="400" />
                    </animation>
                    <animation type="Hidden">
                        <effect type="fade" start="100" end="0" time="500" />
                        <effect type="rotate" center="331,331" start="0" end="90" time="100" />
                    </animation>

                    <width>800</width>
                    <height>662</height>
                    <scrolltime>0</scrolltime>
                    <onup>900</onup>
                    <ondown>900</ondown>
                    <onleft>Noop</onleft>
                    <onright>300</onright>
                    
                    <itemlayout width="800" height="0">
                    </itemlayout>
                    
                    <focusedlayout width="800" height="662">
                        <control type="image">
                            <width>662</width>
                            <height>662</height>
                            <texture background="true">circle/exit-focus.png</texture>
                            <aspectratio scalediffuse="false">stretch</aspectratio>
                        </control>
                
                        <control type="label">
                            <posx>292</posx>
                            <posy>311</posy>
                            <width>300</width>
                            <height>40</height>
                            <font>BigViewFont</font>
                            <textcolor>$VAR[MainColor]</textcolor>
                            <align>center</align>
                            <aligny>center</aligny>
                            <label>$INFO[ListItem.Label]</label>
                        </control>
                    </focusedlayout>
                    
                    <include content="OptionsForExitMenu" />
                </control>
            </control>
        </definition>
    </include>
</includes>
