                <onclick>SetProperty(SourceInfo,$INFO[Skin.String($PARAM[variable].SourceInfo)],$INFO[Skin.String($PARAM[variable].Window)])</onclick>
                <onclick>$INFO[Skin.String($PARAM[variable].Action)]</onclick>
