<?xml version="1.0" encoding="UTF-8"?>
<window id="2009">
	<defaultcontrol always="true">-</defaultcontrol>
	<allowoverlay>yes</allowoverlay>

	<controls>
		<control type="karvisualisation" id="1">
            <description>Background Visualisation For Karaoke</description>
			<include>FullscreenDimensions</include>
		</control>

		<control type="image" id="2">
            <description>Fullscreen Background Image For Karaoke</description>
			<include>FullscreenDimensions</include>
		</control>

		<control type="group">
            <description>Next Song Name Label</description>
			<visible>MusicPlayer.Offset(1).Exists + !IntegerGreaterThan(Player.TimeRemaining,20)</visible>

            <include name="OutlineLabel">
                <param name="posx" value="340" />
                <param name="posy" value="20" />
                <param name="width" value="1240" />
                <param name="height" value="40" />
                <param name="font" value="MessageTitleFont" />
                <param name="textcolor" value="MainColor" />
                <param name="outlinecolor" value="BackgroundColor" />
                <param name="outlinesize" value="2" />
                <param name="align" value="left" />
                <param name="label" value="$LOCALIZE[209]: $INFO[MusicPlayer.Offset(1).Title]" />
            </include>
		</control>
	</controls>
</window>
