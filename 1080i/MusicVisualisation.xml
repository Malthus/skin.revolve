<?xml version="1.0" encoding="UTF-8"?>
<window id="2006">
    <defaultcontrol always="true">-</defaultcontrol>
    <onload condition="Skin.HasSetting(Media.ArtistSlideshowVisualization.Active)">RunScript(script.artistslideshow)</onload>

    <controls>
        <control type="visualisation" id="2">
            <include content="FullscreenDimensions" />
        </control>

        <control type="multiimage">
            <visible>Skin.HasSetting(Media.ArtistSlideshowVisualization.Active)</visible>
            <include content="FullscreenDimensions" />
            <aspectratio>keep</aspectratio>
            <timeperimage>8000</timeperimage>
            <fadetime>500</fadetime>
            <imagepath background="true">$INFO[Window(Visualisation).Property(ArtistSlideshow)]</imagepath>
            <randomize>true</randomize>
        </control>        
        
        <control type="group">
            <visible>Player.ShowInfo</visible>
            <include content="MediaThumbnailIconForOSD" />
            <include content="MediaInformationLabelForOSD" />
            <include content="MediaPlaylistPositionLabelForOSD" />
            <include content="MediaNameLabelForOSD" />
            <include content="MediaSeekBarForOSD" />
            
            <control type="group">
                <visible>Skin.HasSetting(MediaIcons.Visible)</visible>
                <include content="DefaultAnimationForOSD" />
                <include content="HorizontalListOfMusicPlayerMediaFlag">
                    <param name="posx" value="340" />
                    <param name="posy" value="870" />
                </include>
            </control>
        </control>
    </controls>
</window>
