<?xml version="1.0" encoding="UTF-8"?>
<window id="2006">
	<defaultcontrol always="true">-</defaultcontrol>

	<controls>
		<control type="visualisation" id="2">
			<include name="FullscreenDimensions" />
		</control>

		<control type="group">
            <visible>!Window.IsVisible(VisualisationSettings) + !Window.IsVisible(VisualisationPresetList)</visible>

            <control type="group">
                <visible>Player.ShowInfo</visible>
                <include name="MediaInformationLabelForOSD" />
                <include name="MediaPlaylistPositionLabelForOSD" />
                <include name="MediaNameLabelForOSD" />
                <include name="MediaStarRatingIconForOSD" />
                <include name="MediaSeekBarForOSD" />
            </control>
            
            <control type="group">
                <visible>Player.ShowCodec</visible>
                <include name="MediaVisualisationLabelForOSD" />
            </control>
                
            <control type="group">
                <visible>[Player.ShowInfo + Skin.HasSetting(MediaIcons.Visible)] | Player.ShowCodec</visible>
                <include name="DefaultAnimationForOSD" />
                <include name="HorizontalListOfMusicPlayerMediaFlag">
                    <param name="posx" value="340" />
                    <param name="posy" value="870" />
                </include>
            </control>
            
            <control type="group">
                <visible>Player.ShowInfo | Player.ShowCodec</visible>
                <include name="MediaThumbnailIconForOSD" />
            </control>
		</control>
	</controls>
</window>
