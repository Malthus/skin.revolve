<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog" id="114">
    <visible>Player.HasMedia + Window.IsActive(PlayerControls) + !VideoPlayer.IsFullscreen + !Window.IsActive(Visualisation)</visible>
    <defaultcontrol>410</defaultcontrol>
    <onunload>SetProperty(DialogCloseButton,False,114)</onunload>

    <controls>
        <control type="group">
            <visible>StringCompare(Skin.String(Background.Animation.Level),3) | StringCompare(Skin.String(Background.Animation.Level),4)</visible>
            
            <include content="OrbitCircle">
                <param name="posx" value="960" />
                <param name="posy" value="540" />
                <param name="size" value="60" />
                <param name="radius" value="150" />
                <param name="time" value="8000" />
            </include>
        </control>
    
        <control type="group">
            <visible>StringCompare(Skin.String(Background.Animation.Level),4)</visible>
            
            <include content="OrbitCircle">
                <param name="posx" value="960" />
                <param name="posy" value="540" />
                <param name="size" value="20" />
                <param name="radius" value="220" />
                <param name="time" value="3000" />
                <param name="direction" value="false" />
            </include>
            
            <include content="OrbitCircle">
                <param name="posx" value="960" />
                <param name="posy" value="540" />
                <param name="size" value="30" />
                <param name="radius" value="250" />
                <param name="time" value="5000" />
            </include>
        </control>
    
        <control type="image">
            <posx>815</posx>
            <posy>395</posy>
            <width>290</width>
            <height>290</height>
            <texture colordiffuse="$VAR[MainColor]" background="true">elements/circle-mask.png</texture>
            <aspectratio>stretch</aspectratio>
        </control>

        <control type="image">
            <posx>820</posx>
            <posy>400</posy>
            <width>280</width>
            <height>280</height>
            <texture colordiffuse="$VAR[BackgroundColor]">elements/circle-mask.png</texture>
            <aspectratio>stretch</aspectratio>
        </control>

        <control type="group" id="410">
            <include content="CircleControlsForPlayer">
                <param name="posx" value="825" />
                <param name="posy" value="405" />
                <param name="onup" value="9001" />
                <param name="ondown" value="9001" />
                <param name="onleft" value="9001" />
                <param name="onright" value="9001" />
            </include>
        </control>

        <control type="group">
            <visible>Substring(Window.Property(DialogCloseButton),T,left)</visible>
            <include content="CloseButtonForPlayer">
                <param name="id" value="408" />
                <param name="posx" value="920" />
                <param name="posy" value="500" />
                <param name="onup" value="403" />
                <param name="ondown" value="404" />
                <param name="onleft" value="401" />
                <param name="onright" value="406" />
            </include>
        </control>

        <control type="group">
            <visible>Window.IsActive(playercontrols)</visible>
            <include content="DescriptionForControlsForPlayer">
                <param name="posx" value="700" />
                <param name="posy" value="700" />
            </include>
        </control>
    </controls>
</window>
