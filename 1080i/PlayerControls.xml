<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog" id="114">
	<defaultcontrol always="true">403</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	<visible>Player.HasMedia + Window.IsActive(PlayerControls) + !VideoPlayer.IsFullscreen + !Window.IsActive(Visualisation)</visible>
    <onunload>SetProperty(DialogCloseButton,False,114)</onunload>

	<controls>
		<control type="image">
			<posx>815</posx>
			<posy>395</posy>
			<width>290</width>
			<height>290</height>
			<texture colordiffuse="MainColor" background="true">elements/circle-mask.png</texture>
			<aspectratio>stretch</aspectratio>
		</control>

		<control type="image">
			<posx>820</posx>
			<posy>400</posy>
			<width>280</width>
			<height>280</height>
			<texture colordiffuse="BackgroundColor">elements/circle-mask.png</texture>
			<aspectratio>stretch</aspectratio>
		</control>

		<include name="CircleControlsForPlayer">
            <param name="posx" value="825" />
            <param name="posy" value="405" />
            <param name="onup" value="9001" />
            <param name="ondown" value="9001" />
            <param name="onleft" value="9001" />
            <param name="onright" value="9001" />
        </include>

		<control type="button" id="408">
            <visible>Substring(Window.Property(DialogCloseButton),T,left)</visible>
			<posx>920</posx>
			<posy>500</posy>
            <include>CloseButtonForPlayer</include>
            <onup>403</onup>
			<ondown>404</ondown>
			<onleft>401</onleft>
			<onright>406</onright>
		</control>

		<control type="group">
			<visible>Window.IsActive(playercontrols)</visible>
            <include name="DescriptionForControlsForPlayer">
                <param name="posx" value="700" />
                <param name="posy" value="700" />
            </include>
		</control>
	</controls>
</window>
