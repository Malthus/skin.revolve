<?xml version="1.0" encoding="UTF-8"?>
<window id="11">
    <defaultcontrol always="true">8</defaultcontrol>

    <controls>
        <control type="videowindow" id="20">
            <include content="FullscreenDimensions" />
        </control>

        <control type="mover" id="8">
            <description>Top Left Mover</description>
            <posx>0</posx>
            <posy>0</posy>
            <width>250</width>
            <height>250</height>
            <texturefocus>elements/calibration-topleft.png</texturefocus>
            <texturenofocus>-</texturenofocus>
        </control>

        <control type="mover" id="9">
            <description>Bottom Right Mover</description>
            <posx>1050</posx>
            <posy>750</posy>
            <width>250</width>
            <height>250</height>
            <texturefocus>elements/calibration-bottomright.png</texturefocus>
            <texturenofocus>-</texturenofocus>
        </control>

        <control type="mover" id="10">
            <description>Subtitle Position Mover</description>
            <posx>300</posx>
            <posy>750</posy>
            <width>500</width>
            <height>50</height>
            <texturefocus>elements/calibration-subtitles.png</texturefocus>
            <texturenofocus>-</texturenofocus>
        </control>

        <control type="resize" id="11">
            <description>Pixel Aspect Ratio Box Resizer</description>
            <posx>0</posx>
            <posy>348</posy>
            <width>250</width>
            <height>250</height>
            <texturefocus>elements/calibration-center.png</texturefocus>
            <texturenofocus>-</texturenofocus>
        </control>

        <control type="group">
            <description>Coordinates Label</description>
            <posx>30</posx>
            <posy>60</posy>
            
            <include content="BackgroundForOutlineLabel">
                <param name="width" value="1860" />
                <param name="height" value="30" />
                <param name="font" value="SmallMessageFont" />
                <param name="outlinecolor" value="$VAR[BackgroundColor]" />
                <param name="outlinesize" value="2" />
                <param name="align" value="center" />
                <param name="label" value="$INFO[Control.GetLabel(2)]" />
            </include>
            <control type="label" id="2">
                <width>1860</width>
                <height>30</height>
                <align>center</align>
                <textcolor>$VAR[MainColor]</textcolor>
                <label>-</label>
            </control>
        </control>

        <control type="group">
            <description>Help Information Label</description>
            <posx>30</posx>
            <posy>100</posy>
            
            <include content="BackgroundForOutlineLabel">
                <param name="width" value="1860" />
                <param name="height" value="30" />
                <param name="font" value="SmallMessageFont" />
                <param name="outlinecolor" value="$VAR[BackgroundColor]" />
                <param name="outlinesize" value="2" />
                <param name="align" value="center" />
                <param name="label" value="$INFO[Control.GetLabel(3)]" />
            </include>
            <control type="label" id="3">
                <width>1860</width>
                <height>30</height>
                <align>center</align>
                <textcolor>$VAR[MainColor]</textcolor>
                <label>-</label>
            </control>
        </control>
    </controls>
</window>
