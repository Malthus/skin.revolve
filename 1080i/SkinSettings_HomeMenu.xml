    <include name="StandardButtonForHomeMenuSkinSettings">
        <param name="id" default="0" />
        <param name="label" default="-" />
        <param name="variable" default="Option" />
        <param name="immutablepath" default="False" />
        <param name="customwindow" default="False" />
    
        <definition>
            <control type="radiobutton" id="$PARAM[id]">
                <width>1100</width>
                <radioposx>1040</radioposx>
                <align>left</align>
                <label>$PARAM[label]</label>
                <selected>Skin.HasSetting($PARAM[variable].Active)</selected>
                <onclick condition="!Skin.HasSetting($PARAM[variable].Active)">SetProperty(CustomOptionActive,False,1196)</onclick>
                <onclick condition="Skin.HasSetting($PARAM[variable].Active)">SetProperty(CustomOptionActive,True,1196)</onclick>
                <onclick>SetProperty(CustomOptionName,$PARAM[label],1196)</onclick>
                <onclick>SetProperty(CustomBackgroundImage,$INFO[Skin.String($PARAM[variable].BackgroundImage)],1196)</onclick>
                <onclick condition="!Skin.HasSetting($PARAM[variable].ImmutablePath)">ClearProperty(CustomOptionImmutablePath,1196)</onclick>
                <onclick condition="Skin.HasSetting($PARAM[variable].ImmutablePath)">SetProperty(CustomOptionImmutablePath,True,1196)</onclick>
                <onclick condition="!Skin.HasSetting($PARAM[variable].CustomWindow)">ClearProperty(CustomOptionCustomWindow,1196)</onclick>
                <onclick condition="Skin.HasSetting($PARAM[variable].CustomWindow)">SetProperty(CustomOptionCustomWindow,True,1196)</onclick>
                <onclick>SetProperty(TargetOption,$PARAM[variable],1196)</onclick>
                <onclick>SetProperty(Dialog.ImmutablePathVisible,$PARAM[immutablepath],1196)</onclick>
                <onclick>SetProperty(Dialog.CustomWindowVisible,$PARAM[customwindow],1196)</onclick>
                <onclick>ActivateWindow(1196)</onclick>
            </control>
        </definition>
    </include>
    
