            <include content="MediaSettingsDefaultValues" />
            <include content="MiscellaneousSettingsForSkinSettings" />
            <include content="DebugSettingsDefaultValues" />

            <onfocus>Skin.SetString(Revolve.Configuration,4.1.1)</onfocus>
        </definition>
    </include>
    
    <include name="MigratedValues">
        <definition>
            <include content="ExitMenuItemsDefaultValues" />

            <include content="BackgroundSettingsMigratedValues" />
            <include content="HomeMenuItemsSettingsMigratedValues" />
            <include content="MediaSettingsMigratedValues" />
            <include content="DebugSettingsDefaultValues" />
            
