<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">2</defaultcontrol>
	<allowoverlay>yes</allowoverlay>

	<controls>
        <control type="group">
			<visible>!VideoPlayer.IsFullscreen + !Window.IsVisible(screencalibration)</visible>

            <control type="group">
                <description>Video Overlay With Artwork Group</description>
                <visible>Skin.HasSetting(PlayerArtwork.Visible)</visible>

                <control type="group">
                    <visible>Skin.HasSetting(Overlay.BackgroundVisible)</visible>
                
                    <include name="BackgroundForOverlay" />

                    <control type="group">
                        <posx>1320</posx>
                        <posy>PosYForPlayerInformationForOverlay</posy>
                        <include name="NormalVideoPlayerInformationForOverlay">
                            <param name="width" value="1300" />
                        </include>
                    </control>
                    <control type="group">
                        <posx>1330</posx>
                        <posy>PosYForPlayerInformationForOverlay</posy>
                        <include name="NormalVideoPlayerTimeForOverlay">
                            <param name="width" value="400" />
                        </include>
                    </control>
                </control>

                <control type="group">
                    <visible>!Skin.HasSetting(Overlay.BackgroundVisible)</visible>
                
                    <control type="group">
                        <posx>1320</posx>
                        <posy>PosYForPlayerInformationForOverlay</posy>
                        <include name="OutlineVideoPlayerInformationForOverlay">
                            <param name="width" value="1300" />
                        </include>
                    </control>
                    <control type="group">
                        <posx>1330</posx>
                        <posy>PosYForPlayerInformationForOverlay</posy>
                        <include name="OutlineVideoPlayerTimeForOverlay">
                            <param name="width" value="400" />
                        </include>
                    </control>
                </control>

                <include name="PlayerMediaIconForOverlay" />
            </control>
        
            <control type="group">
                <description>Video Overlay Without Artwork Group</description>
                <visible>!Skin.HasSetting(PlayerArtwork.Visible)</visible>

                <control type="group">
                    <visible>Skin.HasSetting(Overlay.BackgroundVisible)</visible>
                
                    <include name="BackgroundForOverlay" />

                    <control type="group">
                        <posx>1520</posx>
                        <posy>PosYForPlayerInformationForOverlay</posy>
                        <include name="NormalVideoPlayerInformationForOverlay">
                            <param name="width" value="1500" />
                        </include>
                    </control>
                    <control type="group">
                        <posx>1530</posx>
                        <posy>PosYForPlayerInformationForOverlay</posy>
                        <include name="NormalVideoPlayerTimeForOverlay">
                            <param name="width" value="400" />
                        </include>
                    </control>
                </control>

                <control type="group">
                    <visible>!Skin.HasSetting(Overlay.BackgroundVisible)</visible>
                
                    <control type="group">
                        <posx>1520</posx>
                        <posy>PosYForPlayerInformationForOverlay</posy>
                        <include name="OutlineVideoPlayerInformationForOverlay">
                            <param name="width" value="1500" />
                        </include>
                    </control>
                    <control type="group">
                        <posx>1530</posx>
                        <posy>PosYForPlayerInformationForOverlay</posy>
                        <include name="OutlineVideoPlayerTimeForOverlay">
                            <param name="width" value="400" />
                        </include>
                    </control>
                </control>
            </control>
		</control>
            
        <control type="group">
            <include>VisibilityInOverlayForBackButton</include>
            <include>BackButton</include>
        </control>
	</controls>
</window>
