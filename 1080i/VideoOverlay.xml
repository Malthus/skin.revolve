<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">2</defaultcontrol>
	<allowoverlay>yes</allowoverlay>

	<controls>
        <control type="group">
			<visible>!VideoPlayer.IsFullscreen + !Window.IsVisible(screencalibration)</visible>

			<control type="image">
				<posx>0</posx>
				<posy>1020</posy>
				<width>1920</width>
				<height>60</height>
				<texture>white.png</texture>
			</control>

            <control type="group" description="Video Overlay With Artwork Group">
                <visible>!VideoPlayer.IsFullscreen + !Window.IsVisible(screencalibration) + Skin.HasSetting(PlayerArtwork.Visible)</visible>

                <control type="label">
                    <posx>1320</posx>
                    <width>1300</width>
                    <include>OverlayInformationForVideoPlayer</include>
                </control>
                <control type="label">
                    <posx>1330</posx>
                    <width>400</width>
                    <include>OverlayTimeForVideoPlayer</include>
                </control>
				
                <control type="group">
                    <posx>1630</posx>
                    <posy>806</posy>
                    <include>PlayerMediaIconForPlayer</include>
                </control>
            </control>
        
            <control type="group" description="Video Overlay Without Artwork Group">
                <visible>!Skin.HasSetting(PlayerArtwork.Visible)</visible>

                <control type="label">
                    <posx>1520</posx>
                    <width>1500</width>
                    <include>OverlayInformationForVideoPlayer</include>
                </control>
                <control type="label">
                    <posx>1530</posx>
                    <width>400</width>
                    <include>OverlayTimeForVideoPlayer</include>
                </control>
            </control>
		</control>
	</controls>
</window>
