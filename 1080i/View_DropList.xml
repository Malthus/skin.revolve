<?xml version="1.0" encoding="UTF-8"?>
<includes>
    <include name="DropListView">
        <definition>
            <control type="fixedlist" id="51">
                <viewtype label="31931">list</viewtype>
                <animation effect="fade" start="100" end="0" time="200" condition="Container(51).Scrolling + !Container.Content(episodes) + !Container.Content(seasons) + !Container.Content(songs)">conditional</animation>

                <posx>720</posx>
                <posy>-121</posy>
                <width>1080</width>
                <height>1250</height>
                <onleft>9000</onleft>
                <onright>61</onright>
                <onup>51</onup>
                <ondown>51</ondown>
                <focusposition>1</focusposition>
                <pagecontrol>61</pagecontrol>
                <scrolltime>200</scrolltime>
                
                <include content="NormalListItemForDropListView" />
                <include content="FocusedListItemForDropListView" />
            </control>
            
            <control type="group">
                <visible>Control.IsVisible(51)</visible>

                <control type="group">
                    <include content="VisibilityForVerticalIcon" />
                    <posx>120</posx>
                    <posy>150</posy>
                    <include content="ShadowForVerticalPosterIcon" />
                    <include content="VerticalPosterIcon" />
                    <include content="OverlayForVerticalPosterIcon" />
                </control>

                <control type="group">
                    <include content="VisibilityForSquareIcon" />
                    <posx>120</posx>
                    <posy>150</posy>
                    <include content="ShadowForSquarePosterIcon" />
                    <include content="SquarePosterIcon" />
                    <include content="OverlayForSquarePosterIcon" />
                </control>

                <control type="group">
                    <include content="VisibilityForBanner" />

                    <control type="group">
                        <posx>1080</posx>
                        <posy>200</posy>
                        <include content="DefaultBannerIcon" />
                    </control>
                    
                    <control type="group">
                        <visible>ListItem.IsPlaying</visible>
                        <include content="ContentInformationForDropListView">
                            <param name="textcolor" value="$VAR[HighlightColor]" />
                        </include>
                    </control>
                    <control type="group">
                        <visible>!ListItem.IsPlaying</visible>
                        <include content="ContentInformationForDropListView" />
                    </control>
                </control>

                <control type="group">
                    <include content="VisibilityForNoBanner" />

                    <control type="group">
                        <visible>ListItem.IsPlaying</visible>
                        <include content="ContentCategoryForDropListView">
                            <param name="textcolor" value="$VAR[HighlightColor]" />
                        </include>
                        <include content="ContentNameForDropListView">
                            <param name="textcolor" value="$VAR[HighlightColor]" />
                        </include>
                        <include content="ContentDetailForDropListView">
                            <param name="textcolor" value="$VAR[HighlightColor]" />
                        </include>
                    </control>

                    <control type="group">
                        <visible>!ListItem.IsPlaying</visible>
                        <include content="ContentCategoryForDropListView" />
                        <include content="ContentNameForDropListView" />
                        <include content="ContentDetailForDropListView" />
                    </control>
                </control>

                <include content="ContentMediaFlagsForDropListView" />
                <include content="ContentDescriptionForDropListView" />
                
                <control type="group">
                    <include content="VisibilityOfSortLetterInView" />
                    <posx>770</posx>
                    <posy>149</posy>
                    <include content="ShadowForDefaultCircleThumbnailIcon" />
                    <include content="DefaultCircleSortLetterIcon" />
                </control>
            </control>

            <control type="scrollbar" id="61">
                <visible allowhiddenfocus="true">Control.IsVisible(51)</visible>
                <animation type="Conditional" condition="!Control.HasFocus(61) + !Container(51).Scrolling + !Skin.HasSetting(ViewScrollbar.Visible)">
                    <effect type="slide" start="0,0" end="40,0" time="100" />
                </animation>

                <posx>PosXForVerticalScrollbarForView</posx>
                <posy>PosYForVerticalScrollbarForView</posy>
                <width>WidthForVerticalScrollbarForView</width>
                <height>HeightForVerticalScrollbarForView</height>
                <onleft>51</onleft>
                <onright>Noop</onright>
            </control>
        </definition>
    </include>
    
    <include name="NormalListItemForDropListView">
        <definition>
            <itemlayout width="1080" height="250">
                <control type="group">
                    <animation effect="zoom" end="80" center="auto" condition="true">Conditional</animation>
                    
                    <posx>40</posx>
                    <posy>-10</posy>
                    <width>310</width>
                    <height>310</height>
                    <include content="ShadowForDefaultCircleThumbnailIcon" />
                    <include content="DefaultCircleThumbnailIcon" />
                    <include content="FadeMaskForDefaultCircleThumbnailIcon" />
                    <include content="OverlayForDefaultCircleThumbnailIcon" />
                </control>
            </itemlayout>
        </definition>
    </include>
    
    <include name="FocusedListItemForDropListView">
        <definition>
            <focusedlayout width="1080" height="310">
                <control type="group">
                    <posx>40</posx>
                    <posy>0</posy>
                    <width>310</width>
                    <height>310</height>
                    <animation effect="zoom" center="auto" start="80" end="100" time="200" reversible="false">focus</animation>
                    <animation effect="zoom" center="auto" start="100" end="80" time="200" reversible="false">unfocus</animation>

                    <control type="group">
                        <animation effect="slide" start="0,31" end="0,0" time="200" reversible="false" condition="Container(51).OnScrollNext">focus</animation>
                        <animation effect="slide" start="0,0" end="0,-35" time="200" reversible="false" condition="Container(51).OnScrollNext">unfocus</animation>
                        <animation effect="slide" start="0,-31" end="0,0" time="200" reversible="false" condition="Container(51).OnScrollPrevious">focus</animation>
                        <animation effect="slide" start="0,-62" end="0,-35" time="200" reversible="false" condition="Container(51).OnScrollPrevious">unfocus</animation>
                        <posy>20</posy>
                        
                        <control type="group">
                            <animation effect="fade" center="auto" start="0" end="100" time="200" reversible="false">focus</animation>
                            <animation effect="fade" center="auto" start="100" end="0" time="200" reversible="false">unfocus</animation>
                            <include content="ShadowForDefaultCircleThumbnailIcon" />
                        </control>

                        <include content="ShadowForDefaultCircleThumbnailIcon" />
                        <include content="DefaultCircleThumbnailIcon" />

                        <control type="group">
                            <animation effect="fade" center="auto" start="75" end="0" time="200" reversible="false">focus</animation>
                            <animation effect="fade" center="auto" start="0" end="75" time="200" reversible="false">unfocus</animation>
                            <include content="FadeMaskForDefaultCircleThumbnailIcon" />
                        </control>

                        <control type="group">
                            <animation effect="fade" center="auto" start="100" end="0" time="200" reversible="false">focus</animation>
                            <animation effect="fade" center="auto" start="0" end="100" time="200" reversible="false">unfocus</animation>
                            <include content="OverlayForDefaultCircleThumbnailIcon" />
                        </control>
                    </control>
                </control>
            </focusedlayout>
        </definition>
    </include>
    
    <include name="ContentCategoryForDropListView">
        <param name="textcolor" default="$VAR[MainColor]" />
    
        <definition>
            <include content="OutlineLabel">
                <param name="posx" value="1080" />
                <param name="posy" value="235" />
                <param name="width" value="760" />
                <param name="height" value="30" />
                <param name="font" value="DetailViewFont" />
                <param name="textcolor" value="$PARAM[textcolor]" />
                <param name="outlinecolor" value="$VAR[BackgroundColor]" />
                <param name="outlinesize" value="2" />
                <param name="align" value="left" />
                <param name="scroll" value="true" />
                <param name="label" value="$VAR[ContentCategoryLabel]" />
            </include>
        </definition>
    </include>
    
    <include name="ContentDetailForDropListView">
        <param name="textcolor" default="$VAR[MainColor]" />

        <definition>
            <include content="OutlineLabel">
                <param name="posx" value="1080" />
                <param name="posy" value="312" />
                <param name="width" value="760" />
                <param name="height" value="30" />
                <param name="font" value="DetailViewFont" />
                <param name="textcolor" value="$PARAM[textcolor]" />
                <param name="outlinecolor" value="$VAR[BackgroundColor]" />
                <param name="outlinesize" value="2" />
                <param name="align" value="left" />
                <param name="scroll" value="true" />
                <param name="label" value="$VAR[ContentDetailLabel]" />
            </include>
        </definition>
    </include>
    
    <include name="ContentInformationForDropListView">
        <param name="textcolor" default="$VAR[MainColor]" />
    
        <definition>
            <include content="OutlineLabel">
                <param name="posx" value="1080" />
                <param name="posy" value="160" />
                <param name="width" value="760" />
                <param name="height" value="30" />
                <param name="font" value="DetailViewFont" />
                <param name="textcolor" value="$PARAM[textcolor]" />
                <param name="outlinecolor" value="$VAR[BackgroundColor]" />
                <param name="outlinesize" value="2" />
                <param name="align" value="left" />
                <param name="scroll" value="true" />
                <param name="label" value="$VAR[ContentInformationLabel]" />
            </include>
        </definition>
    </include>
    
    <include name="ContentNameForDropListView">
        <param name="textcolor" default="$VAR[MainColor]" />

        <definition>
            <include content="OutlineLabel">
                <param name="posx" value="1080" />
                <param name="posy" value="260" />
                <param name="width" value="760" />
                <param name="height" value="40" />
                <param name="font" value="BigViewFont" />
                <param name="textcolor" value="$PARAM[textcolor]" />
                <param name="outlinecolor" value="$VAR[BackgroundColor]" />
                <param name="outlinesize" value="2" />
                <param name="align" value="left" />
                <param name="aligny" value="top" />
                <param name="scroll" value="true" />
                <param name="label" value="$VAR[ContentNameLabel]" />
            </include>
        </definition>
    </include>

    <include name="ContentMediaFlagsForDropListView">
        <definition>
            <include content="HorizontalViewListOfContentMediaFlag">
                <param name="posx" value="1080" />
                <param name="posy" value="360" />
                <param name="mediaflagcolor" value="$VAR[TextColor]" />
                <param name="outlinecolor" value="$VAR[BackgroundColor]" />
            </include>
        </definition>
    </include>
    
    <include name="ContentDescriptionForDropListView">
        <definition>
            <include content="OutlineTextbox">
                <param name="posx" value="1080" />
                <param name="posy" value="420" />
                <param name="width" value="760" />
                <param name="height" value="410" />
                <param name="font" value="DescriptionViewFont" />
                <param name="textcolor" value="$VAR[TextColor]" />
                <param name="outlinecolor" value="$VAR[BackgroundColor]" />
                <param name="outlinesize" value="2" />
                <param name="align" value="left" />
                <param name="label" value="$VAR[ContentDescription]" />
            </include>
        </definition>
    </include>
</includes>
