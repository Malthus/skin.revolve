<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="DropListView">
        <definition>
            <control type="fixedlist" id="51">
                <viewtype label="31931">list</viewtype>
                <animation effect="fade" start="100" end="0" time="200" condition="Container(51).Scrolling + !Container.Content(episodes) + !Container.Content(seasons) + !Container.Content(songs)">conditional</animation>

                <posx>720</posx>
                <posy>-121</posy>
                <width>1080</width>
                <height>1250</height>
                <onleft>9000</onleft>
                <onright>61</onright>
                <onup>51</onup>
                <ondown>51</ondown>
                <focusposition>1</focusposition>
                <pagecontrol>61</pagecontrol>
                <scrolltime>200</scrolltime>
                
                <include name="NormalListItemForDropListView" />
                <include name="FocusedListItemForDropListView" />
            </control>
            
            <control type="group">
                <description>Poster</description>
                <visible>Control.IsVisible(51)</visible>

                <control type="group">
                    <include name="VisibilityForVerticalIcon" />
                    <posx>120</posx>
                    <posy>150</posy>
                    <include name="ShadowForVerticalPosterIcon" />
                    <include name="VerticalPosterIcon" />
                    <include name="OverlayForVerticalPosterIcon" />
                </control>

                <control type="group">
                    <include name="VisibilityForSquareIcon" />
                    <posx>120</posx>
                    <posy>150</posy>
                    <include name="ShadowForSquarePosterIcon" />
                    <include name="SquarePosterIcon" />
                    <include name="OverlayForSquarePosterIcon" />
                </control>

                <include name="ContentCategoryForDropListView" />
                <include name="ContentNameForDropListView" />
                <include name="ContentDetailForDropListView" />
                <include name="ContentMediaFlagsForDropListView" />
                <include name="ContentDescriptionForDropListView" />
                
                <control type="group">
                    <include name="VisibilityOfSortLetterInView" />
                    <posx>770</posx>
                    <posy>149</posy>
                    <include name="ShadowForDefaultCircleThumbnailIcon" />
                    <include name="DefaultCircleSortLetterIcon" />
                </control>
            </control>

            <control type="scrollbar" id="61">
                <visible allowhiddenfocus="true">Control.IsVisible(51)</visible>
                <animation type="Conditional" condition="!Control.HasFocus(61) + !Container(51).Scrolling + !Skin.HasSetting(ViewScrollbar.Visible)">
                    <effect type="slide" start="0,0" end="40,0" time="100" />
                </animation>

                <posx>PosXForVerticalScrollbarForView</posx>
                <posy>PosYForVerticalScrollbarForView</posy>
                <width>WidthForVerticalScrollbarForView</width>
                <height>HeightForVerticalScrollbarForView</height>
                <onleft>51</onleft>
                <onright>Noop</onright>
            </control>
        </definition>
	</include>
	
	<include name="NormalListItemForDropListView">
        <definition>
            <itemlayout width="1080" height="250">
                <control type="group">
                    <animation effect="zoom" end="80" center="auto" condition="true">Conditional</animation>
                    
                    <posx>40</posx>
                    <posy>-10</posy>
                    <width>310</width>
                    <height>310</height>
                    <include name="ShadowForDefaultCircleThumbnailIcon" />
                    <include name="DefaultCircleThumbnailIcon" />
                    <include name="FadeMaskForDefaultCircleThumbnailIcon" />
                    <include name="OverlayForDefaultCircleThumbnailIcon" />
                </control>
            </itemlayout>
        </definition>
	</include>
	
	<include name="FocusedListItemForDropListView">
        <definition>
            <focusedlayout width="1080" height="310">
                <control type="group">
                    <posx>40</posx>
                    <posy>0</posy>
                    <width>310</width>
                    <height>310</height>
                    <animation effect="zoom" center="auto" start="80" end="100" time="200" reversible="false">focus</animation>
                    <animation effect="zoom" center="auto" start="100" end="80" time="200" reversible="false">unfocus</animation>

                    <control type="group">
                        <animation effect="slide" start="0,31" end="0,0" time="200" reversible="false" condition="Container(51).OnScrollNext">focus</animation>
                        <animation effect="slide" start="0,0" end="0,-35" time="200" reversible="false" condition="Container(51).OnScrollNext">unfocus</animation>
                        <animation effect="slide" start="0,-31" end="0,0" time="200" reversible="false" condition="Container(51).OnScrollPrevious">focus</animation>
                        <animation effect="slide" start="0,-62" end="0,-35" time="200" reversible="false" condition="Container(51).OnScrollPrevious">unfocus</animation>
                        <posy>20</posy>
                        
                        <control type="group">
                            <animation effect="fade" center="auto" start="0" end="100" time="200" reversible="false">focus</animation>
                            <animation effect="fade" center="auto" start="100" end="0" time="200" reversible="false">unfocus</animation>
                            <include name="ShadowForDefaultCircleThumbnailIcon" />
                        </control>

                        <include name="ShadowForDefaultCircleThumbnailIcon" />
                        <include name="DefaultCircleThumbnailIcon" />

                        <control type="group">
                            <animation effect="fade" center="auto" start="75" end="0" time="200" reversible="false">focus</animation>
                            <animation effect="fade" center="auto" start="0" end="75" time="200" reversible="false">unfocus</animation>
                            <include name="FadeMaskForDefaultCircleThumbnailIcon" />
                        </control>

                        <control type="group">
                            <animation effect="fade" center="auto" start="100" end="0" time="200" reversible="false">focus</animation>
                            <animation effect="fade" center="auto" start="0" end="100" time="200" reversible="false">unfocus</animation>
                            <include name="OverlayForDefaultCircleThumbnailIcon" />
                        </control>
                    </control>
                </control>
            </focusedlayout>
        </definition>
	</include>
	
