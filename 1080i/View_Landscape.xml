<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="LandscapeView">
		<control type="fixedlist" id="53">
			<viewtype label="31933">list</viewtype>
			<visible allowhiddenfocus="true">true</visible>
			
			<posx>0</posx>
			<posy>0</posy>
			<width>1920</width>
			<height>1080</height>
			<pagecontrol>63</pagecontrol>
			<orientation>horizontal</orientation>
			<focusposition>2</focusposition>
			<onup>9000</onup>
			<ondown>63</ondown>
			<onleft>53</onleft>
			<onright>53</onright>
			
            <include>InvisibleHorizontalListItemsForMenu</include>
		</control>
		
		<include>MainLandscapeView</include>
	</include>
		
	<include name="MainLandscapeView">
		<control type="group">
			<visible>Control.IsVisible(53)</visible>
			<animation effect="slide" start="0,1080" end="0,0" time="500">WindowOpen</animation>
			<animation effect="slide" start="0,0" end="0,1080" time="500">WindowClose</animation>

			<include>BottomRing</include>
			<include>ItemsForLandscape</include>
            <include>ContentDescriptionForLandscapeView</include>
		</control>

		<control type="scrollbar" id="63" description="Scrollbar">
			<visible allowhiddenfocus="true">Control.IsVisible(53)</visible>
			<animation type="Conditional" condition="!Control.HasFocus(63) + !Container(53).Scrolling + !Skin.HasSetting(ViewScrollbar.Visible)">
				<effect type="slide" start="0,0" end="0,-40" time="100" />
			</animation>

			<posx>1000</posx>
			<posy>8</posy>
			<width>860</width>
			<height>20</height>
			<orientation>horizontal</orientation>
			<texturesliderbackground border="14,0,14,0" colordiffuse="BackgroundColor">controls/verticalbar-thick.png</texturesliderbackground>
			<texturesliderbar border="14,0,14,0" colordiffuse="SelectColor">controls/verticalbar-thin.png</texturesliderbar>
			<texturesliderbarfocus border="14,0,14,0" colordiffuse="MainColor">controls/verticalbar-thin.png</texturesliderbarfocus>
			<onup>53</onup>
			<ondown>53</ondown>
			<onleft>63</onleft>
			<onright>63</onright>
		</control>
	</include>
    
	<include name="ContentDescriptionForLandscapeView">
		<control type="group">
            <visible>Skin.HasSetting(LandscapeDescription.Visible)</visible>
			<posx>40</posx>
			<posy>40</posy>
            
			<control type="textbox">
				<posx>-1</posx>
				<posy>-1</posy>
				<include>ContentDescriptionMarkupForLandscapeView</include>
				<textcolor>BackgroundColor</textcolor>
				<label>$VAR[ContentDescription]</label>
			</control>
			<control type="textbox">
				<posx>1</posx>
				<posy>-1</posy>
				<include>ContentDescriptionMarkupForLandscapeView</include>
				<textcolor>BackgroundColor</textcolor>
				<label>$VAR[ContentDescription]</label>
			</control>
			<control type="textbox">
				<posx>-1</posx>
				<posy>1</posy>
				<include>ContentDescriptionMarkupForLandscapeView</include>
				<textcolor>BackgroundColor</textcolor>
				<label>$VAR[ContentDescription]</label>
			</control>
			<control type="textbox">
				<posx>1</posx>
				<posy>1</posy>
				<include>ContentDescriptionMarkupForLandscapeView</include>
				<textcolor>BackgroundColor</textcolor>
				<label>$VAR[ContentDescription]</label>
			</control>
			<control type="textbox">
				<include>ContentDescriptionMarkupForLandscapeView</include>
				<textcolor>SecondaryColor</textcolor>
				<label>$VAR[ContentDescription]</label>
			</control>
		</control>
	</include>
    
	<include name="ContentDescriptionMarkupForLandscapeView">
		<align>left</align>
		<aligny>top</aligny>
		<width>1840</width>
		<height>340</height>
		<font>DescriptionFont</font>
		<wrapmultiline>true</wrapmultiline>
		<autoscroll time="2000" delay="3000" repeat="5000">true</autoscroll>
	</include>
</includes>
