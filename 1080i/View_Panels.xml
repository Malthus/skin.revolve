<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="PanelsView">
		<control type="group">
			<visible>Control.IsVisible(56)</visible>
			<include name="BackgroundAnimationForBottomRing" />
		</control>

		<control type="panel" id="56">
			<viewtype label="31936">list</viewtype>
			<visible>true</visible>
			<animation effect="slide" start="0,1080" end="0,0" time="500">WindowOpen</animation>
			<animation effect="slide" start="0,0" end="0,1080" time="500">WindowClose</animation>
			
			<posx>-20</posx>
			<posy>60</posy>
			<width>1960</width>
			<height>1000</height>
			<orientation>horizontal</orientation>
			<defaultcontrol>6</defaultcontrol>
			<focusposition>6</focusposition>
			<scrolltime>200</scrolltime>
			<pagecontrol>66</pagecontrol>
			<preloaditems>2</preloaditems>
			<onup>9000</onup>
			<ondown>66</ondown>
			<onleft>56</onleft>
			<onright>56</onright>

			<itemlayout width="280" height="280" condition="!Container.Content(tvshows) + !Container.Content(movies) + !Container.Content(seasons)">
				<control type="group">
					<posx>5</posx>
					<posy>5</posy>
					<include name="DefaultSquareThumbnailIcon" />
					<include name="OverlayForDefaultSquareThumbnailIcon" />
				</control>
				<control type="group">
                    <visible>Skin.HasSetting(Thumbnails.NameVisible)</visible>
                    <include name="NameInThumbnailOrPanelForView" />
				</control>
			</itemlayout>
			
			<itemlayout width="280" height="415" condition="Container.Content(tvshows) | Container.Content(movies) | Container.Content(seasons)">
				<control type="group">
					<posx>5</posx>
					<posy>5</posy>
					<include name="DefaultVerticalThumbnailIcon" />
					<include name="OverlayForDefaultVerticalThumbnailIcon" />
				</control>
				<control type="group">
                    <visible>Skin.HasSetting(Thumbnails.NameVisible)</visible>
                    <include name="NameInThumbnailOrPanelForView">
                        <param name="posy" value="345" />
                    </include>
				</control>
			</itemlayout>
			
			<focusedlayout width="280" height="280" condition="!Container.Content(tvshows) + !Container.Content(movies) + !Container.Content(seasons)">
				<control type="group">
					<animation type="Focus">
						<effect type="zoom" start="100" end="140" time="200" />
						<effect type="slide" end="-38,-38" time="200" />
					</animation>
			
					<posx>5</posx>
					<posy>5</posy>
					<include name="ShadowForDefaultSquareThumbnailIcon" />
					<include name="DefaultSquareThumbnailIcon" />
					<include name="OverlayForDefaultSquareThumbnailIcon" />
				</control>
				<control type="group">
                    <visible>Skin.HasSetting(Thumbnails.NameVisible)</visible>

                    <control type="group">
                        <animation type="Focus">
                            <effect type="zoom" start="100" end="140" time="200" />
                            <effect type="slide" end="-38,-38" time="200" />
                        </animation>

                        <include name="BackgroundForNameInThumbnailOrPanelForView">
                            <param name="outlinecolor" value="MainColor" />
                        </include>
                    </control>
                    
                    <control type="group">
                        <animation type="Focus">
                            <effect type="zoom" start="100" end="140" time="200" />
                            <effect type="slide" end="-38,-38" time="200" />
                            <effect type="fade" start="100" end="0" time="200" />
                        </animation>
                    
                        <include name="BackgroundForNameInThumbnailOrPanelForView" />
                    </control>
                    
                    <control type="group">
                        <animation type="Focus">
                            <effect type="zoom" start="100" end="140" time="200" />
                            <effect type="slide" end="-38,-38" time="200" />
                        </animation>

                        <include name="TextForNameInThumbnailOrPanelForView" />
                    </control>
				</control>
			</focusedlayout>

			<focusedlayout width="280" height="415" condition="Container.Content(tvshows) | Container.Content(movies) | Container.Content(seasons)">
				<control type="group">
                    <animation type="Focus">
						<effect type="zoom" start="100" end="140" time="200" />
						<effect type="slide" end="-38,-38" time="200" />
					</animation>
				
					<posx>5</posx>
					<posy>5</posy>
					<include name="ShadowForDefaultVerticalThumbnailIcon" />
					<include name="DefaultVerticalThumbnailIcon" />
					<include name="OverlayForDefaultVerticalThumbnailIcon" />
				</control>
				<control type="group">
                    <visible>Skin.HasSetting(Thumbnails.NameVisible)</visible>

                    <control type="group">
                        <animation type="Focus">
                            <effect type="zoom" start="100" end="140" time="200" />
                            <effect type="slide" end="-38,-38" time="200" />
                        </animation>

                        <include name="BackgroundForNameInThumbnailOrPanelForView">
                            <param name="outlinecolor" value="MainColor" />
                            <param name="posy" value="345" />
                        </include>
                    </control>
                    
                    <control type="group">
                        <animation type="Focus">
                            <effect type="zoom" start="100" end="140" time="200" />
                            <effect type="slide" end="-38,-38" time="200" />
                            <effect type="fade" start="100" end="0" time="200" />
                        </animation>
                    
                        <include name="BackgroundForNameInThumbnailOrPanelForView">
                            <param name="posy" value="345" />
                        </include>
                    </control>
                    
                    <control type="group">
                        <animation type="Focus">
                            <effect type="zoom" start="100" end="140" time="200" />
                            <effect type="slide" end="-38,-38" time="200" />
                        </animation>

                        <include name="TextForNameInThumbnailOrPanelForView">
                            <param name="posy" value="345" />
                        </include>
                    </control>
				</control>
			</focusedlayout>
		</control>
			
		<control type="group">
			<visible>Control.IsVisible(56)</visible>
			<include name="BottomRing" />
            <include name="LabelsForBottomRing" />
		</control>

		<control type="scrollbar" id="66">
			<visible allowhiddenfocus="true">Control.IsVisible(56)</visible>
			<animation type="Conditional" condition="!Control.HasFocus(66) + !Container(56).Scrolling + !Skin.HasSetting(ViewScrollbar.Visible)">
				<effect type="slide" start="0,0" end="0,-40" time="100" />
			</animation>

			<posx>PosXForHorizontalScrollbarForView</posx>
			<posy>PosYForHorizontalScrollbarForView</posy>
			<width>WidthForHorizontalScrollbarForView</width>
			<height>HeightForHorizontalScrollbarForView</height>
			<orientation>horizontal</orientation>
			<texturesliderbackground border="14,0,14,0" colordiffuse="BackgroundColor">controls/verticalbar-thick.png</texturesliderbackground>
			<texturesliderbar border="14,0,14,0" colordiffuse="SelectColor">controls/verticalbar-thin.png</texturesliderbar>
			<texturesliderbarfocus border="14,0,14,0" colordiffuse="MainColor">controls/verticalbar-thin.png</texturesliderbarfocus>
			<onup>56</onup>
			<ondown>56</ondown>
			<onleft>66</onleft>
			<onright>66</onright>
		</control>
	</include>
</includes>
