<?xml version="1.0" encoding="UTF-8"?>
<includes>
    <include name="ThumbnailsView">
        <control type="group">
            <visible>Control.IsVisible(55)</visible>
            <include content="BackgroundAnimationForBottomRing" />
        </control>
        
        <control type="panel" id="55">
            <viewtype label="31935">list</viewtype>
            <visible>true</visible>
            <animation effect="slide" start="0,1080" end="0,0" time="500">WindowOpen</animation>
            <animation effect="slide" start="0,0" end="0,1080" time="500">WindowClose</animation>

            <posx>120</posx>
            <posy>0</posy>
            <width>1920</width>
            <height>1020</height>
            <pagecontrol>65</pagecontrol>
            <defaultcontrol>6</defaultcontrol>
            <focusposition>6</focusposition>
            <scrolltime>200</scrolltime>
            <preloaditems>2</preloaditems>
            <onup>55</onup>
            <ondown>55</ondown>
            <onleft>9000</onleft>
            <onright>65</onright>

            <itemlayout height="280" width="280">
                <control type="group">
                    <visible>!StringCompare(Skin.String(Thumbnails.Type),S)</visible>
                    <posx>5</posx>
                    <posy>5</posy>
                    <include content="DefaultCircleThumbnailIcon" />
                    <include content="OverlayForDefaultCircleThumbnailIcon" />
                </control>
                <control type="group">
                    <visible>StringCompare(Skin.String(Thumbnails.Type),S)</visible>
                    <posx>5</posx>
                    <posy>5</posy>
                    <include content="DefaultSquareThumbnailIcon" />
                    <include content="OverlayForDefaultSquareThumbnailIcon" />
                </control>
                <control type="group">
                    <visible>Skin.HasSetting(Thumbnails.NameVisible)</visible>
                    <include content="NameInThumbnailOrPanelForView" />
                </control>
            </itemlayout>
            
            <focusedlayout height="280" width="280">
                <control type="group">
                    <visible>!StringCompare(Skin.String(Thumbnails.Type),S)</visible>
                    <animation type="Focus">
                        <effect type="zoom" start="100" end="140" time="200" />
                        <effect type="slide" end="-38,-38" time="200" />
                    </animation>

                    <posx>5</posx>
                    <posy>5</posy>
                    <include content="ShadowForDefaultCircleThumbnailIcon" />
                    <include content="DefaultCircleThumbnailIcon" />
                    <include content="OverlayForDefaultCircleThumbnailIcon" />
                </control>
                <control type="group">
                    <visible>StringCompare(Skin.String(Thumbnails.Type),S)</visible>
                    <animation type="Focus">
                        <effect type="zoom" start="100" end="140" time="200" />
                        <effect type="slide" end="-38,-38" time="200" />
                    </animation>

                    <posx>5</posx>
                    <posy>5</posy>
                    <include content="ShadowForDefaultSquareThumbnailIcon" />
                    <include content="DefaultSquareThumbnailIcon" />
                    <include content="OverlayForDefaultSquareThumbnailIcon" />
                </control>
                <control type="group">
                    <visible>Skin.HasSetting(Thumbnails.NameVisible)</visible>

                    <control type="group">
                        <animation type="Focus">
                            <effect type="zoom" start="100" end="140" time="200" />
                            <effect type="slide" end="-38,-38" time="200" />
                        </animation>

                        <include content="BackgroundForNameInThumbnailOrPanelForView">
                            <param name="outlinecolor" value="$VAR[MainColor]" />
                        </include>
                    </control>
                    
                    <control type="group">
                        <animation type="Focus">
                            <effect type="zoom" start="100" end="140" time="200" />
                            <effect type="slide" end="-38,-38" time="200" />
                            <effect type="fade" start="100" end="0" time="200" />
                        </animation>
                    
                        <include content="BackgroundForNameInThumbnailOrPanelForView" />
                    </control>
                    
                    <control type="group">
                        <animation type="Focus">
                            <effect type="zoom" start="100" end="140" time="200" />
                            <effect type="slide" end="-38,-38" time="200" />
                        </animation>

                        <include content="TextForNameInThumbnailOrPanelForView" />
                    </control>
                </control>
            </focusedlayout>
        </control>

        <control type="group">
            <visible>Control.IsVisible(55)</visible>
            <include content="BottomRing" />
            <include content="LabelsForBottomRing" />
        </control>
        
        <control type="scrollbar" id="65">
            <visible allowhiddenfocus="true">Control.IsVisible(55)</visible>
            <animation type="Conditional" condition="!Control.HasFocus(65) + !Container(55).Scrolling + !Skin.HasSetting(ViewScrollbar.Visible)">
                <effect type="slide" start="0,0" end="40,0" time="100" />
            </animation>

            <posx>PosXForVerticalScrollbarForView</posx>
            <posy>PosYForVerticalScrollbarForView</posy>
            <width>WidthForVerticalScrollbarForView</width>
            <height>HeightForVerticalScrollbarForView</height>
            <onleft>55</onleft>
            <onright>Noop</onright>
        </control>
    </include>
</includes>
