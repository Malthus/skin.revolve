  <variable name="BackgroundColorForEPGTimelineViewForPVR">
    <value condition="Skin.HasSetting(View.EPGColors.Enabled) + String.IsEqual(ListItem.Property(GenreType),16)">$VAR[FademaskColor]</value>
    <value condition="Skin.HasSetting(View.EPGColors.Enabled) + String.IsEqual(ListItem.Property(GenreType),32)">$VAR[FademaskColor]</value>
    <value condition="Skin.HasSetting(View.EPGColors.Enabled) + String.IsEqual(ListItem.Property(GenreType),48)">$VAR[FademaskColor]</value>
    <value condition="Skin.HasSetting(View.EPGColors.Enabled) + String.IsEqual(ListItem.Property(GenreType),64)">$VAR[FademaskColor]</value>
    <value condition="Skin.HasSetting(View.EPGColors.Enabled) + String.IsEqual(ListItem.Property(GenreType),80)">$VAR[FademaskColor]</value>
    <value condition="Skin.HasSetting(View.EPGColors.Enabled) + String.IsEqual(ListItem.Property(GenreType),96)">$VAR[FademaskColor]</value>
    <value condition="Skin.HasSetting(View.EPGColors.Enabled) + String.IsEqual(ListItem.Property(GenreType),112)">$VAR[FademaskColor]</value>
    <value condition="Skin.HasSetting(View.EPGColors.Enabled) + String.IsEqual(ListItem.Property(GenreType),128)">$VAR[FademaskColor]</value>
    <value condition="Skin.HasSetting(View.EPGColors.Enabled) + String.IsEqual(ListItem.Property(GenreType),144)">$VAR[FademaskColor]</value>
    <value condition="Skin.HasSetting(View.EPGColors.Enabled) + String.IsEqual(ListItem.Property(GenreType),160)">$VAR[FademaskColor]</value>
    <value condition="Skin.HasSetting(View.EPGColors.Enabled) + String.IsEqual(ListItem.Property(GenreType),176)">$VAR[FademaskColor]</value>
