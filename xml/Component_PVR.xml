  </variable>

  <include name="ChannelIconForPVR">
    <definition>
      <control type="image">
        <width>70</width>
        <height>70</height>
        <texture colordiffuse="$VAR[MainColor]">elements/circle-mask.png</texture>
      </control>
      <control type="image">
        <posx>3</posx>
        <posy>3</posy>
        <width>64</width>
        <height>64</height>
        <texture colordiffuse="$VAR[BackgroundColor]">elements/circle-mask.png</texture>
      </control>
      <control type="image">
        <posx>3</posx>
        <posy>3</posy>
        <width>64</width>
        <height>64</height>
        <texture diffuse="elements/circle-mask.png" background="true">$VAR[ContentThumbnail]</texture>
        <aspectratio scalediffuse="false" aligny="top">scale</aspectratio>
      </control>
    </definition>
  </include>

  <include name="EPGTimelineViewForPVR">
    <definition>
      <control type="group">
        <visible>Control.IsVisible(10)</visible>
        <include content="BackgroundAnimationForBottomRing" />
      </control>

      <control type="epggrid" id="10">
        <viewtype label="$LOCALIZE[19032]">list</viewtype>
        <animation effect="slide" start="0,1080" end="0,0" time="500">WindowOpen</animation>
        <animation effect="slide" start="0,0" end="0,1080" time="500">WindowClose</animation>

        <posx>40</posx>
        <posy>108</posy>
        <width>1820</width>
        <height>839</height>
        <orientation>vertical</orientation>
        <pagecontrol>70</pagecontrol>
        <scrolltime>200</scrolltime>
        <progresstexture colordiffuse="$VAR[SelectColor]">white.png</progresstexture>
        <timeblocks>24</timeblocks>
        <rulerunit>6</rulerunit>
        <onleft>10</onleft>
        <onright>10</onright>
        <onup condition="!Skin.HasSetting(View.EPGGrid.WrapAround)">9001</onup>
        <onup condition="Skin.HasSetting(View.EPGGrid.WrapAround)">10</onup>
        <onback>50</onback>

        <rulerlayout height="40" width="60">
          <control type="image" id="1">
            <width>60</width>
            <height>40</height>
            <posx>0</posx>
            <posy>0</posy>
            <texture colordiffuse="$VAR[MainColor]" border="20">controls/rectangle-fill.png</texture>
          </control>
          <control type="label" id="2">
            <posx>8</posx>
            <posy>0</posy>
            <width>60</width>
            <height>40</height>
            <align>left</align>
            <font>DetailViewFont</font>
            <textcolor>$VAR[BackgroundColor]</textcolor>
            <label>$INFO[ListItem.Label]</label>
          </control>
        </rulerlayout>
          
        <channellayout height="RowHeightForEPGTimelineViewForPVR" width="480">
          <control type="image">
            <posx>20</posx>
            <posy>0</posy>
            <width>480</width>
            <height>80</height>
            <texture colordiffuse="$VAR[BackgroundColor]" border="20">controls/rectangle-fill.png</texture>
          </control>
          <control type="image">
            <posx>20</posx>
            <posy>0</posy>
            <width>480</width>
            <height>80</height>
            <texture colordiffuse="$VAR[MainColor]" border="20">controls/rectangle-clear.png</texture>
          </control>
          <control type="label">
            <posx>30</posx>
            <posy>10</posy>
            <width>360</width>
            <height>30</height>
            <textcolor>$VAR[TextColor]</textcolor>
            <font>MediumViewFont</font>
            <align>left</align>
            <scroll>false</scroll>
            <label>$INFO[ListItem.ChannelName]</label>
          </control>
          <control type="label">
            <posx>30</posx>
            <posy>40</posy>
            <width>360</width>
            <height>30</height>
            <textcolor>$VAR[TextColor]</textcolor>
            <font>DetailViewFont</font>
            <align>left</align>
            <scroll>false</scroll>
            <label>$INFO[ListItem.ChannelNumberLabel,,. ]</label>
          </control>
          <control type="group">
            <posx>405</posx>
            <posy>5</posy>
            <include content="ChannelIconForPVR" />
          </control>
        </channellayout>
          
        <focusedchannellayout height="RowHeightForEPGTimelineViewForPVR" width="480">
          <control type="image">
            <posx>0</posx>
            <posy>0</posy>
            <width>500</width>
            <height>80</height>
            <texture colordiffuse="$VAR[MainColor]" border="20">controls/rectangle-fill.png</texture>
          </control>
          <control type="label">
            <posx>10</posx>
            <posy>10</posy>
            <width>360</width>
            <height>30</height>
            <textcolor>$VAR[BackgroundColor]</textcolor>
            <font>MediumViewFont</font>
            <align>left</align>
            <label>$INFO[ListItem.ChannelName]</label>
          </control>
          <control type="label">
            <posx>10</posx>
            <posy>40</posy>
            <width>360</width>
            <height>30</height>
            <textcolor>$VAR[BackgroundColor]</textcolor>
            <font>DetailViewFont</font>
            <align>left</align>
            <label>$INFO[ListItem.ChannelNumberLabel,,. ]</label>
          </control>
          <control type="group">
            <posx>405</posx>
            <posy>5</posy>
            <include content="ChannelIconForPVR" />
          </control>
        </focusedchannellayout>

        <itemlayout height="RowHeightForEPGTimelineViewForPVR" width="60">
          <control type="image" id="2">
            <width>60</width>
            <height>80</height>
            <texture colordiffuse="$VAR[MainColorForEPGTimelineViewForPVR]" border="20">controls/rectangle-fill.png</texture>
          </control>
          <control type="image" id="2">
            <posx>4</posx>
            <posy>4</posy>
            <width>52</width>
            <height>72</height>
            <texture colordiffuse="$VAR[BackgroundColorForEPGTimelineViewForPVR]" border="20">controls/rectangle-fill.png</texture>
          </control>

          <control type="label" id="1">
            <posx>8</posx>
            <posy>10</posy>
            <width>44</width>
            <height>30</height>
            <textcolor>$VAR[MainColor]</textcolor>
            <font>MediumViewFont</font>
            <align>left</align>
            <scroll>false</scroll>
            <label>$INFO[ListItem.Label]</label>
          </control>
          <control type="label" id="1">
            <visible>!String.IsEmpty(ListItem.Label)</visible>
            <posx>8</posx>
            <posy>40</posy>
            <width>44</width>
            <height>30</height>
            <textcolor>$VAR[MainColor]</textcolor>
            <font>DetailViewFont</font>
            <align>left</align>
            <scroll>false</scroll>
            <label>$INFO[ListItem.StartTime]$INFO[ListItem.EndTime, - ,]</label>
          </control>
        </itemlayout>
          
        <focusedlayout height="RowHeightForEPGTimelineViewForPVR" width="60">
          <control type="image" id="2">
            <width>60</width>
            <height>80</height>
            <texture colordiffuse="$VAR[MainColorForEPGTimelineViewForPVR]" border="20">controls/rectangle-fill.png</texture>
          </control>
          <control type="image" id="2">
            <posx>4</posx>
            <posy>4</posy>
            <width>52</width>
            <height>72</height>
            <texture colordiffuse="$VAR[MainColor]" border="20">controls/rectangle-fill.png</texture>
          </control>

          <control type="label" id="1">
            <posx>8</posx>
            <posy>10</posy>
            <width>44</width>
            <height>30</height>
            <textcolor>$VAR[BackgroundColor]</textcolor>
            <font>MediumViewFont</font>
            <align>left</align>
            <scroll>true</scroll>
            <label>$INFO[ListItem.Label]</label>
          </control>
          <control type="label" id="1">
            <visible>!String.IsEmpty(ListItem.Label)</visible>
            <posx>8</posx>
            <posy>40</posy>
            <width>44</width>
            <height>30</height>
            <textcolor>$VAR[BackgroundColor]</textcolor>
            <font>DetailViewFont</font>
            <align>left</align>
            <scroll>true</scroll>
            <label>$INFO[ListItem.StartTime]$INFO[ListItem.EndTime, - ,]</label>
          </control>
        </focusedlayout>
      </control>

      <include content="VerticalScrollbarForView">
        <param name="id" value="70" />
        <param name="viewid" value="10" />
      </include>

      <control type="group">
        <visible>Control.IsVisible(10)</visible>
        <control type="group">
          <control type="group">
            <include content="BottomRing" />
          </control>

          <include content="LabelsForBottomRing" />
        </control>
      </control>
    </definition>
  </include>

  <constant name="PosXForChannelGroupLabelForPVR">1900</constant>
  <constant name="PosYForChannelGroupLabelForPVR">70</constant>
  <include name="ChannelGroupLabelForPVR">
    <param name="id" default="29" />
    <param name="posx" default="PosXForChannelGroupLabelForPVR" />
    <param name="posy" default="PosYForChannelGroupLabelForPVR" />
    
    <definition>
      <control type="group">
        <posx>$PARAM[posx]</posx>
        <posy>$PARAM[posy]</posy>
      
        <control type="label" id="$PARAM[id]">
          <visible>false</visible>
        </control>
        <include content="OutlineLabel">
          <param name="width" value="760" />
          <param name="height" value="30" />
          <param name="font" value="MessageTextFont" />
          <param name="textcolor" value="$VAR[SecondaryColor]" />
          <param name="outlinecolor" value="$VAR[BackgroundColor]" />
          <param name="outlinesize" value="2" />
          <param name="align" value="right" />
          <param name="label" value="$INFO[Control.GetLabel($PARAM[id])]" />
        </include>
      </control>
    </definition>
  </include>

  <include name="PreviewForPVR">
    <definition>
      <control type="group">
        <visible>Player.HasVideo + !Skin.HasSetting(Background.Video.Active)</visible>
        <posx>120</posx>
        <posy>260</posy>

        <control type="image">
          <posx>4</posx>
          <posy>4</posy>
          <width>520</width>
          <height>353</height>
          <fadetime>100</fadetime>
          <texture colordiffuse="Black" fallback="white.png">elements/view-mask.png</texture>
          <aspectratio>stretch</aspectratio>
        </control>
        <control type="videowindow">
          <posx>10</posx>
          <posy>10</posy>
          <width>500</width>
          <height>341</height>
        </control>
        <control type="image">
          <width>528</width>
          <height>361</height>
          <fadetime>100</fadetime>
          <texture colordiffuse="$VAR[MainColor]" fallback="white.png">elements/view-thickborder.png</texture>
          <aspectratio>stretch</aspectratio>
        </control>
      </control>
    </definition>
  </include>
</includes>
