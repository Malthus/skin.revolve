    <value condition="Skin.HasSetting(View.EPGColors.Enabled) + String.IsEqual(ListItem.Property(GenreType),64)">$INFO[Skin.String(View.EPGColors.SportsColor)]</value>
    <value condition="Skin.HasSetting(View.EPGColors.Enabled) + String.IsEqual(ListItem.Property(GenreType),80)">$INFO[Skin.String(View.EPGColors.ChildColor)]</value>
