<?xml version="1.0" encoding="UTF-8"?>
<window id="2008">
  <defaultcontrol always="true">6</defaultcontrol>
  <menucontrol>9000</menucontrol>

  <controls>
    <include content="BackdropForDialog">
      <param name="windowid" value="DialogColorPicker.xml" />
    </include>

    <control type="group">
      <posy>PosYForThirteenLinesDialog</posy>
      <include content="FadeAnimationForDialogWindow" />
      <include content="WindowForDialog">
        <param name="height" value="HeightForThirteenLinesDialog" />
        <param name="headerlabel" value="$LOCALIZE[13406]" />
        <param name="icontexture" value="icons/icon-pencil.png" />
      </include>

      <control type="panel" id="6">
        <description>Colour Picker Panel</description>
        <posx>600</posx>
        <posy>80</posy>
        <width>DialogElementWidth</width>
        <height>480</height>
        <onup>6</onup>
        <ondown>6</ondown>
        <onleft>9000</onleft>
        <onright>61</onright>
        <orientation>vertical</orientation>
        <pagecontrol>61</pagecontrol>
        <viewtype label="100">icon</viewtype>

        <itemlayout height="80" width="100">
          <control type="group">
            <width>100</width>
            <height>80</height>

            <control type="image">
              <width>100</width>
              <height>80</height>
              <texture colordiffuse="$VAR[BackgroundColor]" border="20">controls/rectangle-fill.png</texture>
            </control>

            <control type="image">
              <posx>5</posx>
              <posy>5</posy>
              <width>90</width>
              <height>70</height>
              <texture border="0">white.png</texture>
              <colordiffuse>$INFO[ListItem.Label2]</colordiffuse>
              <aspectratio>stretch</aspectratio>
            </control>
          </control>
        </itemlayout>

        <focusedlayout height="80" width="100">
          <control type="group">
            <animation effect="zoom" time="200" start="100" end="110" center="auto">Focus</animation>
            <width>100</width>
            <height>80</height>

            <control type="image">
              <width>100</width>
              <height>80</height>
              <texture colordiffuse="$VAR[MainColor]" border="20">controls/rectangle-fill.png</texture>
            </control>

            <control type="image">
              <posx>5</posx>
              <posy>5</posy>
              <width>90</width>
              <height>70</height>
              <texture border="0">white.png</texture>
              <colordiffuse>$INFO[ListItem.Label2]</colordiffuse>
              <aspectratio>stretch</aspectratio>
            </control>
          </control>
        </focusedlayout>
      </control>

      <control type="scrollbar" id="61">
        <include content="MarkupForScrollbarForDialog">
          <param name="posy" value="80" />
          <param name="height" value="480" />
        </include>
        <onleft condition="Control.IsVisible(6)">6</onleft>
        <onleft condition="!Control.IsVisible(6)">9000</onleft>
      </control>

      <control type="label">
        <posx>560</posx>
        <posy>560</posy>
        <width>DialogElementWidth</width>
        <height>40</height>
        <align>left</align>
        <label>$LOCALIZE[737]: $INFO[Container(6).ListItem.Label,, - ]$INFO[Container(6).ListItem.Label2,#,]</label>
      </control>

      <control type="grouplist" id="9000">
        <include content="MarkupForButtonListForDialog">
          <param name="posy" value="560" />
          <param name="height" value="40" />
        </include>
        <onup>9000</onup>
        <ondown>9000</ondown>
        <onright>6</onright>

        <include content="CancelButtonForDialog">
          <param name="id" value="7" />
        </include>
      </control>
    </control>
  </controls>
</window>
