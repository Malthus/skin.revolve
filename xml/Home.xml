<?xml version="1.0" encoding="UTF-8"?>
<window id="0">
  <defaultcontrol always="true">200</defaultcontrol>

  <controls>
    <include content="GlobalBackground" />

    <control type="wraplist" id="300">
      <description>Invisible Home Wraplist</description>
      <visible allowhiddenfocus="true">Skin.HasSetting(Debug.ListBorder.Visible)</visible>
      <include content="InvisibleListDimensionsForView" />
      <focusposition>1</focusposition>
      <onup>300</onup>
      <ondown>300</ondown>
      <onleft condition="$EXP[NextAiredInCircleItemsVisible] | $EXP[MoviesInCircleItemsVisible] | $EXP[EpisodesInCircleItemsVisible] | $EXP[AlbumsInCircleItemsVisible]">600</onleft>
      <onleft condition="Container(300).HasFocus(20) + Skin.HasSetting(CircleExitMenu.Enable)">900</onleft>
      <onleft condition="!$EXP[NextAiredInCircleItemsVisible] + !$EXP[MoviesInCircleItemsVisible] + !$EXP[EpisodesInCircleItemsVisible] + !$EXP[AlbumsInCircleItemsVisible] + ![Container(300).HasFocus(20) + Skin.HasSetting(CircleExitMenu.Enable)]">9001</onleft>
      <onright>Noop</onright>

      <include content="InvisibleVerticalListItemsForView" />
      <include content="HomeMenuItems" />
    </control>

    <include content="HomeMenuRssFeed" />
    <include content="BackgroundAnimationForHomeRevolveList" />
    <include content="ListForHomeRevolveList" />
    <include content="RingForHomeRevolveList" />
    <include content="BigClock" />

    <control type="group" id="9000">
      <include content="BackgroundForSideMenu" />

      <include content="ButtonListForSideMenu">
        <param name="onright" value="300" />

        <include content="NavigationGroupLabelForSideMenu" />
        <include content="GlobalSearchButtonForSideMenu" />
        <include content="SettingsButtonForSideMenu" />
        
        <include content="KodiControlGroupLabelForSideMenu" />
        <include content="LogoffButtonForSideMenu" />
        <include content="EnterMastermodeButtonForSideMenu" />
        <include content="LeaveMastermodeButtonForSideMenu" />
        <include content="ExitButtonForSideMenu" />
        <include content="RestartButtonForSideMenu" />

        <include content="SystemGroupLabelForSideMenu" />
        <include content="SuspendButtonForSideMenu" />
        <include content="HibernateButtonForSideMenu" />
        <include content="PowerdownButtonForSideMenu" />
        <include content="PowerdownStartTimerButtonForSideMenu" />
        <include content="PowerdownCancelTimerButtonForSideMenu" />
        <include content="RebootButtonForSideMenu" />
      </include>

      <include content="PlayerControlsForSideMenu">
        <param name="onright" value="300" />
      </include>
    </control>

    <include content="GlobalOverlay">
      <param name="buttonid" value="200" />
      <param name="controlid" value="300" />
    </include>
  </controls>
</window>
