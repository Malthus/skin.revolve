<?xml version="1.0" encoding="UTF-8"?>
<includes>
  <expression name="CircleItemsVisible">!String.IsEmpty(Container(300).ListItem.Property(Playlist))</expression>

  <include name="HomeCircleItems">
    <control type="group">
      <visible>$EXP[CircleItemsVisible]</visible>
      <animation effect="fade" start="0" end="100" time="200">Visible</animation>
      <animation effect="fade" start="100" end="0" time="200">Hidden</animation>
      <posx>20</posx>
      <posy>370</posy>

      <control type="fixedlist" id="600">
        <description>Items In Circle Within Home Menu</description>
        <width>812</width>
        <height>662</height>
        <scrolltime>0</scrolltime>
        <onup>600</onup>
        <ondown>600</ondown>
        <onleft>9001</onleft>
        <onright>300</onright>
        <onclick>$VAR[ContentAction]</onclick>

        <itemlayout width="800" height="0">
        </itemlayout>

        <focusedlayout width="800" height="662">
          <description>Items In Circle List</description>

          <control type="group">
            <posx>80</posx>
            <posy>25</posy>

            <include content="CircleIcon">
              <param name="icontexture" value="$VAR[ContentThumbnail]" />
              <param name="iconsize" value="468" />
              <param name="iconoffset" value="6" />
              <param name="backgroundcolor" value="$VAR[BackgroundColor]" />
              <param name="backgroundsize" value="480" />
              <param name="fademaskvisible" value="!Control.HasFocus(600)" />
            </include>
          </control>
        </focusedlayout>

        <content limit="10">$INFO[Container(300).ListItem.Property(Playlist)]</content>
      </control>
      
      <control type="group">
        <visible>Control.HasFocus(600)</visible>
        <animation effect="fade" start="0" end="100" time="200">Visible</animation>
        <animation effect="fade" start="100" end="0" time="200">Hidden</animation>

        <control type="label">
          <posx>0</posx>
          <posy>540</posy>
          <width>740</width>
          <height>40</height>
          <font>BigViewFont</font>
          <textcolor>$VAR[BackgroundColor]</textcolor>
          <align>left</align>
          <scroll>true</scroll>
          <label>$INFO[Container(600).ListItem.Label]</label>
        </control>

        <control type="label">
          <posx>0</posx>
          <posy>580</posy>
          <width>720</width>
          <height>30</height>
          <font>HomeMenuSpecialFont</font>
          <textcolor>$VAR[BackgroundColor]</textcolor>
          <align>left</align>
          <scroll>true</scroll>
          <label>$INFO[Container(600).ListItem.Label2]</label>
        </control>

        <include content="CircleButton">
          <param name="id" value="601" />
          <param name="posx" value="290" />
          <param name="posy" value="0" />
          <param name="width" value="60" />
          <param name="height" value="60" />
          <param name="texturefocus" value="controls/button-channelup.png" />
          <param name="colorfocus" value="$VAR[BackgroundColor]" />
          <param name="texturenofocus" value="controls/button-channelup.png" />
          <param name="colornofocus" value="$VAR[BackgroundColor]" />
          <param name="colorbackground" value="$VAR[TextColor]" />
          <param name="ondown" value="600" />
          <param name="onclick" value="Control.Move(600,-1)" />
        </include>

        <include content="CircleButton">
          <param name="id" value="602" />
          <param name="posx" value="290" />
          <param name="posy" value="470" />
          <param name="width" value="60" />
          <param name="height" value="60" />
          <param name="texturefocus" value="controls/button-channeldown.png" />
          <param name="colorfocus" value="$VAR[BackgroundColor]" />
          <param name="texturenofocus" value="controls/button-channeldown.png" />
          <param name="colornofocus" value="$VAR[BackgroundColor]" />
          <param name="colorbackground" value="$VAR[TextColor]" />
          <param name="onup" value="600" />
          <param name="onclick" value="Control.Move(600,1)" />
        </include>
      </control>
    </control>
  </include>
</includes>
