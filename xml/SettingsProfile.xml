<?xml version="1.0" encoding="UTF-8"?>
<window>
  <defaultcontrol always="false">200</defaultcontrol>
  <menucontrol>9001</menucontrol>

  <controls>
    <include content="GlobalBackground" />

    <control type="group">
      <include content="BackgroundAnimationForSettings" />

      <control type="group">
        <include content="WindowAnimationForSettings" />

        <control type="radiobutton" id="4">
          <description>Enable Login Screen Radiobutton</description>
          <posx>700</posx>
          <posy>100</posy>
          <width>1100</width>
          <align>left</align>
          <label>$LOCALIZE[20096]</label>
          <onup>2</onup>
          <ondown>5</ondown>
          <onleft>9403</onleft>
        </control>

        <control type="button" id="5">
          <description>Auto Login Button</description>
          <posx>700</posx>
          <posy>140</posy>
          <width>1100</width>
          <align>left</align>
          <label>$LOCALIZE[33084] $INFO[System.ProfileAutoLogin]</label>
          <onup>4</onup>
          <ondown>2</ondown>
          <onleft>9403</onleft>
        </control>

        <control type="list" id="2">
          <description>Logins List</description>
          <posx>700</posx>
          <posy>220</posy>
          <width>1100</width>
          <height>800</height>
          <onup>5</onup>
          <ondown>4</ondown>
          <onleft>9403</onleft>

          <itemlayout height="70">
            <include content="ItemForProfileListForSettings" />
          </itemlayout>
            
          <focusedlayout height="70">
            <control type="group">
              <visible>Control.HasFocus(2)</visible>
              <include content="ItemForProfileListForSettings">
                <param name="backgroundcolor" value="$VAR[MainColor]" />
                <param name="textcolor" value="$VAR[BackgroundColor]" />
              </include>
            </control>
            <control type="group">
              <visible>!Control.HasFocus(2)</visible>
              <include content="ItemForProfileListForSettings" />
            </control>
          </focusedlayout>
        </control>
      </control>
      
      <include content="CleanLeftRingForSettings" />
    </control>
    
    <control type="group" id="9000">
      <visible>Player.HasMedia</visible>
      <include content="BackgroundForSideMenu">
        <param name="leftside" value="true" />
      </include>

      <include content="ButtonListForSideMenu">
        <param name="onright" value="4" />
      </include>

      <include content="PlayerControlsForSideMenu">
        <param name="onright" value="4" />
      </include>
    </control>

    <include content="GlobalOverlay">
      <param name="buttonid" value="200" />
      <param name="controlid" value="4" />
    </include>
  </controls>
</window>
