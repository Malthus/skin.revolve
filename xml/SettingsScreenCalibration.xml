<?xml version="1.0" encoding="UTF-8"?>
<window id="11">
    <defaultcontrol always="true">8</defaultcontrol>

    <controls>
        <control type="videowindow" id="20">
            <include content="FullscreenDimensions" />
        </control>

        <control type="mover" id="8">
            <description>Top Left Mover</description>
            <posx>0</posx>
            <posy>0</posy>
            <width>128</width>
            <height>128</height>
            <texturefocus colordiffuse="$VAR[HighlightColor]">controls/mover-topleft.png</texturefocus>
            <texturenofocus colordiffuse="$VAR[BackgroundColor]">controls/mover-topleft.png</texturenofocus>
		    <movingspeed acceleration="180" maxvelocity="300" resettimeout="200" delta="1">
				<eventconfig type="up" />
				<eventconfig type="down" />
				<eventconfig type="left" />
				<eventconfig type="right" />
			</movingspeed>
        </control>

